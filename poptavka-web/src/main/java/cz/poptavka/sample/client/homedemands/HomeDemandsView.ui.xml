<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
        xmlns:d="urn:import:cz.poptavka.sample.client.user.demands.widget">

    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>
    <ui:style>
    .name {
      font-weight: bold;
      width: auto;
    }

    .panel {
      width: 400px;
      spacing: 5;
    }

    .list {
      width: 100px;
    }
    </ui:style>

    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="800">
            <g:ScrollPanel>
                <g:HTMLPanel>
                    <table width="100%">
<!--                        <tr>
                            <td>
                                <g:HorizontalPanel ui:field="filterPanel" styleName="{style.panel}">
                                    <g:Label styleName="{style.name}">
                                        <ui:msg key="filter">Filter:</ui:msg>
                                    </g:Label>
                                    <g:ListBox ui:field="category" styleName="{style.list}" />
                                    <g:ListBox ui:field="locality" styleName="{style.list}" />
                                </g:HorizontalPanel>
                            </td>
                        </tr>-->
                        <tr>
                            <td>
                                <g:ScrollPanel>
                                    <c:DataGrid ui:field='dataGrid' />
                                </g:ScrollPanel>
                            </td>
                        </tr>
                        <tr>
                            <td align="center">
                                <c:SimplePager ui:field='pager' />
                                <g:ListBox ui:field='pageSize'/>
                            </td>
                        </tr>

                    </table>

                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:HTMLPanel>
                    <g:VerticalPanel>
                        <g:Label ui:field="bannerLabel">Tu bude banner :)</g:Label>
                        <g:SimplePanel ui:field="demandDetailPanel">
                            <d:DemandDetailView ui:field="demandDetail"/>
                        </g:SimplePanel>
                    </g:VerticalPanel>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>

</ui:UiBinder>
