<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />

    <g:DockLayoutPanel unit="EM" styleName='{res.layout.fullSize}'>
        <g:west size="15">
            <g:HTMLPanel>
                <!-- Client submenu -->
                <div class='{res.layout.submenuHeader}'>
                    Menu Client
                </div>
                <ul class='{res.layout.submenuList}'>
                    <li>
                        <g:Button ui:field="cliNewDemands">
                            <ui:msg key="myDemands">My Demands</ui:msg>
                        </g:Button>
                    </li>
                    <li>
                        <g:Button ui:field="cliOffers">
                            ** INACTIVE **
                            <ui:msg key="offers">Offers</ui:msg>
                        </g:Button>
                    </li>
                    <li><g:Button ui:field="cliAssignedDemands">
                            ** INACTIVE **
                            <ui:msg key="assignedDemands">Assigned Demands</ui:msg>
                        </g:Button>
                    </li>
                    <li><g:Button ui:field="cliCreateDemand">
                            <ui:msg key="createDemandLink">Create Demand</ui:msg>
                        </g:Button>
                    </li>
                    <li><g:Button ui:field="cliCreateSupplier">
                            <ui:msg key="createSupplierLink">Create supplier</ui:msg>
                        </g:Button>
                    </li>
                    <li>
                        <g:Button ui:field="allDemands">
                            <ui:msg key="allDemandsLink">All Demands</ui:msg>
                        </g:Button>
                    </li>
                    <li>
                    <g:Button ui:field="allSuppliers">
                            <ui:msg key="allSuppliersLink">All Suppliers</ui:msg>
                        </g:Button>
                    </li>
                </ul>
                <!-- Supplier submenu -->
                <div ui:field="supMenu" style="display: block;">
                    <div class='{res.layout.submenuHeader}'>
                        Menu Supplier
                    </div>
                    <ul class='{res.layout.submenuList}'>
                        <li>
                            <g:Button ui:field="supNewDemands">
                                <ui:msg key="potentialDemands">Potential Demands</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supOffers">
                                ** INACTIVE **
                                <ui:msg key="offers">Offers</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supAssignedDemands">
                                ** INACTIVE **
                                <ui:msg key="assignedDemands">Assigned Demands</ui:msg>
                            </g:Button>
                        </li>
                    </ul>
                </div>
            </g:HTMLPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel styleName='{res.layout.demandTabContent}'>
                <g:SimplePanel ui:field="contentPanel">
                    <g:HTML>
                        <center>
                            <h1>Welcome Screen</h1>
                        </center>
                        This is the initial page.
                        <br />
                        <br />
                        <strong>Features:</strong>
                        <ul>
                            <li>feature</li>
                            <li>feature</li>
                            <li>feature</li>
                            <li>feature</li>
                            <li>feature</li>
                        </ul>
                    </g:HTML>
                </g:SimplePanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
