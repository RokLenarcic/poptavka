<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
            font-weight: bold;
            font-style: italic;
        }
        .rangeBox {
            width: 30px;
            margin-right:10px;
            margin-left:10px;
        }
        .margin {
            
        }
        .searchMainContent {
            width: 200px;
        } 
    </ui:style>
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
        
    <g:HTMLPanel>
        <div>
            <ul>
                <li>
                    <g:Label>Star</g:Label>
                </li>
                <li>
                    <g:CheckBox ui:field="isStar"/>
                </li>
                <li>
                    <g:Label>Sender</g:Label>
                </li>
                <li>
                    <g:TextBox ui:field="sender"/>
                </li>
                <li>
                    <g:Label>Title</g:Label>
                </li>
                <li>
                    <g:TextBox ui:field="title"/>
                </li>
                <li>
                    <g:Label>Urgent</g:Label>
                </li>
                <li>
                    <g:ListBox ui:field="urgent"/>
                </li>
                <li>
                    <g:Label>Rating</g:Label>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="from">from</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.rangeBox}" ui:field="ratingFrom"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="to">to</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.rangeBox}" ui:field="ratingTo"/>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <g:Label>Pricr</g:Label>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="from">from</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.rangeBox}" ui:field="priceFrom"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="to">to</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.rangeBox}" ui:field="priceTo"/>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <g:Label>Created</g:Label>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="from">from</ui:msg>
                                    </g:Label>
                                    <p1:DateBox ui:field="createdFrom"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="to">to</ui:msg>
                                    </g:Label>
                                    <p1:DateBox ui:field="createdTo"/>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                    </table>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
