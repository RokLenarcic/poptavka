<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <!-- injecting style resources -->
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
<!--    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />-->

    <g:SplitLayoutPanel styleName='{res.layout.fullSize}' ui:field="split">
        <g:north size="300" >
            <g:ScrollPanel>
                <g:VerticalPanel>
                    <g:FlowPanel ui:field="path" />
                    <g:HorizontalPanel ui:field="panel" />
                </g:VerticalPanel>
            </g:ScrollPanel>
        </g:north>
        <g:center >
            <g:ScrollPanel>
                <g:HTMLPanel>
                    <table width="100%">
                        <tr>
                            <td>
                                <g:HorizontalPanel>
                                    <g:Label>Filter by locality: </g:Label>
                                    <g:ListBox ui:field="localityList" />
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <c:CellList ui:field="list" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <c:SimplePager ui:field="pager" />
                            </td>
                        </tr>
                    </table>                        
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>