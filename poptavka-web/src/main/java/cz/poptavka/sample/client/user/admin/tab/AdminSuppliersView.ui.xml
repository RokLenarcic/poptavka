<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>


    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <ui:style>
    .cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
    }
    </ui:style>
    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="700">
            <g:DockLayoutPanel unit="PX">
                <g:south size="50">
                    <g:HorizontalPanel>
                        <g:Button ui:field="refresh">Refresh</g:Button>
                        <g:Button ui:field="commit">Commit changes</g:Button>
                        <g:Button ui:field="rollback">Rollback changes</g:Button>
                        <g:Label>Suppliers changed: </g:Label>
                        <g:Label ui:field="changesLabel"></g:Label>
                    </g:HorizontalPanel>
                </g:south>
                <g:south size="35">
                    <g:HorizontalPanel>
                        <c:SimplePager ui:field='pager' />
                        <g:ListBox ui:field='pageSizeCombo' />
                    </g:HorizontalPanel>
                </g:south>
                <g:center>
                    <c:DataGrid addStyleNames='{style.cellTable}' ui:field='dataGrid' />
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:SimplePanel ui:field="adminSupplierDetail"></g:SimplePanel>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>


