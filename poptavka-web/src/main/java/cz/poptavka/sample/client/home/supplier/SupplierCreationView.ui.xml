<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cl="urn:import:cz.poptavka.sample.client.main.common.locality"
    xmlns:cm="urn:import:cz.poptavka.sample.client.main.common" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <!-- injecting style resources -->
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <g:StackLayoutPanel ui:field='mainPanel' height="100%">
        <g:stack>
            <g:header size="30">
                1.
                <ui:msg key="supplierRegistrationInfo">Supplier Registration</ui:msg>
            </g:header>
            <g:DockLayoutPanel unit="EM" height="100%">
                <g:south size="4">
                    <cm:StatusIconLabel ui:field='basicStatus'
                        style='{res.common.infoMessage}' message='{text.basicMessage}'
                        description='{text.basicDescription}' />
                </g:south>
                <g:center>
                    <g:SimplePanel ui:field="supplierInfoHolder" />
                </g:center>
            </g:DockLayoutPanel>
        </g:stack>
        <g:stack>
            <g:header size="30">
                2.
                <ui:msg key="catsSelection">Category selection</ui:msg>
            </g:header>
            <g:DockLayoutPanel unit="EM" height="100%">
                <g:south size="4">
                    <cm:StatusIconLabel ui:field='categoryStatus'
                        style='{res.common.infoMessage}' message='{text.catMessage}'
                        description='{text.catDescription}' />
                </g:south>
                <g:center>
                    <g:SimplePanel ui:field="categoryHolder" />
                </g:center>
            </g:DockLayoutPanel>
        </g:stack>
        <g:stack>
            <g:header size="30">
                3.
                <ui:msg key="locsSelection">Locality selection</ui:msg>
            </g:header>
            <g:DockLayoutPanel unit="EM" height="100%">
                <g:south size="4">
                    <cm:StatusIconLabel ui:field='localityStatus'
                        style='{res.common.infoMessage}' message='{text.locMessage}'
                        description='{text.locDescription}' />
                </g:south>
                <g:center>
                    <g:SimplePanel ui:field="localityHolder" />
                </g:center>
            </g:DockLayoutPanel>
        </g:stack>
        <g:stack>
            <g:header size="30">
                4.
                <ui:msg key="serviceSelection">Service Selection</ui:msg>
            </g:header>
            <g:DockLayoutPanel unit="EM" height="100%">
                <g:south size="4">
                    <cm:StatusIconLabel ui:field='serviceStatus'
                        style='{res.common.infoMessage}' message='{text.advMessage}'
                        description='{text.advDescription}' />
                </g:south>
                <g:center>
                    <g:HTMLPanel>
                        <g:SimplePanel ui:field="serviceHolder" />
                        <ui:msg key="agreement">Agreement</ui:msg>
                        <g:Anchor ui:field="conditionLink">
                            <ui:msg key="conditions">Conditions</ui:msg>
                        </g:Anchor>
                        <br />
                        <g:Button ui:field="registerBtn">
                            <ui:msg key="registerSupplier">Register Supplier</ui:msg>
                        </g:Button>
                        <hr />
                        <g:SimplePanel ui:field="tableHolder" />
                        <hr />
                    </g:HTMLPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:stack>
    </g:StackLayoutPanel>

</ui:UiBinder>
