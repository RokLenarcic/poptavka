<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:cm="urn:import:cz.poptavka.sample.client.main.common"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
    >

    <!-- injecting style resources -->
    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages'/>

    <g:SplitLayoutPanel>
        <g:north size="600">
        <g:StackLayoutPanel ui:field='mainPanel' height="100%">
            <g:stack>
                <g:header size="30">
                    1. <ui:msg key="demandCreationTitle">Demand Creation</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='basicStatus' style='{res.common.infoMessage}'
                            message='{text.basicMessage}' description='{text.basicDescription}' />
                    </g:south>
                    <g:center>
                        <g:SimplePanel ui:field="basicInfoHolder"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    2. <ui:msg key="catsSelection">Category selection</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='categoryStatus' style='{res.common.infoMessage}'
                            message='{text.catMessage}' description='{text.catDescription}' />
                    </g:south>
                    <g:center>
                        <g:SimplePanel ui:field="categoryHolder"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    3. <ui:msg key="locsSelection">Locality selection</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='localityStatus' style='{res.common.infoMessage}'
                            message='{text.locMessage}' description='{text.locDescription}' />
                    </g:south>
                    <g:center>
                        <g:SimplePanel ui:field="localityHolder"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    4. <ui:msg key="demandAdvInfo">Demand Advanced Info</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='advStatus' style='{res.common.infoMessage}'
                            message='{text.advMessage}' description='{text.advDescription}' />
                    </g:south>
                    <g:center>
                        <g:SimplePanel ui:field="advInfoHolder"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    5. <ui:msg key="loginOrRegister">Log in or register</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" ui:field='userFormPanel'>
                    <g:north size="20">
                        <g:SimplePanel ui:field="userFormHolder"/>
                    </g:north>
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='userStatus' style='{res.common.infoMessage}'
                            message='{text.loginMessage}' description='{text.loginDescription}' />
                    </g:south>
                    <g:center>
                        <g:HTMLPanel>
                            <div style="margin-left: 200px;">
                                <br />
                                <g:Button ui:field="demandCreateBtn" visible="false">
                                    <ui:msg key='regAndCreate'>Register and Create</ui:msg>
                                </g:Button>
                            </div>
                        </g:HTMLPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
        </g:StackLayoutPanel>
        </g:north>
        <g:center>
            <g:HTMLPanel styleName='{res.layout.fullSize}'>
                Empty
                <g:Button>Button</g:Button>
            </g:HTMLPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
