<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d="urn:import:cz.poptavka.sample.client.user.messages">
    <ui:style>
        .important {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:SimplePanel ui:field="detailHolder">
            <g:HTML>
                <center>
                    <h2>Demand Detail window</h2>
                    <p>
                        Click on demand to show demand.
                    </p>
                </center>
            </g:HTML>
        </g:SimplePanel>
        <d:UserConversationPanel ui:field="conversationPanel"/>
        <g:SimplePanel ui:field="replyHolder" />
    </g:HTMLPanel>
</ui:UiBinder>
