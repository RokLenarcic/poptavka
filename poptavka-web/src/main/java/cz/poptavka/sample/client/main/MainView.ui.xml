<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <g:DockLayoutPanel ui:field="layoutMaster" styleName="{res.layout.layoutPublic}" unit="EM">
        <g:north size="4">
            <g:HTMLPanel ui:field='headerHolder' styleName='{res.layout.headerContainer}'>
                <div id="loginArea" class='{res.layout.loginArea}' >
                    <g:Anchor ui:field="loginButton" ><ui:msg key="logIn">Log In</ui:msg></g:Anchor>
                    <a href="#"><ui:msg key="help">Help</ui:msg></a>
                    <a href="#"><ui:msg key="about">About</ui:msg></a>
                    <br />
                    Current locale: <ui:msg key="locDef">Default</ui:msg>
                </div>
            </g:HTMLPanel>
        </g:north>
        <g:south size="5">
            <g:HTMLPanel ui:field='footerHolder' styleName='{res.layout.footerContainer}'>
                 TODO: REPLACE footer - will be hardcoded in host page - BUT no more - pure GWT layout design
            </g:HTMLPanel>
        </g:south>
        <g:center>
            <g:SimplePanel ui:field='bodyHolder' styleName='{res.layout.bodyContainer}'>

            </g:SimplePanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
