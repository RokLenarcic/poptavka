<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <ui:style>
        .login-area {
            float: right;
            border-bottom: thin black solid;
        }
    </ui:style>

    <g:HTMLPanel ui:field="layoutMaster" styleName="{res.cssBase.layoutContainer}">

        <g:HTMLPanel ui:field='headerHolder' styleName='{res.cssBase.headerContainer}'>
            <div id="loginArea" class='{style.login-area}' >
                <g:Anchor ui:field="loginButton" ><ui:msg key="logIn">Log In</ui:msg></g:Anchor>
                <a href="#"><ui:msg key="help">Help</ui:msg></a>
                <a href="#"><ui:msg key="about">About</ui:msg></a>
                <br />
                Current locale: <ui:msg key="locDef">Default</ui:msg>
            </div>
        </g:HTMLPanel>

        <g:SimplePanel ui:field='bodyHolder' styleName='{res.cssBase.bodyContainer}'>
            <!-- ony one child widget allowed -->
            <!-- designed for root child view  -->
        </g:SimplePanel>
<!--
        <g:HTMLPanel ui:field='footerHolder' styleName='{res.cssBase.footerContainer}'>
             TODO: REPLACE footer - will be hardcoded in host page
        </g:HTMLPanel>
-->
    </g:HTMLPanel>
</ui:UiBinder>
