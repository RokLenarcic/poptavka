<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>
    <ui:style>
    .important {
      font-weight: bold;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel>
            <g:VerticalPanel>
                <g:FlexTable ui:field="infoTable"/>
                <g:Label text="Popis:" />
                <g:TextArea ui:field="textArea" width="320px" height="50px"/>
            </g:VerticalPanel>
            <g:VerticalPanel>
        <!--  <p1:CellList ui:field="cellList" /> -->
                <g:Hyperlink ui:field="linkAttachment" styleName='{res.layout.homeMenu}'>
                    <ui:msg key="getAttachment">Get attachment</ui:msg>
                </g:Hyperlink>
            </g:VerticalPanel>
            <g:VerticalPanel>
<!--        <g:Label ui:field="label1" text="Reagovat?" />-->
                <g:Hyperlink ui:field="linkLogin" styleName='{res.layout.homeMenu}'>
                    <ui:msg key="sign">Sign</ui:msg>
                </g:Hyperlink>
<!--        <g:Label ui:field="label2" text="Not in system?" />-->
                <g:Hyperlink ui:field="linkRegister" styleName='{res.layout.homeMenu}'>
                    <ui:msg key="register">Register</ui:msg>
                </g:Hyperlink>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
