<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>


    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <ui:style>
    .cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
    }
    </ui:style>

    <g:DecoratorPanel>
        <g:HTMLPanel>
            <table cellspacing='0' cellpadding='0'>
                <tr>
                    <td valign='top'>
                        <c:DataGrid addStyleNames='{style.cellTable}' pageSize='15' ui:field='dataGrid' />
                    </td>
                </tr>
                <tr>
                    <td  align='left'>
                        <g:HorizontalPanel>
                            <g:Button ui:field="refresh">Refresh</g:Button>
                            <g:Button ui:field="commit">Commit</g:Button>
                            <g:Button ui:field="rollback">Rollback</g:Button>
                            <g:Label>Demands changed: </g:Label>
                            <g:Label ui:field="changesLabel"></g:Label>
                            <g:Button ui:field="addRow">Add row</g:Button>
                            <g:Button ui:field="deleteRow">Delete row</g:Button>
                        </g:HorizontalPanel>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
    </g:DecoratorPanel>
</ui:UiBinder>


