<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res'
		type='cz.poptavka.sample.client.resources.StyleResource' />

    <ui:style>
		.important {
			font-weight: bold;
		}

		.background {
			background-color: red;
		}
    </ui:style>
    <g:DecoratorPanel>
        <g:HorizontalPanel>
            <g:HTMLPanel styleName="style.background">
                <div ui:field="homeMenu">
                    <ul ui:field="menuList">
                        <li>
                            <g:Button ui:field="home" styleName='{res.layout.homeMenu}'>Home
<!--							<ui:msg key="homeLink">Home</ui:msg>-->
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="demands" styleName='{res.layout.homeMenu}'>Demands
<!--							<ui:msg key="demands">Demands</ui:msg>-->
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="suppliers" styleName='{res.layout.homeMenu}'>Suppliers
<!--							<ui:msg key="suppliers">Suppliers</ui:msg>-->
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="createSupplier" styleName='{res.layout.homeMenu}'>Create Supplier
<!--							<ui:msg key="createSupplier">createSupplier</ui:msg>-->
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="createDemand" styleName='{res.layout.homeMenu}'>Create Demands
<!--							<ui:msg key="createDemand">createDemand</ui:msg>-->
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="page1" styleName='{res.layout.homeMenu}'>page1
<!--							<ui:msg key="createDemand">createDemand</ui:msg>-->
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="page2" styleName='{res.layout.homeMenu}'>page2
<!--							<ui:msg key="createDemand">createDemand</ui:msg>-->
                            </g:Button>
                        </li>
                    </ul>
                </div>
            </g:HTMLPanel>
        </g:HorizontalPanel>
    </g:DecoratorPanel>
</ui:UiBinder>