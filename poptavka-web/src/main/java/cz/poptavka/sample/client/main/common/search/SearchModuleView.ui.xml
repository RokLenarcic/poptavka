<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
            font-weight: bold;
            font-style: italic;
        }
    </ui:style>
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
    <g:DecoratorPanel>
        <g:HTMLPanel ui:field="container">
            <div ui:field="searchMenu">
                <g:HorizontalPanel>
                    <g:TextBox ui:field="searchContent">
                        <ui:msg key="searchContent">Search...</ui:msg>
                    </g:TextBox>
                    <g:TextBox ui:field="searchCategory" width="100px">
                        <ui:msg key="searchCategory">Category...</ui:msg>
                    </g:TextBox>
                    <g:TextBox ui:field="searchLocality" width="100px">
                        <ui:msg key="searchLocality">Locality...</ui:msg>
                    </g:TextBox>
                    <g:Button ui:field="advSearchBtn">Advanced</g:Button>
                    <g:Button ui:field="searchBtn">
                        <ui:msg key="search">Search</ui:msg>
                    </g:Button>
                </g:HorizontalPanel>
                <g:PopupPanel ui:field="popupPanel"/>
            </div>
        </g:HTMLPanel>
    </g:DecoratorPanel>
</ui:UiBinder>
