<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>


    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <ui:style>
    .cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
    }
    </ui:style>
    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="650">
            <g:ScrollPanel>

<!--            <g:FlowPanel>-->
<!--                <g:HorizontalPanel>
                    <g:HTML>
                        <ui:msg key="offers">Offers</ui:msg>
                    </g:HTML>
                    <g:Button ui:field='answerBtn' enabled="false">
                        <ui:msg key="answer">Answer</ui:msg>
                    </g:Button>
                    <g:Button ui:field='refuseBtn' enabled="false">
                        <ui:msg key="refuse">Refuse</ui:msg>
                    </g:Button>
                    <g:Button ui:field='acceptBtn' enabled="false">
                        <ui:msg key="accept">Accept</ui:msg>
                    </g:Button>
                </g:HorizontalPanel>-->
                <g:DecoratorPanel>
                    <g:HTMLPanel>
                        <table cellspacing='0' cellpadding='0'>
                            <tr>
                                <td valign='top'>
                                    <g:ScrollPanel>
                                        <c:CellTable addStyleNames='{style.cellTable}' pageSize='15' ui:field='cellTable' />
                                    </g:ScrollPanel>
                                </td>
                            </tr>
                            <tr>
                                <td align='center'>
                                    <c:SimplePager ui:field='pager' />
                                </td>
                            </tr>
                        </table>

                    </g:HTMLPanel>
                </g:DecoratorPanel>

<!--            </g:FlowPanel>-->
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <g:SimplePanel ui:field="adminOfferDetail"></g:SimplePanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>


