<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:d="urn:import:cz.poptavka.sample.client.home.demands.demand">
      
    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>
    <ui:style>
    .name {
      font-weight: bold;
      width: auto;
    }

    .panel {
      width: 400px;
      spacing: 5;
    }

    .list {
      width: 100px;
    }
    </ui:style>
        
    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="600">
            
            <g:HTMLPanel>
                <table width="100%">
                    <tr>
                        <td>
                            <g:HorizontalPanel ui:field="filterPanel" styleName="{style.panel}">
                                <g:Label styleName="{style.name}">
                                    <ui:msg key="filter">Filter:</ui:msg>
                                </g:Label>
                                <g:ListBox ui:field="category" styleName="{style.list}" />
                                <g:ListBox ui:field="locality" styleName="{style.list}" />
                            </g:HorizontalPanel>                    
                                <c:CellTable pageSize='15' ui:field='cellTable' />
                        </td>
                    </tr>
                    <tr>
                        <td align="center">
                            <c:SimplePager ui:field='pager' />
                        </td>
                    </tr>
                </table>                        
            </g:HTMLPanel>
            
        </g:west>
        <g:center>
            <g:HTMLPanel>
                <g:VerticalPanel>
                    <g:Label ui:field="demandDetailLabel">
                        <ui:msg key="demandDetail">Demand detail:</ui:msg>
                    </g:Label>
                    <d:DemandView ui:field="demandView"/>
                    <g:Label ui:field="bannerLabel">Tu bude banner :)</g:Label>
                </g:VerticalPanel>
            </g:HTMLPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
