<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
        xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'>

    <ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555;
		}

		.label {
			font-weight: bold;
		}

		.decorationPanel {
			width: 100%;
		}

		.titleBox {
			width: 100%;
			height: 55px;
		}

		.descriptionBox {
			width: 100%;
			height: 150px;
		}

		.priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
			{

		}
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <g:HTMLPanel>
                <table style="width: 100%;">
                    <tr>
                        <td colspan='2' align='center' class='{style.header}'>
                            <ui:msg key='contactInfoFormTitle'>Demand Info</ui:msg>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class='{style.label}'>
                            <ui:msg key='title'>Title:</ui:msg>
                            <g:TextArea ui:field='titleBox' styleName='{style.titleBox}' />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class='{style.label}'>
                            <ui:msg key='description'>Description:</ui:msg>
                            <g:TextArea ui:field='descriptionBox' styleName='{style.descriptionBox}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='price'>Price:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='priceBox' styleName='{style.priceBox}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='endDate'>End Date:</ui:msg>
                        </td>
                        <td>
                            <d:DateBox ui:field='endDateBox' styleName='{style.endDateBox}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='expiration'>Expiration:</ui:msg>
                        </td>
                        <td>
                            <d:DateBox ui:field='expirationBox' styleName='{style.expirationBox}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='clientID'>ClientID:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='clientID' styleName='{style.clientID}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='maxOffers'>Max Offers:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='maxOffers' styleName='{style.maxOffers}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='minRating'>MinRating:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='minRating' styleName='{style.minRating}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='demandType'>Demand Type:</ui:msg>
                        </td>
                        <td>
                            <g:ListBox ui:field='demandType' styleName='{style.demandType}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='demandStatus'>Demand Status:</ui:msg>
                        </td>
                        <td>
                            <g:ListBox ui:field='demandStatus' styleName='{style.demandStatus}' />
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
<!--                        <ui:msg key='demandCategoryList'>Category List</ui:msg>-->
                            <g:Label>Category List</g:Label>
                        
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <g:ListBox ui:field = "categoryList" visibleItemCount='5' width="330px"/>
                                <g:Button ui:field='editCatBtn'>
                                    <ui:msg key='demandCategoryList'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel ui:field = "editCatPanel">
                                <g:Label ui:field="catPath"/>
                                <g:HorizontalPanel>
                                    <g:ListBox ui:field = "editCatList1" visibleItemCount='10' width = '330' />
                                </g:HorizontalPanel>
                                <g:HorizontalPanel>
                                    <g:Button ui:field = "rootCatBtn">Root</g:Button>
                                    <g:Button ui:field = "backCatBtn">Back</g:Button>
                                    <g:Button ui:field = "finnishCatBtn">Finnish</g:Button>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
<!--                        <ui:msg key='demandLocalityList'>Locality List</ui:msg>-->
                            <g:Label>Locality List</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <g:ListBox ui:field = "localityList" visibleItemCount='5'/>
                                <g:Button ui:field='editLocBtn'>
                                    <ui:msg key='demandLocalityList'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr> 
                    <tr>
                        <td colspan="2">
                            <g:VerticalPanel ui:field="editLocPanel">
                                <g:Label ui:field="locPath"/>
                                <g:HorizontalPanel>
                                    <g:ListBox ui:field = "editLocList1" visibleItemCount='10' width = '150'/>
                                    <g:ListBox ui:field = "editLocList2" visibleItemCount='10' width = '150'/>
                                </g:HorizontalPanel>
                                <g:HorizontalPanel>
                                    <g:Button ui:field = "rootLocBtn">Root</g:Button>
                                    <g:Button ui:field = "backLocBtn">Back</g:Button>
                                    <g:Button ui:field = "finnishLocBtn">Finnish</g:Button>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td colspan='2' align='center'>
                            <g:Button ui:field='updateButton'>
                                <ui:msg key='demandDetailFormUpdateButton'>Update Demand</ui:msg>
                            </g:Button>
						&nbsp;
                            <g:Button ui:field='createButton'>
                                <ui:msg key='demandDetailFormCreateButton'>Create Demand</ui:msg>
                            </g:Button>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:ScrollPanel>
    </g:DecoratorPanel>
</ui:UiBinder>
