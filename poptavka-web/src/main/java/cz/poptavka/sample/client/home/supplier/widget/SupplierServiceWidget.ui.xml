<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:cc="urn:import:cz.poptavka.sample.client.main.common">

    <!-- injecting style resources -->
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />


    <g:HTMLPanel>
        <table>
            <tr>
                <th>
                    <ui:msg key="serviceType">Service Type</ui:msg>
                </th>
                <th>
                    <ui:msg key="serviceDuration">Duration</ui:msg>
                </th>
                <th>
                    <ui:msg key="price">Price</ui:msg>
                </th>
            </tr>
            <tr>
                <td>
                    <g:RadioButton name="service" ui:field="serviceOne"
                        styleName="" />
                    <cc:SimpleIconLabel imageResource='{res.images.starBronze}'
                        message='{text.serviceOne}' description='{text.serviceOneDescription}'
                        inline="true" />
                </td>
                <td>
                    1
                    <ui:msg key="month">month</ui:msg>
                </td>
                <td>
                    1000
                    <ui:msg key="currency">$</ui:msg>
                </td>
            </tr>
            <tr>
                <td>
                    <g:RadioButton name="service" ui:field="serviceTwo" />
                    <cc:SimpleIconLabel imageResource='{res.images.starSilver}'
                        message='{text.serviceTwo}' description='{text.serviceTwoDescription}'
                        inline="true" />
                </td>
                <td>
                    3
                    <ui:msg key="fewMonths">months</ui:msg>
                </td>
                <td>
                    2000
                    <ui:msg key="currency">$</ui:msg>
                </td>
            </tr>
            <tr>
                <td>
                    <g:RadioButton name="service" ui:field="serviceThree" />
                    <cc:SimpleIconLabel imageResource='{res.images.starGold}'
                        message='{text.serviceThree}' description='{text.serviceThreeDescription}'
                        inline="true" />
                </td>
                <td>
                    12
                    <ui:msg key="months">months</ui:msg>
                </td>
                <td>
                    3000
                    <ui:msg key="currency">$</ui:msg>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
