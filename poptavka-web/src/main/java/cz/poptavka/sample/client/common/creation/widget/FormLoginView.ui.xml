<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:HTML><ui:msg key="email">E-mail</ui:msg></g:HTML>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="mailBox">mail@domena.cz</g:TextBox>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:HTML><ui:msg key="pass">Password</ui:msg></g:HTML>
                </g:customCell>
                <g:customCell>
                    <g:PasswordTextBox ui:field="passBox">heslo</g:PasswordTextBox>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:HTML></g:HTML>
                </g:customCell>
                <g:customCell>
                    <g:Button ui:field="loginBtn"><ui:msg key="loginBtn">Login &amp; Create Demand</ui:msg></g:Button>
                </g:customCell>
            </g:row>
        </g:Grid>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:HTML visible="false" ui:field="errorMsg">
                        <strong><ui:msg key="error">Wrong username/password</ui:msg></strong>
                    </g:HTML>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Button ui:field="registerBtn"><ui:msg key="registerBtn">Register for FREE</ui:msg></g:Button>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:HTMLPanel>
</ui:UiBinder>
