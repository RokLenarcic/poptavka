<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:cm="urn:import:cz.poptavka.sample.client.main.common"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <ui:style>
        .clickable {
            cursor: pointer;
        }

        .clickable div:hover {
            background-color: #EEE;
        }

        .hiddenField {
            display: none;
        }
    </ui:style>
    <g:HTMLPanel>
        <table>
            <tr>
                <td>
                    <table>
                        <tr>
                            <td>
                                <ui:msg key="demandTitle">Title</ui:msg>
                            </td>
                            <td>
                                <g:TextBox ui:field="titleBox" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <ui:msg key="price">Price</ui:msg>
                            </td>
                            <td>
                                <g:LongBox ui:field="priceBox" />
                            </td>
                        </tr>
                    </table>
                </td>

                <td>
                    <table>
                        <tr>
                            <td>
                                <ui:msg key="endDate">End Date</ui:msg>
                            </td>
                            <td>
                                <p1:DateBox ui:field="finishDateBox" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <ui:msg key="expireDate">Expire Date</ui:msg>
                            </td>
                            <td>
                                <p1:DateBox ui:field="expireDateBox" />
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

        <strong><ui:msg key="description">Description</ui:msg></strong>
        <br />
        <g:TextArea ui:field="descriptionBox"/>
        <br />
        <ui:msg key="attachment">Attachment</ui:msg>
        <g:FileUpload />

    </g:HTMLPanel>
</ui:UiBinder>
