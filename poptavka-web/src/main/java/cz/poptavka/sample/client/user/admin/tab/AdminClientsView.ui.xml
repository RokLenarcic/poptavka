<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:detail="urn:import:cz.poptavka.sample.client.user.admin.tab"
  xmlns:d="urn:import:cz.poptavka.sample.client.user.widget.detail">

    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="700">
            <g:DockLayoutPanel unit="PX">
                <g:north size="50">
                    <g:HorizontalPanel>
                        <g:Button ui:field="refresh">Refresh</g:Button>
                        <g:Button ui:field="commit">Commit changes</g:Button>
                        <g:Button ui:field="rollback">Rollback changes</g:Button>
                        <g:Label>Clients changed: </g:Label>
                        <g:Label ui:field="changesLabel"></g:Label>
                    </g:HorizontalPanel>
                </g:north>
                <g:south size="35">
                    <g:HorizontalPanel>
                        <c:SimplePager ui:field='pager' />
                        <g:ListBox ui:field='pageSizeCombo' />
                    </g:HorizontalPanel>
                </g:south>
                <g:center>
                    <c:DataGrid ui:field='dataGrid' />
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <detail:AdminClientInfoView ui:field="adminClientDetail"/>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>


