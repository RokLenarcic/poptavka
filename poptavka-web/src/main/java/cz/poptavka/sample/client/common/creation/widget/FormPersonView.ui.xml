<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:Grid>
        <g:row>
            <g:customCell>
                <g:VerticalPanel>
                    <g:HTML horizontalAlignment="ALIGN_CENTER">
                        <ui:msg key="accInfo">Account Info</ui:msg>
                    </g:HTML>
                    <g:Grid>
                        <g:row>
                            <g:customCell>
                                <g:HTML wordWrap="true">
                                    <ui:msg key="emailLogin">E-mail</ui:msg>
                                    <span style="color: red;">*</span>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="mailBox">novy@user.cz</g:TextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML wordWrap="true">
                                    <ui:msg key="pass">Password</ui:msg>
                                    <span style="color: red;">*</span>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:PasswordTextBox ui:field="passBox">heslo</g:PasswordTextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML wordWrap="true">
                                    <ui:msg key="passRepeat">Password Again</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:PasswordTextBox ui:field="passConfirmBox">heslo</g:PasswordTextBox>
                            </g:customCell>
                        </g:row>
                    </g:Grid>
                </g:VerticalPanel>
            </g:customCell>
            <g:customCell>
                <g:VerticalPanel>
                    <g:HTML wordWrap="true" horizontalAlignment="ALIGN_CENTER">
                        <ui:msg key="contactPerson">Contact Person</ui:msg>
                    </g:HTML>
                    <g:Grid>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="name">Name</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="nameBox">Meno</g:TextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="lastName">Last Name</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="surnameBox">Priezvisko</g:TextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="phone">Phone</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="phoneBox">123456789</g:TextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="website">Your Website</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="websiteBox">www.sss.zzz</g:TextBox>
                            </g:customCell>
                        </g:row>
                    </g:Grid>
                </g:VerticalPanel>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:VerticalPanel>
                    <g:HTML wordWrap="true" horizontalAlignment="ALIGN_CENTER">
                        <ui:msg key="address">Address</ui:msg>
                    </g:HTML>
                    <g:Grid>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="street">Street</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="streetBox">ulica</g:TextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="city">City</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="cityBox">Brno</g:TextBox>
                            </g:customCell>
                        </g:row>
                        <g:row>
                            <g:customCell>
                                <g:HTML>
                                    <ui:msg key="zipcode">Zipcode</ui:msg>
                                </g:HTML>
                            </g:customCell>
                            <g:customCell>
                                <g:TextBox ui:field="zipBox">60200</g:TextBox>
                            </g:customCell>
                        </g:row>
                    </g:Grid>
                </g:VerticalPanel>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>
