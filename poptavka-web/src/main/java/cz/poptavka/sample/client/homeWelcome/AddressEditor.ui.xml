<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .error {
            color: red;
        }
    </ui:style>
    <g:HTMLPanel>
        <h2>GWT Validation test</h2>
        <table>
            <tr>
                <td>State:</td>
                <td>
                    <g:TextBox ui:field="state"/>
                </td>	
                <td>
                    <g:Label styleName="{style.error}" ui:field="errorLabelState"/>
                </td>
            </tr>
            <tr>
                <td>City:</td>
                <td>
                    <g:TextBox ui:field="city"/>
                </td>
                <td>
                    <g:Label styleName="{style.error}" ui:field="errorLabelCity"/>
                </td>
            </tr>
            <tr>
                <td>Street:</td>
                <td>
                    <g:TextBox ui:field="street"/>
                </td>
                <td>
                    <g:Label styleName="{style.error}" ui:field="errorLabelStreet"/>
                </td>
            </tr>
            <tr>
                <td>Zip:</td>
                <td>
                    <g:TextBox ui:field="zip"/>
                </td>
                <td>
                    <g:Label styleName="{style.error}" ui:field="errorLabelZip"/>
                </td>
            </tr>
            <tr>
                <td>
                    <g:Button ui:field="submit" text="submit"/>
                </td>
                <td align="right">
                    <g:Button ui:field="clear" text="clear"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
	
</ui:UiBinder> 