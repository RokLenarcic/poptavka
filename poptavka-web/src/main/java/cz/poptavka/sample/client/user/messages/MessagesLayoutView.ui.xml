<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />

    <g:DockLayoutPanel unit="EM" styleName='{res.layout.fullSize}'>
        <g:west size="15">
            <g:HTMLPanel>
<!--                <div>
                    Menu Client
                </div>-->
                <ul>
                    <li>
                        <g:Hyperlink ui:field="inboxLink">
                            <ui:msg key="inbox">Inbox</ui:msg>
                        </g:Hyperlink>
                    </li>
                    <li>
                        <g:Hyperlink ui:field="sentLink">
                            <ui:msg key="sent">Sent</ui:msg>
                        </g:Hyperlink>
                    </li>
                    <li>
                        <g:Hyperlink ui:field="trashLink">
                            <ui:msg key="trash">Trash</ui:msg>
                        </g:Hyperlink>
                    </li>
                </ul>
            </g:HTMLPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:SimplePanel ui:field="contentPanel">
                    <g:HTML>
                        <center>
                            <h1>Welcome Screen</h1>
                        </center>
                        This is the initial page for messages tab.
                        <br />
                    </g:HTML>
                </g:SimplePanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
