        </ui:style>
    <g:HTMLPanel>
        <div class="{style.reply-message}">
            <div ui:field="header" class="{style.reply-message-header}" style="background-color: #CDCDCD">
                <span style="text-align: center;">
                    <ui:msg key="clickMe">Click to Respond</ui:msg>
                </span>
            </div>
            <div style="display: none;">
                <!-- reply arrow -->
                <!-- <div> -->
                <!-- <div class="{style.reply-message-arrow-border}"></div> -->
                <!-- <div class="{style.reply-message-arrow}"></div> -->
                <!-- </div> -->
                <!-- Message composition content -->
                <div>
                    <div style="float: right; height: 100%; width: 85px;">
                        <g:Anchor ui:field="submitBtn">
                            <ui:msg key="submit">Submit</ui:msg>
                        </g:Anchor>
                        <g:Anchor ui:field="cancelBtn">
                            <ui:msg key="submit">Submit</ui:msg>
                        </g:Anchor>
                    </div>
                    <g:TextArea ui:field="replyTextArea" styleName="{style.text-area}" />
                    <g:DisclosurePanel>
                        <g:header>
                            <ui:msg key="advancedOptions">Advanced Options</ui:msg>
                        </g:header>
                        <g:HTML>content</g:HTML>
                    </g:DisclosurePanel>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
