<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style ui:field="style"
        type="cz.poptavka.sample.client.user.messages.ReplyWindow.ReplyStyle">
            .reply-message {
                background-color: white;
                border: 2px solid #666666;
                margin: 10px auto;
                padding: 5px;
                position: relative;
                margin-top: -15px;
                -moz-border-radius: 10px;
                -webkit-border-radius: 10px;
                -moz-box-shadow: 0 0 5px #888888;
                -webkit-box-shadow: 0 0 5px #888888;
                border-radius: 10px;
            }

            .reply-message-header {
                background-color: white;
                cursor: pointer;
                cursor: hand;
                border-radius: 5px;
                -webkit-box-top-left-radius: 7px;
                -webkit-box-top-right-radius: 7px;
                -moz-border-topleft-radius: 7px;
                -moz-border-topright-radius: 7px;
                height: 20px;
                padding-bottom: 2px;
            }

            .text-area {
                width: 100%;
                border: 0;
                margin-right: 90px;
                font-family: inherit;
            }

