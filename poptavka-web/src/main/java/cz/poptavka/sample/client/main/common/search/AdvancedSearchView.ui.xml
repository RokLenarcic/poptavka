<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
            font-weight: bold;
            font-style: italic;
        }
        .ratingBox {
            width: 30px;
            margin-right:10px;
            margin-left:10px;
        }
        .priceBox {
            width: 30px;
            margin-right:10px;
            margin-left:10px;
        }
        .margin {
            
        }
        .searchMainContent {
            width: 200px;
        }
    </ui:style>
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
        
    <g:HTMLPanel ui:field="container">
        <g:HorizontalPanel ui:field="demandPanel">
            <g:VerticalPanel>
                <g:HTMLPanel>
                    <table>
<!--                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="searchIn">Search in</ui:msg>
                                </g:Label>
                            </td>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:ToggleButton ui:field="demandBtn">In Demands</g:ToggleButton>
                                    <g:ToggleButton ui:field="supplierBtn">In Suppliers</g:ToggleButton>
                                </g:HorizontalPanel>
                            </td>
                        </tr>-->
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="demandText">Demand Title:</ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:TextBox ui:field="demandContent" styleName="{style.searchMainContent}">
                                    <ui:msg key="searchContent">search...</ui:msg>
                                </g:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="price">Price:</ui:msg>
                                </g:Label>
                            </td>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="priceFrom">from</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.priceBox}" ui:field="priceFrom"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="priceTo">to</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.priceBox}" ui:field="priceTo"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="currency">$</ui:msg>
                                    </g:Label>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="demandType">Demand Type:</ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:ListBox ui:field="demandTypes" />
                            </td>
                        </tr>
<!--                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="categories">Categories: </ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:ListBox ui:field="category" />
                            </td>
                        </tr>
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="localities">Localities: </ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:ListBox ui:field="locality" />
                            </td>
                        </tr>-->
                    </table>
                </g:HTMLPanel>
            </g:VerticalPanel>    
            <g:VerticalPanel>
                <g:HTMLPanel>
                    <table>
                        
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="finnishDate">Finnish date:</ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <p1:DateBox ui:field="finnishDate" />
                            </td>
                        </tr>
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="creationDate">Creation date:</ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:ListBox ui:field="creationDate" />
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:HorizontalPanel>
        <g:HorizontalPanel  ui:field="supplierPanel">
            <g:VerticalPanel>
                <g:HTMLPanel>
                    <table>
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="supplierName">Company name:</ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:TextBox ui:field="supplierContent" styleName="{style.searchMainContent}">
                                    <ui:msg key="searchContent">search...</ui:msg>
                                </g:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="rating">Rating:</ui:msg>
                                </g:Label>
                            </td>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="ratingFrom">from</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.ratingBox}" ui:field="ratingFrom"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="ratingTo">to</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.ratingBox}" ui:field="ratingTo"/>
                                    <g:Label styleName="{style.margin}">%</g:Label>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:VerticalPanel>    
            <g:VerticalPanel>
                <g:HTMLPanel>
                    <table>
                        
                        <tr>
                            <td width="200">
                                <g:Label>
                                    <ui:msg key="supplierDescription">Supplier description:</ui:msg>
                                </g:Label>
                            </td>
                            <td>
                                <g:TextBox ui:field="supplierDescription" />
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
