<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'>

	<ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555;
		}
		
		.label {
			font-weight: bold;
		}
		
		.decorationPanel {
			width: 100%;
		}
		
		.titleBox {
			width: 100%;
			height: 55px;
		}
		
		.descriptionBox {
			width: 100%;
			height: 150px;
		}
		
		.priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
			{
			
		}
	</ui:style>

	<g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
		<g:HTMLPanel>
			<table style="width: 100%;">
				<tr>
					<td colspan='2' align='center' class='{style.header}'>
						<ui:msg key='contactInfoFormTitle'>My Profile</ui:msg>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='commonInfo'>Common info:</ui:msg>
					</td>
					<td />
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='companyName'>Name:</ui:msg>
					</td>
					<td colspan='2'>
						<g:TextBox ui:field='companyName' styleName='{style.titleBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='overalRating'>Client rating:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='clientRating' styleName='{style.priceBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='supplierRating'>Supplier rating:</ui:msg>
					</td>
					<td colspan='2'>
						<g:TextBox ui:field='supplierRating' styleName='{style.titleBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='address'>Address</ui:msg>
					</td>
					<td />
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='street'>Street:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='street' styleName='{style.endDateBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='city'>City:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='city' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='zipCode'>Zip code:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='zipCode' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='categories'>Categories(only suppliers):</ui:msg>
					</td>
					<td />
				</tr>
				<tr>
					<td colspan='2'>
						<g:TextArea ui:field='categoriesBox' styleName='{style.descriptionBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='localities'>Localities(only suppliers):</ui:msg>
					</td>
					<td />
				</tr>
				<tr>
					<td colspan='2'>
						<g:TextArea ui:field='localitiesBox' styleName='{style.descriptionBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='contactPerson'>Contact person:</ui:msg>
					</td>
					<td />
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='web'>Web site:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='web' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='email'>Email:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='email' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='phone'>Phone:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='phone' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='firstName'>First name:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='firstName' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='lastName'>Last name:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='lastName' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='billingDetails'>Billing details:</ui:msg>
					</td>
					<td />
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='identificationNumber'>Identification number:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='identificationNumber' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='taxNumber'>Tax number:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='taxNumber' styleName='{style.expirationBox}' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='description'>Description:</ui:msg>
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<g:TextArea ui:field='descriptionBox' styleName='{style.descriptionBox}' />
					</td>
				</tr>
				<tr>
					<td colspan='2' align='center'>
						<g:Button ui:field='updateButton'>
							<ui:msg key='demandDetailFormUpdateButton'>Update Profile</ui:msg>
						</g:Button>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DecoratorPanel>
</ui:UiBinder>
