<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <!-- injecting style resources -->
    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />
<!--    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />-->

    <g:VerticalPanel>
        <g:HorizontalPanel ui:field="root" />
        <g:HTMLPanel ui:field="child">
            <g:FlowPanel ui:field="path" />
            <g:HorizontalPanel>
                <c:CellList ui:field = "categoriesList" width="300px"/>
            <!--<g:SplitLayoutPanel styleName='{res.layout.fullSize}' ui:field="split">
                <g:west size="300" >-->
                <g:ScrollPanel>
                    <g:HTMLPanel>
                        <table width="600px">
                            <tr>
                                <td>
                                    <g:HorizontalPanel>
                                        <g:Label>Filter by locality: </g:Label>
                                        <g:ListBox ui:field="localityList" />
                                    </g:HorizontalPanel>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <c:CellTable ui:field="cellTable" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <c:SimplePager ui:field="pager" />
                                    <g:ListBox ui:field='pageSizeCombo'/>
                                </td>
                            </tr>
                        </table>                        
                    </g:HTMLPanel>
                </g:ScrollPanel>
                <!--</g:west>
                <g:center >
                    <g:ScrollPanel>-->
                <g:VerticalPanel>
                    <g:Label ui:field="reklama" >Reklama</g:Label>
                    <g:ScrollPanel>
                    <g:HTMLPanel ui:field="detail">
                        <table>
                            <tr>
                                <td width="200">
                                    <g:Label>
                                        <ui:msg key="comapanyName">Company name: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="companyName"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="type">Business type: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="businessType"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="identification">Identification number:</ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="identificationNumber"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="ranking">Overall rating:</ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="overallRating"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="certified">Certified: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="certified"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="firstName">First name:</ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="firstName"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="lastName">Last name: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="lastName"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="phone">Phone: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="phone"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="email">Email: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="email"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="addresses#">Addresses: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="addresses"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="description">Description: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextArea ui:field="description"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="verification">Verification: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="verification"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="localities">Localities: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:ListBox ui:field="localities"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="categories">Categories: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:ListBox ui:field="categories"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="services">Services: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="services"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>
                                        <ui:msg key="bsuRoles">BsuRoles: </ui:msg>
                                    </g:Label>
                                </td>
                                <td>
                                    <g:TextBox ui:field="bsuRoles"/>
                                </td>
                            </tr>
                        </table>
                    </g:HTMLPanel>
                    </g:ScrollPanel>
                </g:VerticalPanel>
                    <!--</g:ScrollPanel>
                </g:center>
            </g:SplitLayoutPanel>-->
            </g:HorizontalPanel>
        </g:HTMLPanel>
    </g:VerticalPanel>
</ui:UiBinder>