<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:cc="urn:import:cz.poptavka.sample.client.common.creation.widget"
    xmlns:cl="urn:import:cz.poptavka.sample.client.common.locality"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
    >

    <!-- injecting style resources -->
    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <g:SplitLayoutPanel>
        <g:north size="600">
        <g:StackLayoutPanel ui:field='mainPanel' height="100%">
            <g:stack>
                <g:header size="30">
                    1. <ui:msg key="demandCreationTitle">Demand Creation</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="3">
                        <g:HTML>Validation message</g:HTML>
                    </g:south>
                    <g:center>
                        <g:SimplePanel ui:field="basicInfoHolder"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    2. <ui:msg key="catsSelection">Category selection</ui:msg>
                </g:header>
                <g:SimplePanel ui:field="categoryHolder"/>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    3. <ui:msg key="locsSelection">Locality selection</ui:msg>
                </g:header>
                <g:SimplePanel ui:field="localityHolder"/>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    4. <ui:msg key="demandAdvInfo">Demand Advanced Info</ui:msg>
                </g:header>
                <g:SimplePanel ui:field="advInfoHolder"/>
            </g:stack>
            <g:stack>
                <g:header size="30">
                    5. <ui:msg key="loginOrRegister">Log in or register</ui:msg>
                </g:header>
                <g:DockLayoutPanel unit="EM" ui:field='userFormPanel'>
                    <g:north size="20">
                        <g:SimplePanel ui:field="userFormHolder"/>
                    </g:north>
                    <g:center>
                        <g:FlowPanel>
                            <g:Button ui:field="demandCreateBtn" >
                                <ui:msg key='regAndCreate'>Register and Create</ui:msg>
                            </g:Button>
                        </g:FlowPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:stack>
        </g:StackLayoutPanel>
        </g:north>
        <g:center>
            <g:HTML>HaHaHa :)</g:HTML>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
