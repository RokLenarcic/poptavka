<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:cc="urn:import:cz.poptavka.sample.client.common.creation.widget"
    xmlns:cl="urn:import:cz.poptavka.sample.client.common.locality"
    xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
    >

    <!-- injecting style resources -->
    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <ui:style>
        .clickable {
            cursor: pointer;
        }
        .clickable div:hover {
            background-color: #EEE;
        }
        .hiddenField {
            display: none;
        }
    </ui:style>

    <g:AbsolutePanel width="600px" height="460px" ui:field='absolutePanel' styleName='{res.cssBase.solidBackground}'>
        <g:at left="0" top="0">
        <!-- STEP ONE -->
            <g:VerticalPanel ui:field="stepOne">
                <g:HTML styleName='{style.clickable}'><div><strong>#1 Demand Description</strong></div></g:HTML>
                <g:SimplePanel ui:field="basicInfoHolder"/>
                    <g:HTMLPanel>
                        <div style="position:absolute; bottom: 0px; right: 0px;">
                        <g:HorizontalPanel>
                            <g:Cell verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_RIGHT">
                                <g:Button ui:field="btnOneNext">Next</g:Button>
                            </g:Cell>
                        </g:HorizontalPanel>
                        </div>
                    </g:HTMLPanel>
            </g:VerticalPanel>
        </g:at>
        <!-- STEP TWO -->
        <g:at left="0" top="465">
            <g:VerticalPanel ui:field="stepTwo" width="600px" height="440px" styleName='{res.cssBase.solidBackground}'>
                <g:HTML styleName='{style.clickable}'><div><strong>#2 Category selection</strong></div></g:HTML>
                <g:SimplePanel ui:field="categoryHolder"/>
                <g:Cell verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_RIGHT">
                    <g:HTMLPanel>
                    <g:HorizontalPanel>
                        <g:Button ui:field="btnTwoBack">Back</g:Button>
                        <g:Button ui:field="btnTwoNext">Next</g:Button>
                    </g:HorizontalPanel>
                </g:HTMLPanel>
                </g:Cell>
            </g:VerticalPanel>
        </g:at>
        <!-- STEP THREE -->
        <g:at left="0" top="465">
            <g:VerticalPanel height="420px" ui:field="stepThree" width="600px" styleName='{res.cssBase.solidBackground}'>
                <g:HTML styleName='{style.clickable}'><div><strong>#3 Locality selection</strong></div></g:HTML>
                <g:SimplePanel ui:field="localityHolder"/>
                <!-- <cl:LocalitySelectorView ui:field="localityWidget"/> -->
                <g:Cell verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_RIGHT">
                    <g:HTMLPanel>
                        <g:HorizontalPanel>
                            <g:Button ui:field="btnThreeBack">Back</g:Button>
                            <g:Button ui:field="btnThreeNext">Next</g:Button>
                        </g:HorizontalPanel>
                    </g:HTMLPanel>
                </g:Cell>
            </g:VerticalPanel>
        </g:at>
        <!-- STEP FOUR -->
        <g:at left="0" top="465">
            <g:VerticalPanel height="400px" width="600px" ui:field="stepFour" styleName='{res.cssBase.solidBackground}'>
                <g:HTML styleName='{style.clickable}'><div><strong>#4 Rozsirene moznosti nastavenia poptavky</strong></div></g:HTML>
                <g:SimplePanel ui:field="advInfoHolder"/>
                <g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM">
                    <g:HTMLPanel>
                        <g:HorizontalPanel>
                            <g:Button ui:field="btnFourBack">Back</g:Button>
                            <g:Button ui:field="btnFourNext">Next</g:Button>
                        </g:HorizontalPanel>
                    </g:HTMLPanel>
                </g:Cell>
            </g:VerticalPanel>
        </g:at>
        <!-- STEP FIVE -->
        <g:at left="0" top="465">
            <g:VerticalPanel ui:field="stepFive" width="600px" height="380px" styleName='{res.cssBase.solidBackground}' >
                <g:HTML styleName='{style.clickable}'><div><strong>#5 Prihlasenie do systemu / Registracia noveho uzivatela</strong></div></g:HTML>
                <g:Cell verticalAlignment="ALIGN_TOP">
                  <g:SimplePanel ui:field="userFormHolder"></g:SimplePanel>
                </g:Cell>
                <g:Cell verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_RIGHT">
                    <g:HTMLPanel>
                    <g:HorizontalPanel>
                        <g:Button ui:field="btnFiveBack">Back</g:Button>
                        <g:Button ui:field="btnFiveRegAndCreate">Register &smp; Create</g:Button>
                    </g:HorizontalPanel>
                </g:HTMLPanel>
                </g:Cell>
            </g:VerticalPanel>
        </g:at>
    </g:AbsolutePanel>
</ui:UiBinder>
