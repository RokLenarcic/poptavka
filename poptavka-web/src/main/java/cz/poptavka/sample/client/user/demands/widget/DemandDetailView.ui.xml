<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            font-weight: bold;
            font-style: italic;
        }
    </ui:style>
    <g:HTMLPanel>
        <h2 ui:field='titleHeader'></h2>
        <div>
            Description:
            <p ui:field='descArea'></p>
        </div>
        <span class="{style.important}" ui:field="typeSpan" />
    </g:HTMLPanel>
</ui:UiBinder>
