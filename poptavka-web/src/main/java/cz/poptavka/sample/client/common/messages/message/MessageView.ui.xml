<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:p="urn:import:cz.poptavka.sample.client.common.messages.message">
  <ui:style>
    .important {
      font-weight: bold;
    }
  </ui:style>
  <g:HTMLPanel>

    <p:MyHorizontalPanel ui:field="panelHeader" width="1000px">
      <g:Image ui:field="logo" width="16px" height="16px" />
      <g:Label ui:field="from" text="UserName" width="150px" />
      <g:Label ui:field="shortText" width="500px"/>
      <g:Label ui:field="date"/>
    </p:MyHorizontalPanel>

    <g:DisclosurePanel ui:field="panelBody">
      <g:VerticalPanel>
        <g:VerticalPanel ui:field="messageText" width="500px"/>
        <g:HorizontalPanel ui:field="panelFooter">
          <g:Button ui:field="buttonSend">Send</g:Button>
          <g:Button ui:field="buttonDiscard">Discard</g:Button>
        </g:HorizontalPanel>
      </g:VerticalPanel>
    </g:DisclosurePanel>
  </g:HTMLPanel>
</ui:UiBinder>
