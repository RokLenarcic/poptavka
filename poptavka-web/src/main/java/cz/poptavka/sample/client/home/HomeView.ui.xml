<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res'
        type='cz.poptavka.sample.client.resources.StyleResource' />

    <g:HTMLPanel ui:field="container">
        <!-- menu -->
        <div ui:field="homeMenu">
            <ul ui:field="menuList">
                <li>
                    <g:Hyperlink ui:field="linkHome" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="homeLink">Home</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkCreateDemand" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="createDemandLink">Create Demand</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkDisplayDemands" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="displayDemandsLink">Display Demands</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkDisplaySuppliers" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="displaySuppliersLink">Display Suppliers</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkRegisterSupplier" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="registerSupplier">Register Supplier</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Button ui:field="demands" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="demands">Demands</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="suppliers" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="suppliers">Suppliers</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="createSupplier" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="createSupplier">createSupplier</ui:msg>
                    </g:Button>
                </li>
            </ul>
        </div>
        <!-- menu END -->


        <g:HTMLPanel>
            <g:ScrollPanel>
                <g:SimplePanel ui:field="contentHolder" />

            </g:ScrollPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
