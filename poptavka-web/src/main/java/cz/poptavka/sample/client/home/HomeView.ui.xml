<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='cz.poptavka.sample.client.resources.StyleResource'/>

    <g:HTMLPanel ui:field="container">
        <!-- menu -->
        <div ui:field="homeMenu">
            <ul ui:field="menuList">
                <li>
                    <g:Hyperlink ui:field="linkHome" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="homeLink">Home</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkCreateDemand" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="createDemandLink">Create Demand</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkDisplayDemands" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="displayDemandsLink">Display Demands</ui:msg>
                    </g:Hyperlink>
                </li>
                <li>
                    <g:Hyperlink ui:field="linkRegisterSupplier" styleName='{res.layout.homeMenu}'>
                        <ui:msg key="registerSupplier">Register Supplier</ui:msg>
                    </g:Hyperlink>
                </li>
            </ul>
        </div>
        <!-- menu END -->
        <g:SimplePanel ui:field="contentHolder"/>
    </g:HTMLPanel>
</ui:UiBinder>
