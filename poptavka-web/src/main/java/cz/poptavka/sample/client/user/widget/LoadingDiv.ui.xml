<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">

    <ui:style>
        .border {
            position: absolute;
            top: 0px;
            right: 0px;
            bottom: 0px;
            left: 0px;
            height: 50px;
        }

        .loader {
            position: absolute;
            width: 100%;
            height: 100%;
            background: url(images/loader-transparent.gif) center center no-repeat;
        }
    </ui:style>
    <div ui:field="loading" class="{style.border}">
        <div class="{style.border}"
            style="background-color: #000; opacity: 0.3; filter: alpha(opacity=30);">
        </div>
        <div class="{style.border} {style.loader}"></div>
    </div>
</ui:UiBinder>
