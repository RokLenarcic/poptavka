<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            font-weight: bold;
        }
    </ui:style>

    <g:Grid>
        <g:row>
            <g:customCell>
                <g:HTML><ui:msg key="maxOffersCount">Max offers Count</ui:msg></g:HTML>
            </g:customCell>
            <g:customCell>
                <g:IntegerBox ui:field="maxOffersBox">10</g:IntegerBox>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:HTML><ui:msg key="minRating">Minimal rating</ui:msg></g:HTML>
            </g:customCell>
            <g:customCell>
                <g:IntegerBox ui:field="minRatingBox">0</g:IntegerBox>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:HTML><ui:msg key="exclude">Exclude supplier</ui:msg></g:HTML>
            </g:customCell>
            <g:customCell>
                <g:SuggestBox/>
            </g:customCell>
            <g:customCell>
                <g:Button ui:field="excludeBtn"><ui:msg key="excludeBtn">Exclude him</ui:msg></g:Button>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:Label width="70"><ui:msg key="excludedList">List of excluded suppliers</ui:msg></g:Label>
            </g:customCell>
            <g:customCell>
                <g:ListBox ui:field="excludedList" visibleItemCount="5" width="148px"/>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:HTML><ui:msg key="demandType">Demand Type</ui:msg></g:HTML>
            </g:customCell>
            <g:customCell>
                <g:VerticalPanel>
                    <g:RadioButton name="demandType" ui:field="classicRadio" checked="true" ><ui:msg key="classicType">Normal Demand</ui:msg></g:RadioButton>
                    <g:RadioButton name="demandType" ui:field="attractiveRadio" ><ui:msg key="attractiveType">Attractive Demand</ui:msg></g:RadioButton>
                </g:VerticalPanel>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>
