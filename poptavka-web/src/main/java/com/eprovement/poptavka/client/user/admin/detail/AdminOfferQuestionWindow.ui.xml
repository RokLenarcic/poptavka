<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <ui:with field="res" type="com.eprovement.poptavka.resources.StyleResource" />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

        
    <b:FluidContainer styleName="{res.detailViews.wrapper}">
        <!-- Message composition content -->
        <b:FluidRow ui:field="messageBodyRow" styleName="{res.detailViews.messageContainer}" visible="false">
            <b:Column size="12">
                <b:FluidRow>                        
                    <b:Column size="12">
                        <cm:ValidationMonitor ui:field="bodyMonitor">
                            <g:TextArea styleName="{res.detailViews.replyTextArea} conversation-input" />
                        </cm:ValidationMonitor>
                    </b:Column>
                </b:FluidRow>
            </b:Column>
        </b:FluidRow>
        <b:FluidRow ui:field="messageButtonsRow" addStyleNames="{res.detailViews.messageButtonsContainer}" visible="false">
            <b:Column size="12">
                <g:Button ui:field="submitBtn" styleName='{res.detailViews.replyButton}'>                            
                    <img src="images/messages-submit-icon.png"/>
                    <ui:msg key="commonBtnSubmit">Submit</ui:msg>                            
                </g:Button>
                <g:Button ui:field="cancelBtn" styleName='{res.detailViews.closeButton}'>
                    <ui:msg key="commonBtnClose">Close</ui:msg>
                </g:Button>
            </b:Column>
        </b:FluidRow>
        <!-- Message display content -->
        <b:FluidRow ui:field="messagePanel" addStyleNames='{res.detailViews.conversationDetail}'>
            <b:Column size="12">
                <g:HTMLPanel styleName='{res.detailViews.conversationLeftBlock}'>
                    <g:Label ui:field='sender' styleName='{res.detailViews.conversationDetailHeader}'/>
                    <g:Label ui:field='sent' styleName='{res.detailViews.conversationDetailTime}'/>
                </g:HTMLPanel>
                <g:HTMLPanel styleName='{res.detailViews.conversationDetailContent}'>
                    <g:Label ui:field='body' />
                </g:HTMLPanel>
            </b:Column>
        </b:FluidRow>
        <!-- Message actions content -->
        <b:FluidRow ui:field="header" styleName="{res.detailViews.messageButtonsContainer}">
            <b:Column size="12">
                <g:Button styleName='{res.detailViews.replyButton}' ui:field="questionReplyBtn"
                          title="{msgs.tooltipReply}">
                    <img src="images/messages-reply-icon.png"/>
                    <ui:msg key="commonBtnQuestion">Question</ui:msg>
                </g:Button>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
