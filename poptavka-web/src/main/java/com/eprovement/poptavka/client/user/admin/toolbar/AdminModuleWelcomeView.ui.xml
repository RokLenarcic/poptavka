<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource'/>

    <g:ScrollPanel styleName='{res.initial.scrollContainer}'>
        <b:FluidContainer addStyleNames='{res.common.wellContainer} {res.common.formFields} {res.layout.dashboard}'>
            <b:FluidRow>
                <b:Column size="4" addStyleNames='{res.initial.expandOnSmall}'>
                    <b:FluidRow addStyleNames='well-header'>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="recentNews">Recent News</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow addStyleNames='well-content'>
                        <b:Column size="12">
                            <b:FluidRow ui:field="myDemandsRow">
                                <b:Column size="12">
                                    <g:HTML addStyleNames='label-list'>
                                        Not implemented yet
                                    </g:HTML>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:Column>
                
                <b:Column size="8" addStyleNames='{res.initial.expandOnSmall}'>
                    <b:FluidRow addStyleNames='well-header'>
                        <b:Column size="12">
                            <b:Heading size="4">
                                Quick Guide to Admin Menu
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow addStyleNames='well-content'>
                        <b:Column size="12" addStyleNames='well-padding'>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <g:Label addStyleNames='pull-left'>
                                        New Projects
                                    </g:Label>
                                    <g:Label styleName='description'>
                                        Newly added projects that has to be revised and approved.
                                    </g:Label>
                                </b:Column>
                            </b:FluidRow>

                            <b:FluidRow>
                                <b:Column size="12">
                                    <g:Label addStyleNames='pull-left'>
                                        Active Projects
                                    </g:Label>
                                    <g:Label styleName='description'>
                                        New, approved projects visible on Projects page.
                                    </g:Label>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>
    </g:ScrollPanel>
</ui:UiBinder>


