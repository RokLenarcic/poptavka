<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with type="com.eprovement.poptavka.client.resources.StyleResource"
        field="css"></ui:with>

    <g:HTMLPanel styleName="{css.message.wrapper}">
        <div class="{css.message.message}">
            <div ui:field="header" class="{css.message.messageHeader}">
                <table style="vertical-align: top; width: 100%; margin-right: 30px;">
                    <tbody>
                        <tr ui:field="headerTable">
                            <td style="font-weight: bolder; white-space: nowrap"></td>
                            <td style="color: #ADADAD; height: 20px; white-space: nowrap">
                                <table style="table-layout: fixed; width: 100%;"
                                    cellspacing="0" cellpadding="0">
                                    <tr>
                                        <td>
                                            <div ui:field="messagePreview"
                                                style="overflow: hidden; display: block; color: #666666; white-space: nowrap;"></div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="white-space: nowrap; margin-right: 10px">1.1.2011</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div ui:field="body" style="display: block">
                <div class="{css.message.messageBody}">
                </div>
            </div>
        </div>
        <g:TextBox ui:field="updateRead" visible="false" />
    </g:HTMLPanel>
</ui:UiBinder>
