<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />
    
    <ui:style>
        .container-width {
        width: 700px;        
        }
    </ui:style>
    
    <b:FluidContainer>
        <b:FluidRow>
            <b:Column size="6">
                <b:FluidRow>
                    <b:WellForm addStyleNames='no-header-form'>
                        <b:FluidRow>
                            <b:Column size="4">
                                <g:Label>
                                    <ui:msg key='formRating'>Rating:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="8">
                                <g:TextBox ui:field='clientRating' />
                            </b:Column> 
                        </b:FluidRow>                       
                    </b:WellForm>
                </b:FluidRow>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
