<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <g:DockLayoutPanel styleName='{res.layout.layoutUser}'>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:north size="65">
            <g:HorizontalPanel styleName='{res.layout.toolbarItemsBlock}'>
                <!--Edit demand func buttons-->
                <g:HTMLPanel ui:field="choiceButtonsPanel" visible="false">
                    <b:Button ui:field="editDemandButton" styleName='{res.common.toolbarButtonGrey}'>
                        <ui:msg key="commonBtnEdit">Edit</ui:msg>
                    </b:Button>
                    <b:Button ui:field="deleteDemandButton" styleName='{res.common.toolbarButtonGrey}'>
                        <ui:msg key="commonBtnDelete">Delete</ui:msg>
                    </b:Button>
                </g:HTMLPanel>
                
                <!--demand table header-->
                <g:HorizontalPanel ui:field="demandHeader">
                    <g:Label styleName='hide'>
                        <ui:msg key="clientDemandsTableTitle">Vypis klientovych poptaviek</ui:msg>
                    </g:Label>
                    <s:UniversalPagerWidget ui:field='demandPager' />
                </g:HorizontalPanel>
                <!--conversation table header-->
                <g:HorizontalPanel ui:field="conversationHeader">
                    <b:Button ui:field="backBtn" type="PRIMARY" icon="ARROW_LEFT">
                        <ui:msg key="clientDemandsBackBtn">Spat na vsetky nove poptavky</ui:msg>
                    </b:Button>
                    <g:Label ui:field="demandTitlelabel" styleName='hide'/>
                    
                    <g:SimplePanel ui:field="actionBox" visible="false" />
                    <s:UniversalPagerWidget ui:field='conversationPager'/>
                </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:north>        
        <g:center>
            <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                <b:FluidRow>
                    <b:Column size="7">
                        <g:HTMLPanel>
                            <s:UniversalAsyncGrid ui:field="demandGrid" 
                            addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                            <s:UniversalAsyncGrid ui:field="conversationGrid" 
                            addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                        </g:HTMLPanel>
                    </b:Column>
                    <b:Column size="5">
                        <g:SimplePanel ui:field="detailPanel">
                            <g:HTMLPanel>
                                <div>
                                    <strong>Defail detail panel</strong>
                                    <br />
                                    <br />
                                    <div>
                                        Default content....can contain some advertisements.
                                    </div>
                                </div>
                            </g:HTMLPanel>
                        </g:SimplePanel>
                    </b:Column>                    
                </b:FluidRow>
            </b:FluidContainer>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
