<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.messaging"
	xmlns:w="urn:import:com.eprovement.poptavka.client.user.widget.detail">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:style>
		.panel {
		min-width: 500px;
		}
		.relative {
		position: relative;
		}
		.my-class {
		padding: 12px;
		background: url(images/transparent_bg.png)
		repeat;
		}
		.my-div2 {
		background: #ffffff;
		border: 1px solid #009de5;
		border-radius: 4px;
		}
	</ui:style>
	<g:TabLayoutPanel stylePrimaryName='{res.detailTabPanel.detailTabPanel}'
		ui:field="container" barUnit="PX" barHeight="40" animationDuration="1000">
		<g:tab>
			<g:header>
				<ui:msg key="demandDetail">Demand detail</ui:msg>
			</g:header>
			<g:ScrollPanel>
				<w:EditableDemandDetailView ui:field="editableDemandDetail" />
			</g:ScrollPanel>
		</g:tab>
		<g:tab>
			<g:header>
				<ui:msg key="demandDetail">Demand detail</ui:msg>
			</g:header>
			<g:ScrollPanel>
				<w:DemandDetailView ui:field="demandDetail" />
			</g:ScrollPanel>
		</g:tab>
		<g:tab>
			<g:header>
				<ui:msg key="supplierDetail">Supplier detail</ui:msg>
			</g:header>
			<g:ScrollPanel>
				<w:SupplierDetailView ui:field="supplierDetail" />
			</g:ScrollPanel>
		</g:tab>
		<g:tab>
			<g:header>
				<ui:msg key="conversationDetail">Conversation</ui:msg>
			</g:header>
			<g:ScrollPanel>
				<g:HTMLPanel ui:field="conversationHolder" styleName='{style.my-class}'>
					<g:HTMLPanel styleName='{style.my-div2}'>
						<d:UserConversationPanel2 ui:field="conversationPanel"
							styleName="{style.relative}" />
						<d:DevelOfferQuestionWindow ui:field="replyHolder" />
					</g:HTMLPanel>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder>
