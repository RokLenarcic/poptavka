<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget"
             xmlns:w="urn:import:com.eprovement.poptavka.client.user.widget.detail"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:style>
        .panel {
        min-width: 500px;
        }
    </ui:style>
    <g:TabLayoutPanel stylePrimaryName='{res.detailTabPanel.detailTabPanel}'
                      ui:field="container" barUnit="PX" barHeight="50" animationDuration="1000">
        <g:tab>
            <g:header>
                <ui:msg key="detailsWrapperTabDemandDetail">Demand detail</ui:msg>
            </g:header>
            <g:ScrollPanel ui:field="demandDetailHolder">
                <w:DemandDetailView ui:field="demandDetail" />
            </g:ScrollPanel>
        </g:tab>
        <g:tab>
            <g:header>
                <ui:msg key="detailsWrapperTabSupplierDetail">Supplier detail</ui:msg>
            </g:header>
            <g:ScrollPanel>
                <w:UserDetailView ui:field="userDetail" />
            </g:ScrollPanel>
        </g:tab>
        <g:tab>
            <g:header>
                <ui:msg key="detailsWrapperTabConversationDetail">Conversation</ui:msg>
            </g:header>
            <g:ScrollPanel>
                <g:HTMLPanel ui:field="conversationHolder" styleName='{res.detailViews.conversationContainer}'>
                    <b:FluidContainer>
                        <b:FluidRow addStyleNames='{res.detailViews.detailBlock}'>
                            <b:Column size='12'>
                                <d:OfferQuestionWindow ui:field="replyHolder" styleName='{res.detailViews.conversationBlock}'/>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow addStyleNames='{res.detailViews.detailBlock}'>
                            <b:Column size='12'>
                                <c:CellList ui:field="messageList" styleName='{res.detailViews.conversationBlock}'/>
                            </b:Column>
                        </b:FluidRow>
                    </b:FluidContainer>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:tab>
    </g:TabLayoutPanel>
</ui:UiBinder>
