<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />
    
    <ui:style>
        .button {
        background: url(images/new-offer-green.png) no-repeat;
        padding: 0 0 1px 23px;
        border: none;
        color: #FFFFFF;
        font-weight: bold;
        height: 31px;
        width: 119px;
        float: left;
        }

    </ui:style>

    <g:DockLayoutPanel styleName='{res.layout.layoutUser}'>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:north size="65">
            <g:HorizontalPanel ui:field="toolBar" styleName="{res.layout.toolbarItemsBlock}">
                <g:Button ui:field="replyBtn" visible="false" styleName="{style.button}">
                    <ui:msg key="commonReplyBtn">Reply</ui:msg>
                </g:Button>
                <g:SimplePanel ui:field="actionBox" visible="false" />
                <s:UniversalPagerWidget ui:field='pager'/>
            </g:HorizontalPanel>
        </g:north>        
        <g:center>
            <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                <b:FluidRow>
                    <b:Column size="7">
                        <s:UniversalAsyncGrid ui:field="grid" 
                        addStyleNames='{res.layout.layoutUser} {res.layout.dataGridContainer}'/>
                    </b:Column>
                    <b:Column size="5">                        
                        <g:SimplePanel ui:field="wrapperPanel">
                            <g:HTMLPanel>
                                <div>
                                    <strong>Message Detail panel</strong>
                                </div>
                            </g:HTMLPanel>
                        </g:SimplePanel>
                        <d:MessageDetailView ui:field="messageDetailView" visible="false" />                        
                    </b:Column>                    
                </b:FluidRow>
            </b:FluidContainer>                
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
