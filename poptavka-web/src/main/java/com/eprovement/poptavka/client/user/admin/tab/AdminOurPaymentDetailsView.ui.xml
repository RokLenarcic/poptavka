<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:ug="urn:import:com.eprovement.poptavka.client.user.widget.grid"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>


    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource'/>

    <ui:style>
    .cellTable {
      border-bottom: 1px solid #ccc;
      text-align: left;
      margin-bottom: 4px;
    }
    </ui:style>
    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="700">
            <g:DecoratorPanel>
                <g:HTMLPanel>
                    <table cellspacing='0' cellpadding='0'>
                        <tr>
                            <td valign='top'>
                                <ug:UniversalAsyncGrid addStyleNames='{style.cellTable}' ui:field='dataGrid' />
                            </td>
                        </tr>
                        <tr>
                            <td align='center'>
                                <g:HorizontalPanel>
                                    <c:SimplePager ui:field='pager' />
                                    <g:ListBox ui:field='pageSizeCombo'/>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                        <tr>
                            <td  align='left'>
                                <g:HorizontalPanel>
                                    <g:Button ui:field="refresh">Refresh</g:Button>
                                    <g:Button ui:field="commit">Commit changes</g:Button>
                                    <g:Button ui:field="rollback">Rollback changes</g:Button>
                                    <g:Label>Demands changed: </g:Label>
                                    <g:Label ui:field="changesLabel"></g:Label>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:DecoratorPanel>
        </g:west>
    </g:SplitLayoutPanel>
</ui:UiBinder>


