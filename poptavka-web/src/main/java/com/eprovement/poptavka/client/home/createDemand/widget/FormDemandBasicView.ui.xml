<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:vm="urn:import:com.eprovement.poptavka.client.common">

    <ui:style>
        .clickable {
        cursor: pointer;
        }

        .clickable div:hover {
        background-color: #EEE;
        }

        .hiddenField {
        display: none;
        }

        .error {
        font-size:10px;
        color: red;
        }

        .width {
        width: 400px;
        }
        
        .textbox {
        height: 160px !important;
        max-width: 95% !important;
        width: 95% !important;
        }
    </ui:style>
    <b:FluidContainer>
        <b:FluidRow>
            <b:Column size="12">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="formAccountInfo">Account Info</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="6">
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formTitle">Title</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <vm:ValidationMonitor ui:field="titleMonitor">
                                        <g:TextBox />
                                    </vm:ValidationMonitor>
                                </b:Column>
                            </b:FluidRow>
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formPrice">Price</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <vm:ValidationMonitor ui:field="priceMonitor">
                                        <cm:BigDecimalBox />
                                    </vm:ValidationMonitor>
                                </b:Column>
                            </b:FluidRow>
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formEndDate">End Date</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <vm:ValidationMonitor ui:field="endDateMonitor">
                                        <p1:DateBox />
                                    </vm:ValidationMonitor>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                        <b:Column size="6">
                            <b:FluidRow>                                
                                <b:Column size="12">
                                    <vm:ValidationMonitor ui:field="descriptionMonitor">
                                        <g:TextArea styleName="{style.textbox}"/>
                                    </vm:ValidationMonitor>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
