<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <ui:style>
        .clickable {
        cursor: pointer;
        }

        .clickable div:hover {
        background-color: #EEE;
        }

        .hiddenField {
        display: none;
        }

        .error {
        font-size:10px;
        color: red;
        }

        .width {
        width: 400px;
        }
    </ui:style>
    <b:FluidContainer>
        <b:FluidRow>
            <b:Column size="12">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="formAccountInfo">Account Info</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="6">
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formTitle">Title</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <g:TextBox ui:field="title" />
                                    <g:Label styleName="{style.error}" ui:field="errorLabelTitle" />
                                </b:Column>
                            </b:FluidRow>
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formPrice">Price</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <cm:BigDecimalBox ui:field="price" />
                                    <g:Label styleName="{style.error}" ui:field="errorLabelPrice" />
                                </b:Column>
                            </b:FluidRow>
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formEndDate">End Date</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <p1:DateBox ui:field="endDate" />
                                    <g:Label styleName="{style.error}" ui:field="errorLabelEndDate" />
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                        <b:Column size="6">
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formDescription">Description</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="8">
                                    <g:TextArea ui:field="description" height="186px"/>
                                    <g:Label styleName="{style.error}" ui:field="errorLabelDesc" />
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>

    <!--Temporary disabled -->
    <!-- <table> <tr> <td> <ui:msg key="formAttachment">Attachment</ui:msg> </td> <td styleName="{style.width}"> <g:FileUpload
        /> </td> </tr> </table> -->
</ui:UiBinder>
