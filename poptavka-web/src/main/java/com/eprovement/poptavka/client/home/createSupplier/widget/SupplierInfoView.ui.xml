<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.main.common"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <!-- injecting style resources -->
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
    <ui:style>
        .error {
        font-size:10px;
        color: red;
        }
    </ui:style>
    <g:HTMLPanel>
        <div>
            <table>
                <tr>
                    <td>
                        <table>
                            <thead>
                                <tr>
                                    <th colspan="3">
                                        <ui:msg key="accInfo">Account Info</ui:msg>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr height="32px">
                                    <td>
                                        <ui:msg key="emailLogin">E-mail</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="email">novy@supplier.cz</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="emailErrorLabel"/>
                                    </td>
                                    <td width="32px">
                                        <cm:StatusIconLabel ui:field="mailStatus"
                                                            visible="false" state="LOAD_24" description="Checking email availability" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="pass">Password</ui:msg>
                                    </td>
                                    <td>
                                        <g:PasswordTextBox ui:field="password">heslo</g:PasswordTextBox>
                                        <g:Label styleName="{style.error}" ui:field="passwordErrorLabel"/>
                                    </td>
                                    <td>
                                        <cm:StatusIconLabel ui:field="passwordStatus"
                                                            visible="false" state="ERROR_24" description="Short password" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="passRepeat">Password Again</ui:msg>
                                    </td>
                                    <td>
                                        <g:PasswordTextBox ui:field="passwordConfirm">heslo</g:PasswordTextBox>
                                        <g:Label styleName="{style.error}" ui:field="passwordConfirmErrorLabel"/>
                                    </td>
                                    <td>
                                        <cm:StatusIconLabel ui:field="passwordCheckStatus"
                                                            visible="false" state="ERROR_24" description="Passwords don't match" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">&nbsp;</td>
                                </tr>
                            </tbody>
                            <thead>
                                <tr>
                                    <th colspan="3">
                                        <ui:msg key="address">Address</ui:msg>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <ui:msg key="street">Street</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="street">ulica</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="streetErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="city">City</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="city">Brno</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="cityErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="zipcode">Zipcode</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="zip">60200</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="zipErrorLabel"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <table>
                            <thead>
                                <tr>
                                    <th colspan="3">
                                        <ui:msg key="companyInfo">Company Info</ui:msg>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <ui:msg key="companyName">Company Name</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="companyName" >Comapny</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="companyNameErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="idNumber">Identification Number</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="identificationNumber" >ID-12323-sda</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="identificationNumberErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="taxNumber">Tax Number</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="taxId">tax-a341-512a</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="taxIdErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="website">Your Website</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="website">www.sss.zzz</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="websiteErrorLabel"/>
                                    </td>
                                </tr>
                            </tbody>
                            <thead>
                                <tr>
                                    <th colspan="3">
                                        <ui:msg key="contactPerson">Contact Person</ui:msg>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <ui:msg key="name">Name</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="firstName">Meno</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="firstNameErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="lastName">Last Name</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="lastName">Priezvisko</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="lastNameErrorLabel"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <ui:msg key="phone">Phone</ui:msg>
                                    </td>
                                    <td>
                                        <g:TextBox ui:field="phone">123456789</g:TextBox>
                                        <g:Label styleName="{style.error}" ui:field="phoneErrorLabel"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <table>
                            <tr>
                                <th>
                                    <ui:msg key="companyDescription">Company Description</ui:msg>
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <g:TextArea ui:field="description" height="200px" width="300px"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label styleName="{style.error}" ui:field="descriptionErrorLabel"/>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>        
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
