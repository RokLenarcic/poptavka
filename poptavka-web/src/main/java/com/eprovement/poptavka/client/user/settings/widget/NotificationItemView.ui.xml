<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .label {
        font-weight: bold;
        }
    </ui:style>

    <g:HTMLPanel>
        <table style="width: 100%;">
            <tr>
                <td class='{style.label}'>
                    <g:Label ui:field="name" />
                </td>
                <td>
                    <g:CheckBox ui:field='enabled' />
                </td>
                <td>
                    <g:ListBox ui:field="period" visibleItemCount='1' />
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>
