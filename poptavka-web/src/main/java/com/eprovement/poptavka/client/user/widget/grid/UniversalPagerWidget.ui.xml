<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
	
    <g:HTMLPanel>
        <g:HTMLPanel styleName='{res.common.pager}'>
            <c:SimplePager ui:field='pager' styleName='ws-pager' />
            <g:MenuBar vertical="false" styleName='ws-pager-size-box'>
                <g:MenuItem ui:field="pageSize" styleName='ws-pager-size-item'>
                    <g:MenuBar vertical="true" ui:field="pageSizeList" styleName='{res.common.pagerList}'/>
                </g:MenuItem>
            </g:MenuBar>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
