<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:DockLayoutPanel unit="PX">
                <g:north size="45">
			<g:HTMLPanel styleName='{res.layout.pager}'>
				<table style="width:100%">
					<tr>
						<td align='center'>
							<c:SimplePager ui:field='pager' />
							<g:ListBox ui:field='pageSize' />
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<s:UniversalAsyncGrid ui:field="grid" />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
