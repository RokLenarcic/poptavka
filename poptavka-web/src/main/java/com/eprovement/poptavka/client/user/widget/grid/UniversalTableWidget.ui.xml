<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:DockLayoutPanel unit="PX">
		<g:north size="65">
			<g:HorizontalPanel ui:field="demandHeader" styleName="{res.layout.toolbarItemsBlock}">
				<g:Label ui:field="tableNameLabel" />
				<g:ListBox ui:field="actionBox" />
				<s:UniversalPagerWidget ui:field='pager'/>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<s:UniversalAsyncGrid ui:field="grid"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
