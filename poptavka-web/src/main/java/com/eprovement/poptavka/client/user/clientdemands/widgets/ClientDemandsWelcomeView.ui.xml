<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
        <g:north size="70">
            <g:HTMLPanel></g:HTMLPanel>
        </g:north>
        <g:east size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:east>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel styleName='{res.layout.bodyFullContainer}'>
                <b:FluidContainer addStyleNames='{res.common.validationContainer} {res.layout.dashboard}'>
                    <b:FluidRow>
                        <b:Column size="4" addStyleNames='dashboard-block'>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <b:Heading size="4">
                                        Client Dashboard
                                    </b:Heading>
                                </b:Column>
                            </b:FluidRow>

                            <b:FluidRow addStyleNames='dashboard-block-content'>
                                <b:Column size="12">
                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <b:Heading size="5">
                                                Recent News
                                            </b:Heading>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="myDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="myDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="offeredDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="offeredDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="assignedDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="assignedDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="closedDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="closedDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>

                        <b:Column size="8" addStyleNames='dashboard-block'>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <b:Heading size="4">
                                        Quick Guide to Client Menu
                                    </b:Heading>
                                </b:Column>
                            </b:FluidRow>

                            <b:FluidRow addStyleNames='dashboard-block-content'>
                                <b:Column size="12">
                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuClientDemands">My Projects</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Projects you posted
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuClientOffers">Offers</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Here you can choose from Offers made by Professionals
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuClientAssignedDemands">Assigned Projects</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Projects in progress that are assigned to certain Professional
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuClientClosedDemands">Closed Projects</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Finished Projects you accepted
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuClientRatings">My Ratings</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Here you can check Feedback for Closed Projects
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:FluidContainer>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>