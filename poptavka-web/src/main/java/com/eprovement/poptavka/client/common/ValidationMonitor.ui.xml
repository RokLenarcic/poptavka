<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<!-- injecting style resources -->
	<ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />

	<ui:style>
		.error-label {
		margin: 5px 0 0 25px;
		padding: 0 0 0 4px;
		background: url(images/label-green.png) no-repeat 0 4px;
		display: block;
		}
	</ui:style>

	<b:ControlGroup ui:field="controlGroup">
		<b:Controls>
			<g:SimplePanel ui:field="holder" styleName='pull-left' />
			<g:HTMLPanel addStyleNames='{style.error-label} pull-left'>
				<b:Label ui:field="errorLabel" type="IMPORTANT" />
			</g:HTMLPanel>
		</b:Controls>
	</b:ControlGroup>
</ui:UiBinder>
