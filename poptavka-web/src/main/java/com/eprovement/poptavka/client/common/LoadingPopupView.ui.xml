<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:HTMLPanel>
        <b:Modal ui:field="modal" addStyleNames='{res.modal.loaderModal}'>
            <g:HTMLPanel styleName='loader-logo'></g:HTMLPanel>
            <g:Label styleName='loader-logo-label'>Hire professionals for anything you want.</g:Label>
            <cm:SimpleIconLabel ui:field='loader' popupEnabled="false" styleName='loader-logo-icon' />
            <g:Label styleName='loader-loading'>Loading</g:Label>
            <g:Label ui:field='loadingMessage' styleName='loader-message'></g:Label>           
        </b:Modal>
    </g:HTMLPanel>
</ui:UiBinder>
