<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:u="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:DockLayoutPanel styleName='{res.layout.fullSize}'>
        <g:north size="65">
            <g:HorizontalPanel ui:field="toolBar" styleName="{res.layout.toolbarItemsBlock}">
                <g:DecoratorPanel ui:field="filterLabelPanel">
                    <g:Label ui:field="filterLabel" />
                </g:DecoratorPanel>
                <g:Button ui:field="approveBtn" visible="false" styleName="btn btn-primary">
                    <ui:msg key="adminCommonBtnApprove">Approve</ui:msg>
                </g:Button>
                <g:Button ui:field="createConversationBtn" visible="false" styleName="btn btn-primary">
                    <ui:msg key="adminCommonBtnCreateConversation">Create conversation</ui:msg>
                </g:Button>
                <u:UniversalPagerWidget ui:field='pager'/>
            </g:HorizontalPanel>
        </g:north>
        <g:east size="400">
            <g:ScrollPanel>
                <g:SimplePanel ui:field="detailPanel" />
            </g:ScrollPanel>
        </g:east>
        <g:east size="25">
            <g:HTMLPanel></g:HTMLPanel>
        </g:east>
        <g:center>
            <u:UniversalAsyncGrid ui:field="dataGrid" />
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
