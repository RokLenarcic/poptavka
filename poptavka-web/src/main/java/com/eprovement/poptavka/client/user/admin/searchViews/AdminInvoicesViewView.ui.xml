<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }
        .rangeBox {
        width: 30px;
        margin-right:10px;
        margin-left:10px;
        }
        .margin {
            
        }
        .searchMainContent {
        width: 200px;
        } 
    </ui:style>
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
        
    <g:HTMLPanel>
        <div>
            <ul>
                <li>
                    <ui:msg key="adminformId">ID</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HorizontalPanel>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="from">from</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.rangeBox}" ui:field="idFrom"/>
                                    <g:Label styleName="{style.margin}">
                                        <ui:msg key="to">to</ui:msg>
                                    </g:Label>
                                    <g:TextBox styleName="{style.rangeBox}" ui:field="idTo"/>
                                </g:HorizontalPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="formInvoiceNumber">Invoice number</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="invoiceNumberFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="invoiceNumberTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="formVarSymb">Variable symbol</ui:msg>
                </li>
                <li>
                    <g:TextBox ui:field="variableSymbol"/>
                </li>
                <li>
                    <ui:msg key="formTotalPrice">Total price</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="totalPriceFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="totalPriceTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="formPaymentMethod">Payment method</ui:msg>
                </li>
                <li>
                    <g:ListBox ui:field="paymentMethod"/>
                </li>
                <li>
                    <g:Button ui:field="clearBtn">
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </g:Button>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
