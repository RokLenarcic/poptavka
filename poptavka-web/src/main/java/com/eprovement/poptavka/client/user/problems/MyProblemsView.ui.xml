<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>
      
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource'/>
    <ui:style>
    .important {
      font-weight: bold;
    }
    </ui:style>
    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="450">
            <g:HTMLPanel>
                <div>
<!--                    <g:Label>Moje Problemy</g:Label>-->
                    <g:Button ui:field="replyBtn">
                        <ui:msg key="reply">Reply</ui:msg>
                    </g:Button>
                    <g:Button ui:field="editBtn">
                        <ui:msg key="edit">Edit</ui:msg>
                    </g:Button>
                    <g:Button ui:field="closeBtn">
                        <ui:msg key="close">Close</ui:msg>
                    </g:Button>
                    <g:Button ui:field="cancelBtn">
                        <ui:msg key="cancel">Cancel</ui:msg>
                    </g:Button>
                    <g:Button ui:field="refuseBtn">
                        <ui:msg key="refuse">Refuse</ui:msg>
                    </g:Button>
                </div>
                <div>
                    <c:CellTable ui:field="cellTable" pageSize='10'/>
                    <c:SimplePager ui:field="pager" />
                </div>
<!--                <g:SimplePanel ui:field="develPanel" />-->

            </g:HTMLPanel>
        </g:west>
        <g:center>
            <g:SimplePanel ui:field="detailSection" />
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
