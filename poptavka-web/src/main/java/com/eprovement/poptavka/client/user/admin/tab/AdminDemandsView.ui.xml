<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:ug="urn:import:com.eprovement.poptavka.client.user.widget.grid"
    xmlns:d="urn:import:com.eprovement.poptavka.client.user.admin.tab"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateLocales='default'>


    <ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />

    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:west size="700">
            <g:DockLayoutPanel unit="PX">
                <g:north size="50">
                    <g:HorizontalPanel>
                        <g:Button ui:field="refresh">
                            <ui:msg key="admincommonBtnRefresh">Refresh</ui:msg>
                        </g:Button>
                        <g:Button ui:field="commit">
                            <ui:msg key="adminCommonCommitBtn">Commit changes</ui:msg>
                        </g:Button>
                        <g:Button ui:field="rollback">
                            <ui:msg key="adminCommonRollbackBtn">Rollback changes</ui:msg>
                        </g:Button>
                        <g:Label>
                            <ui:msg key="adminCommonChangesLabel">Demands changed: </ui:msg>
                        </g:Label>
                        <g:Label ui:field="changesLabel"/>
                    </g:HorizontalPanel>
                </g:north>
                <g:south size="35">
                    <g:HorizontalPanel>
                        <c:SimplePager ui:field='pager' />
                        <g:ListBox ui:field='pageSizeCombo' />
                    </g:HorizontalPanel>
                </g:south>
                <g:center>
                    <ug:UniversalAsyncGrid ui:field='dataGrid' />
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel styleName='{res.initial.scrollContainer}'>
                <d:AdminDemandInfoView ui:field="adminDemandDetail"/>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>


