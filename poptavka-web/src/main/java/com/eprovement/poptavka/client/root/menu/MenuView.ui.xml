<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
             
	<ui:style>
		.button1 { background: url(images/menu-icons.png) no-repeat 0 0; }
		.button2 { background: url(images/menu-icons.png) no-repeat 0 -73px; }
		.button3 { background: url(images/menu-icons.png) no-repeat 0 -146px; }
		.button4 { background: url(images/menu-icons.png) no-repeat 0 -219px; }
		.button5 { background: url(images/menu-icons.png) no-repeat 0 -292px; }
		
		.button1:hover { background: url(images/menu-icons-hover.png) no-repeat 0 0; }			
		.button2:hover { background: url(images/menu-icons-hover.png) no-repeat 0 -73px; }
		.button3:hover { background: url(images/menu-icons-hover.png) no-repeat 0 -146px; }
		.button4:hover { background: url(images/menu-icons-hover.png) no-repeat 0 -219px; }
		.button5:hover { background: url(images/menu-icons-hover.png) no-repeat 0 -292px; }
	</ui:style>

    <g:HTMLPanel>
        <div ui:field="homeMenu">
            <ul ui:field="menuList">
                <li>
                    <g:Button ui:field="home" styleName='{style.button1}'>
                        <ui:msg key="menuHome">Home</ui:msg><br /><br />
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="demands" styleName='{style.button2}'>
                        <ui:msg key="menuHomeDemands">Demands</ui:msg><br /><br />
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="createDemand" styleName='{style.button3}'>
                        <ui:msg key="menuCreateDemand">create Demand</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="suppliers" styleName='{style.button4}'>
                        <ui:msg key="menuHomeSuppliers">Suppliers</ui:msg><br /><br />
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="createSupplier" styleName='{style.button5}'>
                        <ui:msg key="menuCreateSupplier">create Supplier</ui:msg>
                    </g:Button>
                </li>               
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>