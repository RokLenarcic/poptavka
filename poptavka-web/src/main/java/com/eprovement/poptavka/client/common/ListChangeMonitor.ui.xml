<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource'/>
    <ui:style>
        .error {
        font-size:10px;
        color: red;
        }
    </ui:style>

    <g:VerticalPanel>
        <g:HorizontalPanel>
            <g:SimplePanel ui:field="holder"/>
            <g:Anchor ui:field="revert">
                <ui:msg key="commonBtnRevert">Revert</ui:msg>
            </g:Anchor>
        </g:HorizontalPanel>
        <g:Label ui:field="errorLabel" styleName="{style.error}" />
    </g:VerticalPanel>
</ui:UiBinder>
