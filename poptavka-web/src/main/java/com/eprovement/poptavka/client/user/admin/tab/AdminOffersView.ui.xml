<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:ug="urn:import:com.eprovement.poptavka.client.user.widget.grid"
  xmlns:detail="urn:import:com.eprovement.poptavka.client.user.admin.tab"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource'/>

    <g:HTMLPanel>
        <table cellspacing='0' cellpadding='0'>
            <tr>
                <td  align='left'>
                    <g:HorizontalPanel>
                        <g:Button ui:field="refresh">
                            <ui:msg key="admincommonBtnRefresh">Refresh</ui:msg>
                        </g:Button>
                        <g:Button ui:field="commit">
                            <ui:msg key="adminCommonCommitBtn">Commit changes</ui:msg>
                        </g:Button>
                        <g:Button ui:field="rollback">
                            <ui:msg key="adminCommonRollbackBtn">Rollback changes</ui:msg>
                        </g:Button>
                        <g:Label>
                            <ui:msg key="adminCommonChangesLabel">Demands changed: </ui:msg>
                        </g:Label>
                        <g:Label ui:field="changesLabel"/>
                    </g:HorizontalPanel>
                </td>
            </tr>
            <tr>
                <td valign='top'>
                    <ug:UniversalAsyncGrid ui:field='dataGrid' />
                </td>
            </tr>
            <tr>
                <td align='center'>
                    <g:HorizontalPanel>
                        <c:SimplePager ui:field='pager' />
                        <g:ListBox ui:field='pageSizeCombo'/>
                    </g:HorizontalPanel>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>


