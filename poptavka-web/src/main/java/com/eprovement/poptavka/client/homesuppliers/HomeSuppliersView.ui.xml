<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail"
        xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

	<!-- injecting style resources -->
	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:DockLayoutPanel unit="PX"
		styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
		<g:west size="320">
			<g:DockLayoutPanel unit="PX">
				<g:north size="65">
					<g:HTMLPanel></g:HTMLPanel>
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<c:CellTree ui:field="cellTree" />
					</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:west>
		<g:west size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:west>
		<g:center>
			<g:DockLayoutPanel unit="PX">
				<g:north size="65">
					<g:VerticalPanel>
						<g:DecoratorPanel ui:field="filterLabelPanel">
							<g:Label ui:field="filterLabel" />
						</g:DecoratorPanel>
        					<s:UniversalPagerWidget ui:field="pager" />
					</g:VerticalPanel>
				</g:north>
				<g:center>
					<c:DataGrid ui:field="dataGrid" />
				</g:center>
				<g:south size="30">
					<g:HTMLPanel></g:HTMLPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
		<g:east size="430">
			<g:DockLayoutPanel unit="PX">
				<g:north size="65">
					<g:HTMLPanel></g:HTMLPanel>
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<g:HTMLPanel ui:field="detail" styleName='{res.layout.detailInfo}'>
							<g:Label ui:field="reklama">Reklama</g:Label>
							<d:SupplierDetailView ui:field="supplierDetailView" />
							<g:Button ui:field="contactBtn">Contact</g:Button>
						</g:HTMLPanel>
					</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:east>
		<g:east size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder>
