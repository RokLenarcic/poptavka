<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource' />

    <ui:style>
        .button {
        background: url(images/new-offer-green.png) no-repeat;
        padding: 0 0 1px 23px;
        border: none;
        color: #FFFFFF;
        font-weight: bold;
        height: 31px;
        width: 119px;
        float: left;
        }

    </ui:style>

    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:east size="400">
            <g:SimplePanel ui:field="wrapperPanel">
                <g:HTMLPanel>
                    <div>
                        <strong>Defail detail panel</strong>
                        <br />
                        <br />
                        <div>
                            Default content....can contain some advertisements.
                        </div>
                    </div>
                </g:HTMLPanel>
            </g:SimplePanel>
        </g:east>
        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="65">
                    <g:HorizontalPanel styleName='{res.layout.toolbarItemsBlock}'>
                        <g:HorizontalPanel ui:field="demandHeader">
                            <g:Label>
                                <ui:msg key="clientOfferedDemandTitle">Vypis klientovych poptaviek s ponukami</ui:msg>
                            </g:Label>
                            <s:UniversalPagerWidget ui:field='demandPager' />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel ui:field="offerHeader">
                            <g:Button ui:field="backBtn">
                                <ui:msg key="backToClientOfferedDemand">Spat na vsetky poptavky s ponukami</ui:msg>
                            </g:Button>
                            <g:Label ui:field="demandTableNameLabel"/>
                        </g:HorizontalPanel>
                        <g:HorizontalPanel ui:field="offerToolBar">
                            <g:Button ui:field="acceptBtn" styleName='{style.button}'>
                                <ui:msg key="accept">Accept</ui:msg>
                            </g:Button>
                            <g:Label ui:field="offerTableNameLabel" />
                            <g:ListBox ui:field="actionBox" selectedIndex="0">
                                <g:item>
                                    <ui:msg key="actoin">action</ui:msg>
                                </g:item>
                                <g:item>
                                    <ui:msg key="read">read</ui:msg>
                                </g:item>
                                <g:item>
                                    <ui:msg key="unread">unread</ui:msg>
                                </g:item>
                                <g:item>
                                    <ui:msg key="star">star</ui:msg>
                                </g:item>
                                <g:item>
                                    <ui:msg key="unstar">unstar</ui:msg>
                                </g:item>
                            </g:ListBox>
                            <s:UniversalPagerWidget ui:field='offerPager'/>
                        </g:HorizontalPanel>
                    </g:HorizontalPanel>
                </g:north>
                <g:center>
                    <g:VerticalPanel>
                        <s:UniversalAsyncGrid ui:field="demandGrid" />
                        <s:UniversalTableWidget ui:field="offerGrid" />
                    </g:VerticalPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
