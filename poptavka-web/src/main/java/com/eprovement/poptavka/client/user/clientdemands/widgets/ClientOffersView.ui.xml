<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .button {
        background: url(images/new-offer-green.png) no-repeat;
        padding: 0 0 1px 23px;
        border: none;
        color: #FFFFFF;
        font-weight: bold;
        height: 31px;
        width: 119px;
        float: left;
        }

    </ui:style>

    <g:DockLayoutPanel styleName='{res.layout.fullSize}'>
        <g:north size="65">
            <g:HorizontalPanel styleName='{res.layout.toolbarItemsBlock}'>
                <g:HorizontalPanel ui:field="demandHeader">
                    <g:Label>
                        <ui:msg key="clientOffersTableTitle">Vypis klientovych poptaviek s ponukami</ui:msg>
                    </g:Label>
                    <s:UniversalPagerWidget ui:field='demandPager' />
                </g:HorizontalPanel>
                <g:HorizontalPanel ui:field="offerHeader">
                    <g:Button ui:field="backBtn">
                        <ui:msg key="clientOffersBackBtn">Spat na vsetky poptavky s ponukami</ui:msg>
                    </g:Button>
                    <g:Label ui:field="demandTableNameLabel" />
                </g:HorizontalPanel>
                <g:HorizontalPanel ui:field="offerToolBar">
                    <g:Button ui:field="acceptBtn" styleName='{style.button}'>
                        <ui:msg key="clientOffersAcceptBtn">Accept</ui:msg>
                    </g:Button>
                    <g:Label ui:field="offerTableNameLabel" />
                    <b:DropdownButton ui:field="actionBox" visible="false"
                                      text="{msgs.commonListDefault}">
                        <b:NavLink ui:field="actionRead">
                            <ui:msg key="commonListRead">read</ui:msg>
                        </b:NavLink>
                        <b:NavLink ui:field="actionUnread">
                            <ui:msg key="commonListUnread">unread</ui:msg>
                        </b:NavLink>
                        <b:NavLink ui:field="actionStar">
                            <ui:msg key="commonListStarred">star</ui:msg>
                        </b:NavLink>
                        <b:NavLink ui:field="actionUnstar">
                            <ui:msg key="listUnstarred">unstar</ui:msg>
                        </b:NavLink>
                    </b:DropdownButton>
                    <s:UniversalPagerWidget ui:field='offerPager' />
                </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:north>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:center>
            <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                <b:FluidRow>
                    <b:Column size="7">
                        <g:HTMLPanel>
                            <s:UniversalAsyncGrid ui:field="demandGrid" 
                            addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                            <s:UniversalTableGrid ui:field="offerGrid" 
                            addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                        </g:HTMLPanel>
                    </b:Column>
                    <b:Column size="5">
                        <g:SimplePanel ui:field="detailPanel">
                            <g:HTMLPanel>
                                <div>
                                    <strong>Defail detail panel</strong>
                                    <br />
                                    <br />
                                    <div>
                                        Default content....can contain some advertisements.
                                    </div>
                                </div>
                            </g:HTMLPanel>
                        </g:SimplePanel>        
                    </b:Column>                    
                </b:FluidRow>
            </b:FluidContainer>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
