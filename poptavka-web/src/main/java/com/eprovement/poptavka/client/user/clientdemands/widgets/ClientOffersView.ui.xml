<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .filterLabel {
            color: #6F6B59;
            font-size: 18px;
            font-weight: lighter;
            line-height: 30px;
            padding: 0px 10px 10px;
        }
    </ui:style>

    <g:DockLayoutPanel styleName='{res.layout.layoutUser}'>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:north size="65">
            <g:HorizontalPanel styleName='{res.layout.toolbarItemsBlock}'>
                <!--Demand table header-->
                <g:HorizontalPanel ui:field="demandHeader">
                    <s:UniversalPagerWidget ui:field='demandPager' />
                </g:HorizontalPanel>

                <!--Back button-->
                <g:Button ui:field="backBtn" styleName='{res.common.toolbarButtonBack}'
                          title="{msgs.clientOffersBackBtn}" visible="false"/>
                
                <!--ToolBar button section-->
                <g:HorizontalPanel ui:field="offerToolBar" visible="false">
                    <g:Button ui:field="acceptBtn" styleName='{res.common.toolbarButtonGreen} {res.layout.toolbarItem}'
                              title="tooltipAccept">
                        <ui:msg key="clientOffersAcceptBtn">Accept</ui:msg>
                    </g:Button>
                    <g:SimplePanel ui:field="actionBox"/>
                </g:HorizontalPanel>
                
                <!--Offer table header-->
                <g:HorizontalPanel ui:field="offerHeader">
                    <s:UniversalPagerWidget ui:field='offerPager' />
                </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:north>        
        <g:center>
            <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                <b:FluidRow>
                    <b:Column size="7">
                        <g:HTMLPanel>
                            <!--Offered Demands-->
                            <s:UniversalAsyncGrid ui:field="demandGrid" 
                            addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                            <!--Demand Offers-->
                            <g:Label ui:field="offerTableTitleLabel" styleName="{style.filterLabel}" visible="false"/>
                            <s:UniversalTableGrid ui:field="offerGrid" 
                            addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                        </g:HTMLPanel>
                    </b:Column>
                    <b:Column size="5">
                        <g:SimplePanel ui:field="detailPanel">
                            <g:HTMLPanel>
                                <div>
                                    <strong>Defail detail panel</strong>
                                    <br />
                                    <br />
                                    <div>
                                        Default content....can contain some advertisements.
                                    </div>
                                </div>
                            </g:HTMLPanel>
                        </g:SimplePanel>        
                    </b:Column>                    
                </b:FluidRow>
            </b:FluidContainer>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
