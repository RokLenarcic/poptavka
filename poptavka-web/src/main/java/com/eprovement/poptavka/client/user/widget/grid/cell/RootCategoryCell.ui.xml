<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">

    <ui:with field="res" type="com.eprovement.poptavka.resources.StyleResource" />

    <ui:with field="catName" type="java.lang.String" />
    <ui:with field="catCount" type="java.lang.String" />

    <div class="container-fluid {res.initial.rootCategoryCell}">  
        <div class="row-fluid">
            <div class="span10 category-name">  
                <ui:text from='{catName}' />
            </div>  
            <div class="span2 category-count">
                <ui:text from='{catCount}' />
            </div>  
        </div>  
    </div>  
</ui:UiBinder>
