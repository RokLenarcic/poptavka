<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>

	<g:HTMLPanel ui:field='headerHolder' styleName='{res.layout.headerContent}'>
		<!-- Logo -->
		<!-- <div style="position: absolute; background: url(images/logo.png) no-repeat 
			scroll 0% 0% transparent; left: 10px; width: 368px; height: 64px; top: 24px;"> 
			</div> -->
		<!-- end Logo -->

		<!-- Login Button -->
		<div class='{res.layout.login}'>
			<div class='{res.layout.loginButton}'>
				<g:Anchor ui:field="loginButton">
					<ui:msg key="logIn">Log In</ui:msg>
				</g:Anchor>
			</div>
			<div id="loginAnchor"
				style="position: absolute; width: 150px; right: 0px; z-index: 151;">
			</div>
		</div>

		<!-- help button -->
		<div class='{res.layout.loginBar}'>
			<g:Button styleName='{res.layout.helpButton}'>
			</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>