<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

	<!-- injecting style resources -->
	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<ui:style>
		.important {
			font-weight: bold;
			font-style: italic;
		}
		
		.priceBox {
			width: 30px;
			margin-right: 10px;
			margin-left: 10px;
		}
		
		.dateBox {
			width: 70px;
			margin-right: 10px;
			margin-left: 10px;
		}
		
		.margin {
			
		}
		
		.searchMainContent {
			width: 200px;
		}
	</ui:style>

	<g:HTMLPanel>
		<div>
			<ul>
				<li>
					<g:Label>Title</g:Label>
				</li>
				<li>
					<g:TextBox ui:field="demandTitle" />
				</li>
				<li>
					<g:Label>
						<ui:msg key="price">Price:</ui:msg>
					</g:Label>
				</li>
				<li>
					<table>
						<tr>
							<td width="200">
								<g:HorizontalPanel>
									<g:Label styleName="{style.margin}">
										<ui:msg key="priceFrom">from</ui:msg>
									</g:Label>
									<g:TextBox styleName="{style.priceBox}" ui:field="priceFrom" />
									<g:Label styleName="{style.margin}">
										<ui:msg key="priceTo">to</ui:msg>
									</g:Label>
									<g:TextBox styleName="{style.priceBox}" ui:field="priceTo" />
									<g:Label styleName="{style.margin}">
										<ui:msg key="currency">$</ui:msg>
									</g:Label>
								</g:HorizontalPanel>
							</td>
						</tr>
					</table>
				</li>
				<li>
					<g:Label>
						<ui:msg key="demandType">Demand Type:</ui:msg>
					</g:Label>
				</li>
				<li>
					<g:ListBox ui:field="demandTypes" />
				</li>
				<li>
					<g:Label>
						<ui:msg key="creationDate">Creation date:</ui:msg>
					</g:Label>
				</li>
				<li>
					<g:ListBox ui:field="creationDate" />
				</li>
				<li>
					<g:Label>
						<ui:msg key="finnishDate">Finnish date:</ui:msg>
					</g:Label>
				</li>
				<li>
					<table>
						<tr>
							<td width="200">
								<g:HorizontalPanel>
									<g:Label styleName="{style.margin}">
										<ui:msg key="priceFrom">from</ui:msg>
									</g:Label>
									<p1:DateBox styleName="{style.dateBox}" ui:field="finnishDateFrom" />
									<g:Label styleName="{style.margin}">
										<ui:msg key="priceTo">to</ui:msg>
									</g:Label>
									<p1:DateBox styleName="{style.dateBox}" ui:field="finnishDateTo" />
								</g:HorizontalPanel>
							</td>
						</tr>
					</table>
				</li>
				<li>
					<g:Button ui:field="clearBtn">Clear</g:Button>
				</li>
			</ul>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
