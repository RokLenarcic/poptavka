<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:mlb="urn:import:com.eprovement.poptavka.client.common.myListBox"
             xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .priceBox {
        width: 70px;
        margin-right: 10px;
        margin-left: 4px;
        }

        .dateBox {
        width: 70px;
        margin-right: 10px;
        margin-left: 4px;
        }
    </ui:style>

    <g:HTMLPanel>
        <b:FluidContainer addStyleNames='{res.common.validationContainer}'>
            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:Label>
                        <ui:msg key="formTitle">Title</ui:msg>
                    </g:Label>
                    <b:TextBox ui:field="demandTitle" styleName='full-width' />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:Label>
                        <ui:msg key="formPrice">Price:</ui:msg>
                    </g:Label>
                    <g:HTMLPanel styleName="input-append">
                        <cm:ValidationMonitor ui:field="priceMonitorFrom">
                            <cm:BigDecimalBox placeholder="{msgs.formFrom}" styleName="{style.priceBox} append-dollar" />
                        </cm:ValidationMonitor>
                    </g:HTMLPanel>
                    <g:HTMLPanel styleName="input-append">
                        <cm:ValidationMonitor ui:field="priceMonitorTo">
                            <cm:BigDecimalBox placeholder="{msgs.formTo}" styleName="{style.priceBox} append-dollar" />
                        </cm:ValidationMonitor>
                    </g:HTMLPanel>
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:Label>
                        <ui:msg key="formDemandType">Demand Type:</ui:msg>
                    </g:Label>
                    <g:ListBox ui:field="demandTypes" styleName='full-width' />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:Label>
                        <ui:msg key="formCreationDate">Creation date:</ui:msg>
                    </g:Label>
                    <mlb:MyListBox ui:field="creationDate" styleName='full-width' />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:Label>
                        <ui:msg key="formFinnishDate">Finnish date:</ui:msg>
                    </g:Label>
                    <g:HTMLPanel styleName="input-append">
                        <cm:MyDateBox placeholder="{msgs.formFrom}" styleName="{style.dateBox} append-date" ui:field="finnishDateFrom" />
                    </g:HTMLPanel>
                    <g:HTMLPanel styleName="input-append">
                        <cm:MyDateBox placeholder="{msgs.formTo}" styleName="{style.dateBox} append-date" ui:field="finnishDateTo" />
                    </g:HTMLPanel>
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <b:Button ui:field="clearBtn" styleName='{res.common.buttonGrey} clear-button'>
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </b:Button>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>
    </g:HTMLPanel>
</ui:UiBinder>
