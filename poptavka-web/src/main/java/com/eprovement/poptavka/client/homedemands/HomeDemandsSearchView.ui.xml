<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }

        .priceBox {
        width: 70px;
        margin-right: 10px;
        margin-left: 4px;
        }

        .dateBox {
        width: 70px;
        margin-right: 10px;
        margin-left: 4px;
        }

        .searchMainContent {
        width:
        200px;
        }
    </ui:style>

    <g:HTMLPanel>
        <b:FluidContainer>
            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formTitle">Title</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <b:TextBox ui:field="demandTitle" />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formPrice">Price:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <g:HTMLPanel>
                        <b:InputAddOn appendText="$">
                            <b:IntegerBox placeholder="{msgs.formFrom}" styleName="{style.priceBox}" ui:field="priceFrom" />
                        </b:InputAddOn>
                        <b:InputAddOn appendText="$">
                            <b:IntegerBox placeholder="{msgs.formTo}" styleName="{style.priceBox}" ui:field="priceTo" />
                        </b:InputAddOn>
                    </g:HTMLPanel>
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formDemandType">Demand Type:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <g:ListBox ui:field="demandTypes" />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formCreationDate">Creation date:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <g:ListBox ui:field="creationDate" />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formFinnishDate">Finnish date:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <g:HTMLPanel>
                        <b:InputAddOn appendIcon="CALENDAR">
                            <b2:DateBox placeholder="{msgs.formFrom}" format="{msgs.formatDate}" autoClose="true" styleName="{style.dateBox}" ui:field="finnishDateFrom" />
                        </b:InputAddOn>
                        <b:InputAddOn appendIcon="CALENDAR">
                            <b2:DateBox placeholder="{msgs.formTo}" format="{msgs.formatDate}" autoClose="true" styleName="{style.dateBox}" ui:field="finnishDateTo" />
                        </b:InputAddOn>
                    </g:HTMLPanel>
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="2">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="10">
                    <b:Button ui:field="clearBtn" type="WARNING">
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </b:Button>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>
    </g:HTMLPanel>
</ui:UiBinder>
