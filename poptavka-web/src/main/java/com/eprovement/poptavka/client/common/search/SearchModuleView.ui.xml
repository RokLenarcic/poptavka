<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:adv="urn:import:com.eprovement.poptavka.client.common.search">

	<ui:style>
		.important {
		font-weight: bold;
		font-style: italic;
		}

		.search-menu {
		background: #e8edf0;
		padding: 6px;
		}

		.search-textbox {
		width: 267px;
		height: 37px;
		line-height: 37px;
		border: 1px solid #aabac1;
		padding: 8px 6px;
		color: #002f51;
		border-radius: 3px 0 0 3px;
		-moz-border-radius: 3px 0 0 3px;
		-webkit-border-radius: 3px 0 0 3px;
		}

		.search-button {
		background: url(images/search-button.png) no-repeat;
		border: medium none;
		color: #FFFFFF;
		font-weight:
		bold;
		height: 37px;
		width: 77px;
		}

		.blue-button:hover {
		cursor: pointer;
		}

		.search-list {
		background: url(images/advanced-search-dropdown.png) repeat;
		float:right;
		color:#002F51;
		height:23px;
		margin:6px 8px;
		width:137px;
		}
		
		.search-list {
		cursor: pointer;
		}

		.search-list-item {
		line-height:20px;
		padding: 0 27px 0 5px;
		width:105px;
		}	
			
		.search-list-dropdown table {
		background: #ffffff;
		padding:10px;
		margin: 3px 0 0 -9px; 
		line-height: 20px; 
		width: 136px; 
		border: 1px solid #C2C8D2; 
		border-radius: 4px; 
		box-shadow: 0 0 3px #DDDDDD;
		}
		
		.search-list-dropdown table td:hover {
		color: #bd0000;
		cursor: pointer;
		}
		
		.advanced-search {
		background:url(images/advanced-search-button.gif)
		no-repeat 0 7px;
		border: none;
		margin: 8px 0 0 7px;
		padding: 0 0 0 7px;
		}
	</ui:style>
	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:HTMLPanel ui:field="container">
		<div ui:field="searchMenu" class='{style.search-menu}'>
			<g:HorizontalPanel>
				<g:TextBox ui:field="searchContent" styleName='{style.search-textbox}'>
					<ui:msg key="searchContent">Search...</ui:msg>
				</g:TextBox>
				<g:Button ui:field="searchBtn" styleName='{style.search-button}'>
					<!-- <ui:msg key="search">Search</ui:msg> -->
				</g:Button>
			</g:HorizontalPanel>
			<g:PopupPanel ui:field="popupPanel">
				<adv:AdvanceSearchContentView ui:field="advanceSearchContentView" />
			</g:PopupPanel>
		</div>

		<g:Button ui:field="advSearchBtn" styleName='{style.advanced-search}'>Advanced</g:Button>
		<g:MenuBar vertical="false" styleName='{style.search-list}'>
			<g:MenuItem ui:field="searchWhatItem" styleName='{style.search-list-item}'>
				<ui:msg key="menuSearchDemand">Demand</ui:msg>
				<g:MenuBar vertical="true" ui:field="searchWhatList"
					styleName='{style.search-list-dropdown}'>
					<g:MenuItem ui:field="demand">
						<ui:msg key="menuSearchDemand">Demand</ui:msg>
					</g:MenuItem>
					<g:MenuItem ui:field="supplier">
						<ui:msg key="menuSearchSupplier">Supplier</ui:msg>
					</g:MenuItem>
				</g:MenuBar>
			</g:MenuItem>
		</g:MenuBar>
	</g:HTMLPanel>
</ui:UiBinder>
