<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:adv="urn:import:com.eprovement.poptavka.client.common.search"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }

        .search-textbox[type="text"] {
        background: none repeat scroll 0 0
        transparent;
        border: medium none;
        box-shadow: none;
        color: #0E41AA;
        height: 40px;
        line-height: 37px;
        margin: 0;
        padding: 8px 15px;
        width:
        149px;
        }

        .search-button {
        background: none repeat scroll 0 0 transparent;
        border: medium none;
        color: #FFFFFF;
        cursor: pointer;
        font-weight: bold;
        height: 40px;
        padding: 0;
        width: 54px;
        }

        .blue-button:hover {
        cursor:
        pointer;
        }

        .advanced-search {
        background: none repeat scroll 0 0
        transparent;
        border: medium none;
        color: #FFFFFF;
        cursor: pointer;
        margin: 0 0 0 24px;
        padding: 5px 0;
        width: 89px;
        }
    </ui:style>

    <g:HTMLPanel ui:field="container">
        <div ui:field="searchMenu">
            <g:HorizontalPanel>
                <b:TextBox ui:field="searchContent" placeholder="{msgs.searchContent}"
                           styleName='{style.search-textbox}' />
                <g:Button ui:field="searchBtn" styleName='{style.search-button}' />
            </g:HorizontalPanel>
            <g:PopupPanel ui:field="popupPanel">
                <adv:AdvanceSearchContentView ui:field="advanceSearchContentView" />
            </g:PopupPanel>
        </div>

        <g:Button ui:field="advSearchBtn" styleName='{style.advanced-search}'>
            <ui:msg key="searchBtnAdvance">Advanced</ui:msg>
        </g:Button>
    </g:HTMLPanel>
</ui:UiBinder>
