<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" animationEnabled="true">
   <g:caption><b><ui:msg key="sendUsEmail">Send us an email</ui:msg></b></g:caption>
   <g:VerticalPanel>
      <g:HorizontalPanel>
        <g:Label><ui:msg key="to">To:</ui:msg></g:Label>
        <g:Label><ui:msg key="customerSupport">Customer Support</ui:msg></g:Label>
      </g:HorizontalPanel>
        <g:Label><ui:msg key="subject">Subject:</ui:msg></g:Label>
        <g:ListBox ui:field="subjectListBox"></g:ListBox>
        <g:Label><ui:msg key="enterYourEmail">Enter your email address</ui:msg></g:Label>
        <g:TextBox ui:field="emailTextBox"></g:TextBox>
        <g:Label><ui:msg key="reEnterYourEmail">Re-enter your email address</ui:msg></g:Label>
        <g:TextBox ui:field="reEmailTextBox"></g:TextBox>
        <g:Label><ui:msg key="questionOrConcern">Enter your question / concern</ui:msg></g:Label>
        <g:TextArea ui:field="textArea">
        </g:TextArea>
        <g:Label>Maximum 10000 characters. No HTML, JavaScript.</g:Label>

        <g:HTML ui:field='errorText' />
        <g:Button ui:field='okButton' >Ok</g:Button>
        <g:Button ui:field='sendButton' >Send</g:Button>
        <g:Button ui:field='closeButton' >Close</g:Button>
   </g:VerticalPanel>
 </g:DialogBox>
</ui:UiBinder>