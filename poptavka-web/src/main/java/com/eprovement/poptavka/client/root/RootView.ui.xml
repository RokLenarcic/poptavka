<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:cm="urn:import:com.eprovement.poptavka.client.common" xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

	<g:DockLayoutPanel ui:field="layoutMaster" unit="PX">
		<g:north size="105">
			<g:HTMLPanel ui:field='headerHolder' styleName='{res.layout.headerContainer}'>
				<g:SimplePanel ui:field='header' styleName='{res.layout.headerContent}' />
				<g:SimplePanel ui:field="menu" styleName='{res.layout.homeMenu}' />
				<g:SimplePanel ui:field="searchBar" styleName='{res.layout.searchBar}' />
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyBackground}'>
				<g:center>
					<g:SimplePanel ui:field='body'>
						<g:PopupPanel ui:field="wait"></g:PopupPanel>
					</g:SimplePanel>
				</g:center>
				<g:south size="36">
					<g:SimplePanel ui:field="footer" />
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>