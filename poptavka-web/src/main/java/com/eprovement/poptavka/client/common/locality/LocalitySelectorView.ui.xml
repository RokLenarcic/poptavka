<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource'/>
    <ui:style>
        .inline {
            display:inline-block;
        }
    </ui:style>

    <g:VerticalPanel>
        <g:HorizontalPanel>
            <c:CellBrowser ui:field="cellBrowser"/>
            <g:HTML ui:field='loader' visible='false' styleName='{res.common.smallLoader}' />
        </g:HorizontalPanel>
        <g:HorizontalPanel>
            <g:VerticalPanel>
                <g:Label>
                    <ui:msg key="selectedLocs">Selected</ui:msg>:
                </g:Label>
                <c:CellList styleName="{style.inline}" ui:field="cellList"/>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
