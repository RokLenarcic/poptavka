<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .error {
        font-size:10px;
        color: red;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:Label>
                    <ui:msg key="to">To: </ui:msg>
                </g:Label>
                <g:Label>
                    <ui:msg key="customerSupport">Customer support</ui:msg>
                </g:Label>
            </g:HorizontalPanel>
            <g:Label>
                <ui:msg key="subject">Subject</ui:msg>
            </g:Label>
            <g:ListBox ui:field="subject"/>
            <g:Label>
                <ui:msg key="enterYourEmail">Enter your email address</ui:msg>
            </g:Label>
            <g:TextBox ui:field="emailFrom"/>
            <g:Label styleName="{style.error}" ui:field="emailFromErrorLabel"/>
            <g:Label>
                <ui:msg key="reEnterYourEmail">Re-enter your email address</ui:msg>
            </g:Label>
            <g:TextBox ui:field="reEmailFrom"/>
            <g:Label styleName="{style.error}" ui:field="reEmailFromErrorLabel"/>
            <g:Label>
                <ui:msg key="questionOrConcern">Enter your question / concern</ui:msg>
            </g:Label>
            <g:TextArea width="400px" height="150px" ui:field="message"/>
            <g:Label styleName="{style.error}" ui:field="messageErrorLabel"/>
            <g:Label>
                <ui:msg key="maximumChars">Maximum 10000 characters. No HTML, JavaScript.</ui:msg>
            </g:Label>
            <g:HorizontalPanel>
                <g:Button ui:field="sendButton">
                    <ui:msg key="sendButton">Send</ui:msg>
                </g:Button>
                <g:Button ui:field="closeButton">
                    <ui:msg key="close">Close</ui:msg>
                </g:Button>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
