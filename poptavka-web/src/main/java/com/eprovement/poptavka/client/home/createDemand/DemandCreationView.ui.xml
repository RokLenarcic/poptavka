<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <!-- injecting style resources -->
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .tabIndex1 { z-index: 1;}
        .tabIndex2 { z-index: 2;}
        .tabIndex3 { z-index: 3;}
        .tabIndex4 { z-index: 4;}
        .tabIndex5 { z-index: 5; padding: 0 35px 0 25px;}

        .selectorLayout {width: 980px; height: 350px;}
    </ui:style>

    <g:HTMLPanel styleName='{res.layout.bodyContainer}'>
        <g:TabLayoutPanel ui:field='mainPanel'
                          styleName='{res.createTabPanel.createTabPanel}' barUnit='PX' barHeight='50'>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML ui:field="firstTabHeader" stylePrimaryName="{res.layout.createTabLayoutHeader} {style.tabIndex1}">
                        1.
                        <ui:msg key="contactInfo">Contact Info</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" ui:field='userFormPanel'>
                    <g:center>
                        <g:VerticalPanel>
                            <g:Label>
                                <ui:msg key="loginOrRegisterToContinueLabel">Login or Register to continue</ui:msg>
                            </g:Label>
                            <g:SimplePanel ui:field="userFormHolder" />
                            <g:HorizontalPanel>
                                <g:Button ui:field="loginBtn">
                                    <ui:msg key="loginBtn">Login</ui:msg>
                                </g:Button>
                                <g:Button ui:field="registerBtn">
                                    <ui:msg key="registerBtn">Register for FREE</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>

                        </g:VerticalPanel>
                    </g:center>
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='userStatus'
                                            style='{res.common.infoMessage}' message='{text.loginOrRegisterToContinueLabel}'
                                            description='{text.loginDescription}' />
                    </g:south>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{res.layout.createTabLayoutHeader} {style.tabIndex1}">
                        2.
                        <ui:msg key="demandCreationTitle">Demand Creation</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='basicStatus'
                                            style='{res.common.infoMessage}' message='{text.formDemandBasicInfoLabel}'
                                            description='{text.basicDescription}' />
                    </g:south>
                    <g:center>
                        <g:VerticalPanel>
                            <g:SimplePanel ui:field="basicInfoHolder" />
                            <g:HorizontalPanel>
                                <g:Button ui:field="nextButtonTab2" >
                                    <ui:msg key="nextButtonTab">Next</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{res.layout.createTabLayoutHeader} {style.tabIndex2}">
                        3.
                        <ui:msg key="catsSelection">Category selection</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='categoryStatus'
                                            style='{res.common.infoMessage}' message='{text.categorySelectorInfoLabel}'
                                            description='{text.catDescription}' />
                    </g:south>
                    <g:center>
                        <g:VerticalPanel>
                            <g:SimplePanel ui:field="categoryHolder" styleName='{style.selectorLayout}'/>
                            <g:HorizontalPanel>
                                <g:Button ui:field="backButtonTab3">
                                    <ui:msg key='backButtonTab'>Back</ui:msg>
                                </g:Button>
                                <g:Button ui:field="nextButtonTab3">
                                    <ui:msg key="nextButtonTab">Next</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{res.layout.createTabLayoutHeader} {style.tabIndex3}">
                        4.
                        <ui:msg key="locsSelection">Locality selection</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='localityStatus'
                                            style='{res.common.infoMessage}' message='{text.localitySelectorInfoLabel}'
                                            description='{text.locDescription}' />
                    </g:south>
                    <g:center>
                        <g:VerticalPanel>
                            <g:SimplePanel ui:field="localityHolder" />
                            <g:HorizontalPanel>
                                <g:Button ui:field="backButtonTab4">
                                    <ui:msg key='backButtonTab'>Back</ui:msg>
                                </g:Button>
                                <g:Button ui:field="nextButtonTab4">
                                    <ui:msg key="nextButtonTab">Next</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{res.layout.createTabLayoutHeader} {style.tabIndex5}">
                        5.
                        <ui:msg key="demandAdvInfo">Demand Advanced Info</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:north size="20">
                        <g:SimplePanel ui:field="advInfoHolder" />
                    </g:north>
                    <g:center>
                        <g:HorizontalPanel>
                            <g:Button ui:field="backButtonTab5">
                                <ui:msg key='backButtonTab'>Back</ui:msg>
                            </g:Button>
                            <g:Button ui:field="createDemandBtn">
                                <ui:msg key='createDemandButton'>Create demand</ui:msg>
                            </g:Button>
                        </g:HorizontalPanel>
                    </g:center>
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='advStatus'
                                            style='{res.common.infoMessage}' message='{text.formDemandAdvInfoLabel}'
                                            description='{text.advDescription}' />
                    </g:south>


                </g:DockLayoutPanel>
            </g:tab>
        </g:TabLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>
