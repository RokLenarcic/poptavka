<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource' />

    <g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyFullContainer}'>
        <g:west size="180">
            <g:HTMLPanel>
                <!-- Supplier submenu -->
                <div ui:field="supplierMenu" style="display: block;">
                    <div class='{res.layout.submenuHeader}'>
                        Menu Supplier
                    </div>
                    <ul class='{res.layout.submenuList}'>
                        <li>
                            <g:Button ui:field="supplierNewDemands">
                                <ui:msg key="potentialDemands">Potential demands</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supplierOffers">
                                <ui:msg key="offers">My offers</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supplierAssignedDemands">
                                <ui:msg key="assignedDemands">Assigned demands</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supplierCreateDemand">
                                <ui:msg key="createDemandLink">Create Demand</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supplierCreateSupplier">
                                <ui:msg key="createSupplierLink">Create supplier</ui:msg>
                            </g:Button>
                        </li>

                        <li>
                            <g:Button ui:field="allDemands">
                                <ui:msg key="allDemandsLink">All Demands</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="allSuppliers">
                                <ui:msg key="allSuppliersLink">All Suppliers</ui:msg>
                            </g:Button>
                        </li>
                    </ul>
                </div>
            </g:HTMLPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel styleName='{res.layout.demandTabContent}'>
                <g:SimplePanel ui:field="contentPanel"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
