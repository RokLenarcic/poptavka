<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:FlowPanel>
        <!-- Supplier submenu -->
        <g:HTMLPanel styleName='{res.layout.leftContainer} user' debugId='leftSlidingPanel'>
            <ul class='{res.layout.submenuList}'>
                <li>
                    <g:Button ui:field="supplierDemands">
                        <ui:msg key="menuSupplierDemands">Potential Projects</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="supplierOffers">
                        <ui:msg key="menuSupplierOffers">Offers</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="supplierAssignedDemands">
                        <ui:msg key="menuSupplierAssignedDemands">Assigned Projects</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="supplierClosedDemands">
                        <ui:msg key="menuSupplierClosedDemands">Closed Projects</ui:msg>
                    </g:Button>
                </li>
                <li>
                    <g:Button ui:field="supplierRatings">
                        <ui:msg key="menuSupplierRatings">My Ratings</ui:msg>
                    </g:Button>
                </li>
            </ul>
        </g:HTMLPanel>
        <!--Main Content-->
        <g:SimplePanel ui:field="contentContainer" styleName='{res.layout.contentContainer} user'/>
    </g:FlowPanel>
</ui:UiBinder>
