<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }
        .rangeBox {
        width: 30px;
        margin-right:10px;
        margin-left:10px;
        }
        .margin {

        }
        .searchMainContent {
        width: 200px;
        }
    </ui:style>
    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />

    <g:HTMLPanel>
        <div>
            <ul>
                <li>
                    <ui:msg key="adminformMID">Message Id</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="messageIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="messageIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformDID">Demand Id</ui:msg>

                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="demandIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="demandIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformPID">Parent Id</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="parentIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="parentIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminFormSenderID">Sender Id</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="senderIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="senderIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformSubject">Subject</ui:msg>
                </li>
                <li>
                    <g:TextBox ui:field="subject"/>
                </li>
                <li>
                    <ui:msg key="adminformBody">Body</ui:msg>
                </li>
                <li>
                    <g:TextBox ui:field="body"/>
                </li>
                <li>
                    <ui:msg key="adminformState">State</ui:msg>
                </li>
                <li>
                    <g:ListBox ui:field="state"/>
                </li>
                <li>
                    <ui:msg key="adminformType">Type</ui:msg>
                </li>
                <li>
                    <g:ListBox ui:field="type"/>
                </li>
                <li>
                    <ui:msg key="formCreationDate">Created</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <p1:DateBox ui:field="createdFrom"/>
                                        to
                                        <p1:DateBox ui:field="createdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformSent">Sent</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <p1:DateBox ui:field="sentFrom"/>
                                        to
                                        <p1:DateBox ui:field="sentTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
