<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">

    <ui:style>
        .loader {
            position: absolute;
            width: 99%;
            height: 100%;
            background: url(images/app-loader.gif) center center no-repeat #666666;
        }
    </ui:style>
    <div ui:field="loading" class="{style.loader}">
        <div style="background-color: #666; opacity: 0.3; filter: alpha(opacity=30);">
        </div>        
    </div>
</ui:UiBinder>
