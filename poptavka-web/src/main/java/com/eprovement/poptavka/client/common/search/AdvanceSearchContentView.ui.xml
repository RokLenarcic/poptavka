<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cat="urn:import:com.eprovement.poptavka.client.common.category"
             xmlns:homeDemands="urn:import:com.eprovement.poptavka.client.homedemands"
             xmlns:homeSuppliers="urn:import:com.eprovement.poptavka.client.homesuppliers">
    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />

    <ui:style>
        .search-button {
        background: none repeat scroll 0 0 transparent;
        border: medium none;
        color: #FFFFFF;
        cursor: pointer;
        font-weight: bold;
        height: 40px;
        padding: 0;
        width: 54px;
        }

        .search-list {
        background: url(images/advanced-search-dropdown.png) repeat scroll 0 0
        transparent;
        color: #002F51;
        cursor: pointer;
        height: 23px;
        left: 743px;
        position: absolute;
        top: 80px;
        width: 137px;
        }

        .search-list {
        cursor: pointer;
        }

        .search-list-item {
        line-height:20px;
        padding: 0 27px 0
        5px;
        width:105px;
        }

        .search-list-dropdown table {
        background: #ffffff;
        padding:10px;
        margin:
        3px 0 0 -9px;
        line-height:
        20px;
        width: 136px;
        border: 1px solid #C2C8D2;
        border-radius: 4px;
        box-shadow: 0 0 3px
        #DDDDDD;
        }

        .search-list-dropdown
        table td:hover {
        color: #bd0000;
        cursor:pointer;
        }
    </ui:style>

    <g:VerticalPanel>
        <g:HTMLPanel>
            <ui:msg key="searchBtnSearch">Search</ui:msg>
            <g:MenuBar vertical="false" styleName='{style.search-list}'>
                <g:MenuItem ui:field="searchWhatItem" styleName='{style.search-list-item}'>
                    <ui:msg key="searchMenuDemand">Demand</ui:msg>
                    <g:MenuBar vertical="true" ui:field="searchWhatList"
                               styleName='{style.search-list-dropdown}'>
                        <g:MenuItem ui:field="demand">
                            <ui:msg key="searchMenuDemand">Demand</ui:msg>
                        </g:MenuItem>
                        <g:MenuItem ui:field="supplier">
                            <ui:msg key="searchMenuSupplier">Supplier</ui:msg>
                        </g:MenuItem>
                    </g:MenuBar>
                </g:MenuItem>
            </g:MenuBar>
            <g:Button ui:field="searchBtn" styleName='{style.search-button}' >search</g:Button>
        </g:HTMLPanel>
        <g:TabLayoutPanel ui:field='mainPanel' barUnit='PX' barHeight='42' animationDuration="1000"
                          styleName="{res.advancedSearchTabPanel.advancedSearchTabPanel}">
            <g:tab>
                <g:header>
                    <ui:msg key="advSearchDemandsTab">Demand's table attributes</ui:msg>
                </g:header>
                <homeDemands:HomeDemandsSearchView ui:field="demandsAttributeSelectorWidget" />
            </g:tab>
            <g:tab>
                <g:header>
                    <ui:msg key="advSearchSuppliersTab">Supplier's table attributes</ui:msg>
                </g:header>
                <homeSuppliers:HomeSuppliersSearchView ui:field="suppliersAttributeSelectorWidget" />
            </g:tab>
            <g:tab>
                <g:customHeader size="10">
                    <g:Label ui:field="currentViewAttributesLabel">
                        <ui:msg key="advSearchCurrentViewTab">Current's table attributes</ui:msg>
                    </g:Label>
                </g:customHeader>
                <g:SimplePanel ui:field="attributeSelectorWidgetPanel" />
            </g:tab>
            <g:tab>
                <g:header>
                    <ui:msg key="advSearchCategoriesTab">Categories</ui:msg>
                </g:header>
                <g:SimplePanel ui:field="categorySelectorWidgetPanel" />
            </g:tab>
            <g:tab>
                <g:header>
                    <ui:msg key="advSearchLocalitiesTab">Localities</ui:msg>
                </g:header>
                <g:SimplePanel ui:field="localitySelectorWidgetPanel" />
            </g:tab>
        </g:TabLayoutPanel>
    </g:VerticalPanel>
</ui:UiBinder>
