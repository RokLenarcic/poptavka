<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

    <!-- injecting style resources -->
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />

    <g:HTMLPanel>
        <g:RadioButton name="type" ui:field="personRadio"
                       checked="true">
            <ui:msg key="privatePerson">Private Person</ui:msg>
        </g:RadioButton>
        <g:RadioButton name="type" ui:field="companyRadio">
            <ui:msg key="company">Company</ui:msg>
        </g:RadioButton>
        <div>
            <div style="float: left;">
                <table>
                    <tr>
                        <th colspan="3">
                            <ui:msg key="accInfo">Account Info</ui:msg>
                        </th>
                    </tr>
                    <tr height="32px">
                        <td>
                            <ui:msg key="emailLogin">E-mail</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="mailBox">novy@user.cz</g:TextBox>
                        </td>
                        <td width="32px">
                            <cm:StatusIconLabel ui:field="mailStatus" visible="false" state="LOAD_24" description="Checking email availability" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="pass">Password</ui:msg>
                        </td>
                        <td>
                            <g:PasswordTextBox ui:field="passBox">heslo</g:PasswordTextBox>
                        </td>
                        <td>
                            <cm:StatusIconLabel ui:field="pwdStatus" visible="false" state="ERROR_24" description="Short password" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="passRepeat">Password Again</ui:msg>
                        </td>
                        <td>
                            <g:PasswordTextBox ui:field="passConfirmBox">heslo</g:PasswordTextBox>
                        </td>
                        <td>
                            <cm:StatusIconLabel ui:field="pwdCheckStatus" visible="false" state="ERROR_24" description="Passwords don't match" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                    <tr>
                        <th colspan="3">
                            <ui:msg key="contactPerson">Contact Person</ui:msg>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="name">Name</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="nameBox">Meno</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="lastName">Last Name</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="surnameBox">Priezvisko</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="phone">Phone</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="phoneBox">123456789</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                </table>
            </div>
            <div>
                <table>
                    <tr>
                        <th colspan="3">
                            <ui:msg key="companyInfo">Company Info</ui:msg>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="companyName">Company Name</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="companyNameBox" enabled="false"
                                       styleName="{res.common.disabledText}" />
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="idNumber">Identification Number</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="companyIdBox" enabled="false"
                                       styleName="{res.common.disabledText}" />
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="taxNumber">Tax Number</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="companyTaxBox" enabled="false"
                                       styleName="{res.common.disabledText}" />
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="website">Your Website</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="websiteBox">www.sss.zzz</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <th colspan="3">
                            <ui:msg key="address">Address</ui:msg>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="street">Street</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="streetBox">ulica</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="city">City</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="cityBox">Brno</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="zipcode">Zipcode</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field="zipBox">60200</g:TextBox>
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <g:HorizontalPanel>
            <g:Button ui:field="backBtn">
                <ui:msg key="back">Back</ui:msg>
            </g:Button>
            <g:Button ui:field="registerBtn">
                <ui:msg key="nextButtin">Next</ui:msg>
            </g:Button>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
