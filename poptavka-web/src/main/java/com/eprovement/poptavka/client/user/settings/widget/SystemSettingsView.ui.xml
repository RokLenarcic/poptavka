<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <b:FluidContainer ui:field='fluidContainer' addStyleNames='{res.common.wellContainer} {res.common.formFields}'>
        <b:FluidRow addStyleNames='well-header'>
            <b:Column size="12">
                <b:Heading size="4">
                    <ui:msg key='userSettingsNotifications'>Notifications:</ui:msg>                                                                
                </b:Heading>
            </b:Column>
        </b:FluidRow>
        <b:FluidRow addStyleNames='well-content'>
            <b:Column size="12" addStyleNames='well-padding'>
                <g:FlowPanel ui:field="notifications"/>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
