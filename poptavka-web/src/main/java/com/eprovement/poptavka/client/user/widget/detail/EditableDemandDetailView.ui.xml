<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
        xmlns:i="urn:import:com.eprovement.poptavka.client.common">

    <ui:style>
        .error {
        font-size:10px;
        color: red;
        }
    </ui:style>
	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:HTMLPanel ui:field="detail">
		<h4 class="{res.detailViews.demandDetailSectionHeader}">
			<ui:msg key="demandInfo">Demand information</ui:msg>
		</h4>
		<g:ScrollPanel>
			<g:HTMLPanel styleName="{res.detailViews.demandDetailContent}">
				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="commonInfo">Common info</ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="demandName">Demand name: </ui:msg>
						</g:Label>
						<g:TextBox ui:field="title" />
                                                <g:Label styleName="{style.error}" ui:field="errorLabelTitle"/>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="price">Price:</ui:msg>
						</g:Label>
						<i:BigDecimalBox ui:field="price" />$
                                                <g:Label styleName="{style.error}" ui:field="errorLabelPrice"/>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="endDate">End date:</ui:msg>
						</g:Label>
						<d:DateBox ui:field="endDate" />
                                                <g:Label styleName="{style.error}" ui:field="errorLabelEndDate"/>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="validTo">Valid to: </ui:msg>
						</g:Label>
						<d:DateBox ui:field="validToDate" />
                                                <g:Label styleName="{style.error}" ui:field="errorLabelValidToDate"/>
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="categories">Category info</ui:msg>
					</g:Label>
                                        <c:CellList ui:field="categories" styleName='{res.detailViews.detailCategoryLabel}'/>
                                        <g:Label styleName="{style.error}" ui:field="errorLabelCategories"/>
<!--                                        <g:Button ui:field='editCatBtn'>
                                            <ui:msg key='edit'>Edit</ui:msg>
                                        </g:Button>-->
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="localities">Locality info</ui:msg>
					</g:Label>
                                        <c:CellList ui:field="localities" styleName='{res.detailViews.detailLocalityLabel}'/>
                                        <g:Label styleName="{style.error}" ui:field="errorLabelLocalities"/>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="detailInfo">Detail info: </ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="maxNumberOfSuppliers">Maximal number of suppliers:</ui:msg>
						</g:Label>
						<i:IntegerBox ui:field="maxOffers" />
                                                <g:Label styleName="{style.error}" ui:field="errorLabelMaxOffers"/>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="minSupplierRating">Minimal supplier rating: </ui:msg>
						</g:Label>
						<i:IntegerBox ui:field="minRating" />%
                                                <g:Label styleName="{style.error}" ui:field="errorLabelMinRating"/>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="excludedSuppliers">Excluded suppliers: </ui:msg>
						</g:Label>
						<c:CellList ui:field="excludedSuppliers" />
                                                <g:Label styleName="{style.error}" ui:field="errorLabelExclidedSuppliers"/>
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="description">Description: </ui:msg>
					</g:Label>
					<g:TextArea ui:field="description" />
                                        <g:Label styleName="{style.error}" ui:field="errorLabelDescription"/>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="choiceButtonsPanel">
					<g:Button ui:field="editDemandButton">Edit demand</g:Button>
					<g:Button ui:field="deleteDemandButton">Delete demand</g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="editButtonsPanel">
					<g:Button ui:field="submitButton">Submit</g:Button>
					<g:Button ui:field="cancelButton">Cancel</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder>
