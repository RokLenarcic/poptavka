<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
        xmlns:i="urn:import:com.eprovement.poptavka.client.common"
        xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

	<ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />

	<g:HTMLPanel ui:field="detail">
		<h4 class="{res.detailViews.demandDetailSectionHeader}">
			<ui:msg key="formDemandInfo">Demand information</ui:msg>
		</h4>
		<g:ScrollPanel>
			<g:HTMLPanel styleName="{res.detailViews.demandDetailContent}">
				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="formCommonInfo">Common info</ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formDemandTitle">Demand title</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='titleMonitor'>
                                                        <g:TextBox ui:field="title" title="title"/>
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formPrice">Price:</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='priceMonitor'>
                                                        <i:BigDecimalBox ui:field="price" title="price" />
                                                        <!--<g:TextBox ui:field="price" title="price" />-->
                                                </cm:ChangeMonitor>$
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formEndDate">End date:</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='endDateMonitor'>
                                                        <d:DateBox ui:field="endDate"  title="endDate"/>
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formValidTo">Valid to: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='validToDateMonitor'>
                                                        <d:DateBox ui:field="validToDate"  title="validToDate"/>
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="formCategories">Category info</ui:msg>
					</g:Label>
                                        <cm:ChangeMonitor ui:field='categoriesMonitor'>
                                                <c:CellList ui:field="categories" styleName='{res.detailViews.detailCategoryLabel}' title="categories"/>
                                        </cm:ChangeMonitor>
                                        <g:Button ui:field="editCatBtn">
                                            <ui:msg key="commonBtnEdit">Edit</ui:msg>
                                        </g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="formLocalities">Locality info</ui:msg>
					</g:Label>
                                        <cm:ChangeMonitor ui:field='localitiesMonitor'>
                                                <c:CellList ui:field="localities" styleName='{res.detailViews.detailLocalityLabel}' title="localities"/>
                                        </cm:ChangeMonitor>
                                        <g:Button ui:field="editLocBtn">
                                            <ui:msg key="commonBtnEdit">Edit</ui:msg>
                                        </g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="formDetailInfo">Detail info: </ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formMaxSuppliers">Maximal number of suppliers:</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='maxOffersMonitor'>
                                                        <i:IntegerBox ui:field="maxOffers" title="maxOffers" />
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formMinSupplierRating">Minimal supplier rating: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='minRatingMonitor'>
                                                        <i:IntegerBox ui:field="minRating" title="minRating" />
                                                </cm:ChangeMonitor>%
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="formExcludedSuppliers">Excluded suppliers: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='excludedSuppliersMonitor'>
                                                        <c:CellList ui:field="excludedSuppliers" title="excludedSuppliers" />
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="formDescription">Description: </ui:msg>
					</g:Label>
                                        <cm:ChangeMonitor ui:field='descriptionMonitor'>
                                                <g:TextArea ui:field="description" title="description" />
                                        </cm:ChangeMonitor>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="choiceButtonsPanel">
					<g:Button ui:field="editDemandButton">
                                            <ui:msg key="commonBtnEdit">Edit</ui:msg>
                                        </g:Button>
					<g:Button ui:field="deleteDemandButton">
                                            <ui:msg key="commonBtnDelete">Delete</ui:msg>
                                        </g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="editButtonsPanel">
					<g:Button ui:field="submitButton">
                                            <ui:msg key="commonBtnSubmit">submit</ui:msg>
                                        </g:Button>
					<g:Button ui:field="cancelButton">
                                            <ui:msg key="commonBtnCancel">Cancel</ui:msg>
                                        </g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder>
