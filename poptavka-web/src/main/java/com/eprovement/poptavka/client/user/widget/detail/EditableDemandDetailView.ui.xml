<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
        xmlns:i="urn:import:com.eprovement.poptavka.client.common"
        xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:HTMLPanel ui:field="detail">
		<h4 class="{res.detailViews.demandDetailSectionHeader}">
			<ui:msg key="demandInfo">Demand information</ui:msg>
		</h4>
		<g:ScrollPanel>
			<g:HTMLPanel styleName="{res.detailViews.demandDetailContent}">
				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="commonInfo">Common info</ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="demandName">Demand name: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='titleMonitor'>
                                                        <g:TextBox ui:field="title" title="title"/>
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="price">Price:</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='priceMonitor'>
                                                        <i:BigDecimalBox ui:field="price" title="price" />
                                                        <!--<g:TextBox ui:field="price" title="price" />-->
                                                </cm:ChangeMonitor>$
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="endDate">End date:</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='endDateMonitor'>
                                                        <d:DateBox ui:field="endDate"  title="endDate"/>
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="validTo">Valid to: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='validToDateMonitor'>
                                                        <d:DateBox ui:field="validToDate"  title="validToDate"/>
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="categories">Category info</ui:msg>
					</g:Label>
                                        <cm:ChangeMonitor ui:field='categoriesMonitor'>
                                                <c:CellList ui:field="categories" styleName='{res.detailViews.detailCategoryLabel}' title="categories"/>
                                        </cm:ChangeMonitor>
                                        <g:Button ui:field="editCatBtn">Edit</g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="localities">Locality info</ui:msg>
					</g:Label>
                                        <cm:ChangeMonitor ui:field='localitiesMonitor'>
                                                <c:CellList ui:field="localities" styleName='{res.detailViews.detailLocalityLabel}' title="localities"/>
                                        </cm:ChangeMonitor>
                                        <g:Button ui:field="editLocBtn">Edit</g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="detailInfo">Detail info: </ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="maxNumberOfSuppliers">Maximal number of suppliers:</ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='maxOffersMonitor'>
                                                        <i:IntegerBox ui:field="maxOffers" title="maxOffers" />
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="minSupplierRating">Minimal supplier rating: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='minRatingMonitor'>
                                                        <i:IntegerBox ui:field="minRating" title="minRating" />
                                                </cm:ChangeMonitor>%
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="excludedSuppliers">Excluded suppliers: </ui:msg>
						</g:Label>
                                                <cm:ChangeMonitor ui:field='excludedSuppliersMonitor'>
                                                        <c:CellList ui:field="excludedSuppliers" title="excludedSuppliers" />
                                                </cm:ChangeMonitor>
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="description">Description: </ui:msg>
					</g:Label>
                                        <cm:ChangeMonitor ui:field='descriptionMonitor'>
                                                <g:TextArea ui:field="description" title="description" />
                                        </cm:ChangeMonitor>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="choiceButtonsPanel">
					<g:Button ui:field="editDemandButton">Edit demand</g:Button>
					<g:Button ui:field="deleteDemandButton">Delete demand</g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="editButtonsPanel">
					<g:Button ui:field="submitButton">Submit</g:Button>
					<g:Button ui:field="cancelButton">Stop editing</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder>
