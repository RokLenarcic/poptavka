<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:bb="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:HTMLPanel styleName='{res.header.login}'>
        <!--Icon anchor-->
        <b:Tooltip text="Login" placement="LEFT">
            <g:Button ui:field='loginButtonSmall' styleName='{res.header.loginIcon}'/>
        </b:Tooltip>

        <!--Button-->
        <div class='{res.header.loginPanel}'>
            <div class='{res.header.loginButton}'>
                <g:Anchor ui:field="loginButton">
                    <ui:msg key="headerLogIn">Log In</ui:msg>
                </g:Anchor>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>