<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:bb="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:HTMLPanel styleName='{res.header.login}'>

        <b:Tooltip text="Login" placement="BOTTOM">
            <bb:IconAnchor ui:field='loginAnchor' icon="SIGNIN" iconSize="TWO_TIMES" styleName='{res.header.loginIcon}'/>
        </b:Tooltip>

        <div class='{res.header.loginPanel}'>
            <div class='{res.header.loginButton}'>
                <g:Anchor ui:field="loginButton">
                    <ui:msg key="headerLogIn">Log In</ui:msg>
                </g:Anchor>
            </div>
            <!--<div id="loginAnchor" style="position: absolute; width: 150px; right: 0px; z-index: 151;"/>-->
        </div>

    </g:HTMLPanel>
</ui:UiBinder>