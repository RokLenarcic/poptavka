<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:HTMLPanel ui:field="detail">
		<h4 class="{res.detailViews.demandDetailSectionHeader}">
			<ui:msg key="demandInfo">Demand information</ui:msg>
		</h4>
		<g:ScrollPanel>
			<g:HTMLPanel styleName="{res.detailViews.demandDetailContent}">
				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="commonInfo">Common info</ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="demandName">Demand name: </ui:msg>
						</g:Label>
						<g:TextBox ui:field="demandName" />
					</g:HTMLPanel>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="price">Price:</ui:msg>
						</g:Label>
						<g:TextBox ui:field="price" />
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="endDate">End date:</ui:msg>
						</g:Label>
						<g:TextBox ui:field="endDate" />
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="validTo">Valid to: </ui:msg>
						</g:Label>
						<g:TextBox ui:field="validTo" />
					</g:HTMLPanel>
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="type">Type: </ui:msg>
						</g:Label>
						<g:TextBox ui:field="type" />
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="categories">Category info</ui:msg>
					</g:Label>
					<g:Label styleName='{res.detailViews.detailCategoryLabel}' ui:field="categories" />
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="localities">Locality info</ui:msg>
					</g:Label>
					<g:Label styleName='{res.detailViews.detailBlockLabel} {res.detailViews.detailLocalityLabel}' 
					ui:field="localities" />
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="detailInfo">Detail info: </ui:msg>
					</g:Label>

					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="maxNumberOfSuppliers">Maximal number of suppliers:</ui:msg>
						</g:Label>
						<g:TextBox ui:field="maxNumberOfSuppliers" />
					</g:HTMLPanel>
					
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="minSupplierRating">Minimal supplier rating: </ui:msg>
						</g:Label>
						<g:TextBox ui:field="minSupplierRating" />
					</g:HTMLPanel>
					
					<g:HTMLPanel>
						<g:Label styleName='{res.detailViews.detailBlockLabel}'>
							<ui:msg key="excludedSuppliers">Excluded suppliers: </ui:msg>
						</g:Label>
						<g:TextBox ui:field="excludedSuppliers" />
					</g:HTMLPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName='{res.detailViews.detailBlock}'>
					<g:Label styleName='{res.detailViews.detailHeader}'>
						<ui:msg key="description">Description: </ui:msg>
					</g:Label>
					<g:TextBox ui:field="description" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="choiceButtonsPanel">
					<g:Button ui:field="editDemandButton">Edit demand</g:Button>
					<g:Button ui:field="deleteDemandButton">Delete demand</g:Button>
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="editButtonsPanel">
					<g:Button ui:field="submitButton">Submit</g:Button>
					<g:Button ui:field="cancelButton">Cancel</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder>
