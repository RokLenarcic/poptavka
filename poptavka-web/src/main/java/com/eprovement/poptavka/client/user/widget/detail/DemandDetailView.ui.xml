<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res'
        type='com.eprovement.poptavka.resources.StyleResource' />

    <g:DockLayoutPanel unit="PX" styleName='{res.layout.fullSize}'>
        <g:north size="53">
            <b:Heading size='4'
                styleName="{res.detailViews.demandDetailSectionHeader}">
                <ui:msg key="formDemandInfo">Demand information</ui:msg>
            </b:Heading>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <b:FluidContainer
                    addStyleNames='{res.detailViews.demandDetailContent}'>
                    <b:FluidRow addStyleNames='{res.detailViews.detailBlock}'>
                        <b:Column size='12'>
                            <b:Heading size='5'
                                styleName='{res.detailViews.detailHeader}'>
                                <ui:msg key="formCommonInfo">Common info</ui:msg>
                            </b:Heading>
                        </b:Column>

                        <b:Column size='12'>
                            <g:Label
                                styleName='{res.detailViews.detailBlockLabel}'>
                                <ui:msg key="formDemandTitle">Demand title: </ui:msg>
                            </g:Label>
                            <g:Label ui:field="demandName" addStyleNames='{res.detailViews.detailStrong}'/>
                        </b:Column>

                        <b:Column size='12'>
                            <g:Label
                                styleName='{res.detailViews.detailBlockLabel}'>
                                <ui:msg key="formPrice">Price:</ui:msg>
                            </g:Label>
                            <g:Label ui:field="price" addStyleNames='{res.detailViews.detailStrong}'/>
                        </b:Column>

                        <b:Column size='12'>
                            <g:Label
                                styleName='{res.detailViews.detailBlockLabel}'>
                                <ui:msg key="formEndDate">End date:</ui:msg>
                            </g:Label>
                            <g:Label styleName='{res.detailViews.detailDateLabel}'
                                ui:field="endDate" />
                        </b:Column>
                        <b:Column size='12'>
                            <g:Label
                                styleName='{res.detailViews.detailBlockLabel}'>
                                <ui:msg key="formValidTo">Valid to: </ui:msg>
                            </g:Label>
                            <g:Label styleName='{res.detailViews.detailDateLabel}'
                                ui:field="validTo" />
                        </b:Column>
                        <b:Column size='12'>
                            <g:Label
                                styleName='{res.detailViews.detailBlockLabel}'>
                                <ui:msg key="formClientRating">Client rating:</ui:msg>
                            </g:Label>
                            <g:Label ui:field="clientRating" addStyleNames='{res.detailViews.detailStrong}'/>
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow addStyleNames='{res.detailViews.detailBlock}'>
                        <b:Column size='12'>
                            <b:Heading size='5'
                                styleName='{res.detailViews.detailHeader}'>
                                <ui:msg key="formCategories">Category info</ui:msg>
                            </b:Heading>
                        </b:Column>
                        <b:Column size='12'>
                            <c:CellList ui:field="categories"
                                styleName='{res.detailViews.detailCategoryLabel}' />
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow addStyleNames='{res.detailViews.detailBlock}'>
                        <b:Column size='12'>
                            <b:Heading size='5'
                                styleName='{res.detailViews.detailHeader}'>
                                <ui:msg key="formLocalities">Locality info</ui:msg>
                            </b:Heading>
                        </b:Column>
                        <b:Column size='12'>
                            <c:CellList ui:field="localities"
                                styleName='{res.detailViews.detailLocalityLabel}' />
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow addStyleNames='{res.detailViews.detailBlock}'>
                        <b:Column size='12'>
                            <b:Heading size='5'
                                styleName='{res.detailViews.detailHeader}'>
                                <ui:msg key="formDescription">Description: </ui:msg>
                            </b:Heading>
                        </b:Column>
                        <b:Column size='12'>
                            <g:Label ui:field="description" />
                        </b:Column>
                    </b:FluidRow>
                </b:FluidContainer>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
