<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:HTMLPanel>
        <center>
            <h1>Supplier Dashboard</h1>
        </center>
        <br />
        <b:FluidContainer addStyleNames='{res.common.validationContainer}'>
            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:Label>
                        Recent News
                    </g:Label>
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:HTML ui:field="potentialDemandsUnreadMessages" />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:HTML ui:field="offeredDemandsUnreadMessages" />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:HTML ui:field="assignedDemandsUnreadMessages" />
                </b:Column>
            </b:FluidRow>

            <b:FluidRow>
                <b:Column size="1">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="11">
                    <g:HTML ui:field="closedDemandsUnreadMessages" />
                </b:Column>
            </b:FluidRow>

        </b:FluidContainer>
    </g:HTMLPanel>
</ui:UiBinder>