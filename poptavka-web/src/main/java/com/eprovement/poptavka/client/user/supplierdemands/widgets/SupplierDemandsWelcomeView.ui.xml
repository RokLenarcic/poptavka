<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
        <g:north size="70">
            <g:HTMLPanel></g:HTMLPanel>
        </g:north>
        <g:east size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:east>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel styleName='{res.layout.bodyFullContainer}'>
                <b:FluidContainer addStyleNames='{res.common.validationContainer} {res.layout.dashboard}'>
                    <b:FluidRow>
                        <b:Column size="4" addStyleNames='dashboard-block'>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <b:Heading size="4">
                                        Professional Dashboard
                                    </b:Heading>
                                </b:Column>
                            </b:FluidRow>

                            <b:FluidRow addStyleNames='dashboard-block-content'>
                                <b:Column size="12">
                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <b:Heading size="5">
                                                Recent News
                                            </b:Heading>
                                        </b:Column>
                                    </b:FluidRow>
                                    <b:FluidRow ui:field="potentialDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="potentialDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="offeredDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="offeredDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="assignedDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="assignedDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow ui:field="closedDemandsRow">
                                        <b:Column size="12">
                                            <g:HTML ui:field="closedDemandsUnreadMessages" addStyleNames='label-list'/>
                                        </b:Column>
                                    </b:FluidRow>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>

                        <b:Column size="8" addStyleNames='dashboard-block'>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <b:Heading size="4">
                                        Quick Guide to Professional Menu
                                    </b:Heading>
                                </b:Column>
                            </b:FluidRow>

                            <b:FluidRow addStyleNames='dashboard-block-content'>
                                <b:Column size="12">
                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuSupplierDemands">Potential Projects</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                All projects matching your profession and localities
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuSupplierOffers">Offers</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Offers you made for projects that are waiting for Client's decision
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuSupplierAssignedDemands">Assigned Projects</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Projects in progress that are assigned to you
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuSupplierClosedDemands">Closed Projects</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Finished Projects accepted by Client
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>

                                    <b:FluidRow>
                                        <b:Column size="12">
                                            <g:Label addStyleNames='pull-left'>
                                                <ui:msg key="menuSupplierRatings">My Ratings</ui:msg>
                                            </g:Label>
                                            <g:Label styleName='description'>
                                                Here you can check Feedback for Closed Projects
                                            </g:Label>
                                        </b:Column>
                                    </b:FluidRow>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:FluidContainer>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>