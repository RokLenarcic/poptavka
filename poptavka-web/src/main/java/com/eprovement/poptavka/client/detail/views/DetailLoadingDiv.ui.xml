<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">

    <ui:style>
        .loader-bg {
        background: rgba(255, 255, 255, 0.5);        
        width: 99%;
        height: 100%;
        }
        
        .loader {
        background: url("images/app-loader.gif") no-repeat scroll center center transparent;
        box-shadow: 0 0 5px #000000;
        height: 115px;
        left: 50%;
        margin-left: -65px;
        position: absolute;
        top: 33%;
        width: 131px;
        }
    </ui:style>
    <div ui:field="loading" class="{style.loader-bg}">
        <div class="{style.loader}"></div>
    </div>
</ui:UiBinder>
