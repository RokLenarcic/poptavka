<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:cm='urn:import:com.eprovement.poptavka.client.common'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'>

    <ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555;
		}

		.label {
			font-weight: bold;
		}

		.decorationPanel {
			width: 100%;
		}

		.titleBox {
			width: 100%;
			height: 55px;
		}

		.descriptionBox {
			width: 100%;
			height: 150px;
		}

		.priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
			{

		}
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <g:HTMLPanel>
                <table style="width: 100%;">
                    <tr>
                        <td colspan='2' align='center' class='{style.header}'>
                            <ui:msg key='formDemandInfo'>Demand Info</ui:msg>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class='{style.label}'>
                            <ui:msg key='formTitle'>Title:</ui:msg>
                            <cm:ChangeMonitor ui:field='titleBox'>
                                <g:TextBox  styleName='{style.titleBox}'/>
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class='{style.label}'>
                            <ui:msg key='formDescription'>Description:</ui:msg>
                            <cm:ChangeMonitor ui:field='descriptionBox' >
                                <g:TextArea styleName='{style.descriptionBox}' />
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formPrice'>Price:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='priceBox'>
                                <g:TextBox styleName='{style.priceBox}' />
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formEndDate'>End Date:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='endDateBox'>
                                <d:DateBox styleName='{style.endDateBox}' />
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formExpirationDate'>Expiration:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='expirationBox'>
                                <d:DateBox styleName='{style.expirationBox}' />
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='adminFormCID'>ClientID:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='clientID' styleName='{style.clientID}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formMaxOffers'>Max Offers:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='maxOffers' >
                                <g:TextBox styleName='{style.maxOffers}'/>
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formRating'>MinRating:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='minRating'>
                                <g:TextBox styleName='{style.minRating}'/>
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
                            <g:Label>
                                <ui:msg key="formExcludedSuppliers">Excluded supplier list</ui:msg>
                            </g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <cm:ChangeMonitor ui:field = "excludedSupplierList">
                                    <c:CellList ui:field="excludedSupplierCellList" />
                                </cm:ChangeMonitor>
                                <g:Button ui:field='editExcludedSupplierBtn'>
                                    <ui:msg key='commonBtnEdit'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formDemandType'>Demand Type:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='demandType'>
                                <g:ListBox styleName='{style.demandType}'/>
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formDemandStatus'>Demand Status:</ui:msg>
                        </td>
                        <td>
                            <cm:ChangeMonitor ui:field='demandStatus'>
                                <g:ListBox styleName='{style.demandStatus}'/>
                            </cm:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
                            <ui:msg key='formCategories'>Category List</ui:msg>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <cm:ChangeMonitor ui:field = "categoryList">
                                    <c:CellList ui:field="categoryCellList" />
                                </cm:ChangeMonitor>
                                <g:Button ui:field='editCatBtn'>
                                    <ui:msg key='commonBtnEdit'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
                            <ui:msg key='formLocalities'>Locality List</ui:msg>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <cm:ChangeMonitor ui:field = "localityList">
                                    <c:CellList ui:field="localityCellList" />
                                </cm:ChangeMonitor>
                                <g:Button ui:field='editLocBtn'>
                                    <ui:msg key='commonBtnEdit'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td colspan='2' align='center'>
                            <g:Button ui:field='updateButton'>
                                <ui:msg key='adminCommonUpdateBtn'>Update</ui:msg>
                            </g:Button>
						&nbsp;
                            <g:Button ui:field='createButton'>
                                <ui:msg key='adminCommonCreateBtn'>Create</ui:msg>
                            </g:Button>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:ScrollPanel>
    </g:DecoratorPanel>
</ui:UiBinder>
