<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:co='urn:import:com.eprovement.poptavka.client.common'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'>

    <!--<ui:import field='com.eprovement.poptavka.shared.domain.demand.FullDemandDetail.DemandField.*' />-->

    <ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555;
		}

		.label {
			font-weight: bold;
		}

		.decorationPanel {
			width: 100%;
		}

		.titleBox {
			width: 100%;
			height: 55px;
		}

		.descriptionBox {
			width: 100%;
			height: 150px;
		}

		.priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
			{

		}
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <g:HTMLPanel>
                <table style="width: 100%;">
                    <tr>
                        <td colspan='2' align='center' class='{style.header}'>
                            <ui:msg key='contactInfoFormTitle'>Demand Info</ui:msg>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class='{style.label}'>
                            <ui:msg key='title'>Title:</ui:msg>
                            <co:ChangeMonitor ui:field='titleBox' styleName='{style.titleBox}'>
                                <g:TextBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class='{style.label}'>
                            <ui:msg key='description'>Description:</ui:msg>
                            <co:ChangeMonitor ui:field='descriptionBox' >
                                <g:TextArea styleName='{style.descriptionBox}' />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='price'>Price:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='priceBox' styleName='{style.priceBox}' >
                                <g:TextBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='endDate'>End Date:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='endDateBox' styleName='{style.endDateBox}' >
                                <d:DateBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='expiration'>Expiration:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='expirationBox' styleName='{style.expirationBox}' >
                                <d:DateBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='clientID'>ClientID:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='clientID' styleName='{style.clientID}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='maxOffers'>Max Offers:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='maxOffers' styleName='{style.maxOffers}' >
                                <g:TextBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='minRating'>MinRating:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='minRating' styleName='{style.minRating}' >
                                <g:TextBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='demandType'>Demand Type:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='demandType' styleName='{style.demandType}' >
                                <g:ListBox/>
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='demandStatus'>Demand Status:</ui:msg>
                        </td>
                        <td>
                            <co:ChangeMonitor ui:field='demandStatus' styleName='{style.demandStatus}' >
                                <g:ListBox />
                            </co:ChangeMonitor>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
<!--                        <ui:msg key='demandCategoryList'>Category List</ui:msg>-->
                            <g:Label>Category List</g:Label>

                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <co:ChangeMonitor ui:field = "categoryList">
                                    <g:ListBox visibleItemCount='5' width = '330' />
                                </co:ChangeMonitor>
                                <g:Button ui:field='editCatBtn'>
                                    <ui:msg key='demandCategoryList'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="2" class='{style.label}'>
<!--                        <ui:msg key='demandLocalityList'>Locality List</ui:msg>-->
                            <g:Label>Locality List</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align='right'>
                            <g:VerticalPanel>
                                <co:ChangeMonitor ui:field = "localityList">
                                    <g:ListBox visibleItemCount='5' width = '330' />
                                </co:ChangeMonitor>
                                <g:Button ui:field='editLocBtn'>
                                    <ui:msg key='demandLocalityList'>Edit</ui:msg>
                                </g:Button>
                            </g:VerticalPanel>
                        </td>
                    </tr>
                    <tr>
                        <td colspan='2' align='center'>
                            <g:Button ui:field='updateButton'>
                                <ui:msg key='demandDetailFormUpdateButton'>Update Demand</ui:msg>
                            </g:Button>
						&nbsp;
                            <g:Button ui:field='createButton'>
                                <ui:msg key='demandDetailFormCreateButton'>Create Demand</ui:msg>
                            </g:Button>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:ScrollPanel>
    </g:DecoratorPanel>
</ui:UiBinder>
