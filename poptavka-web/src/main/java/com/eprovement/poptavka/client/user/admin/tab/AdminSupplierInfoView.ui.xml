<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .header {
        font-size: 110%;
        font-weight: bold;
        color: #555;
        }

        .label {
        font-weight: bold;
        }

        .decorationPanel {
        width: 100%;
        }

        .titleBox {
        width: 100%;
        height: 55px;
        }

        .descriptionBox {
        width: 100%;
        height: 150px;
        }

        .priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
        {

        }
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:HTMLPanel>
            <table style="width: 100%;">
                <tr>
                    <td colspan='2' align='center' class='{style.header}'>
                        <ui:msg key='formSupplierInfo'>Supplier Info</ui:msg>
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formCompanyName'>Company name:</ui:msg>
                    </td>
                </tr>
                <tr>
                    <td  colspan='2'>
                        <g:TextBox ui:field='companyName' styleName='{style.titleBox}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formDescription'>Description:</ui:msg>
                    </td>
                </tr>
                <tr>
                    <td colspan='2'>
                        <g:TextArea ui:field='descriptionBox' styleName='{style.descriptionBox}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formRating'>Overal rating:</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='overalRating' styleName='{style.priceBox}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='contact'>Contact</ui:msg>
                    </td>
                    <td/>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formFirstName'>First name:</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='firstName' styleName='{style.endDateBox}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formLastName'>Last name:</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='lastName' styleName='{style.expirationBox}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formEmail'>Email: </ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='email' styleName='{style.clientID}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formPhone'>Phone:</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='phone' styleName='{style.maxOffers}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formVatNumber'>Vat number:</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='identifNumber' styleName='{style.demandStatus}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='adminFormSupplierID'>Supplier ID:</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field='supplierID' styleName='{style.demandStatus}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formBusinessType'>Business type:</ui:msg>
                    </td>
                    <td>
                        <g:ListBox ui:field='businessType' styleName='{style.demandStatus}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formCertified'>Certified:</ui:msg>
                    </td>
                    <td>
                        <g:CheckBox ui:field='certified' styleName='{style.demandStatus}' />
                    </td>
                </tr>
                <tr>
                    <td class='{style.label}'>
                        <ui:msg key='formVerified'>Verification:</ui:msg>
                    </td>
                    <td>
                        <g:ListBox ui:field='verification' styleName='{style.demandStatus}' />
                    </td>
                </tr>
                <tr>
                    <td  colspan="2" class='{style.label}'>
                        <ui:msg key='formCategories'>Category List</ui:msg>
                    </td>
                </tr>
                <tr>
                    <td  colspan="2" class='{style.label}'>
                        <g:Button ui:field='editCatBtn'>
                            <ui:msg key='commonBtnEdit'>Edit</ui:msg>
                        </g:Button>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align='right'>
                        <c:CellList ui:field="categoryList" />
                    </td>
                </tr>
                <tr>
                    <td  colspan="2" class='{style.label}'>
                        <ui:msg key='formLocalities'>Locality List</ui:msg>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align='right'>
                        <c:CellList ui:field="localityList" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align='right'>
                        <g:Button ui:field='editLocBtn'>
                            <ui:msg key='commonBtnEdit'>Edit</ui:msg>
                        </g:Button>
                    </td>
                </tr>
                <tr>
                    <td colspan='2' align='center'>
                        <g:Button ui:field='updateButton'>
                            <ui:msg key='adminCommonUpdateBtn'>Update</ui:msg>
                        </g:Button>
						&nbsp;
                        <g:Button ui:field='createButton'>
                            <ui:msg key='adminCommonCreateBtn'>Create</ui:msg>
                        </g:Button>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
    </g:DecoratorPanel>
</ui:UiBinder>
