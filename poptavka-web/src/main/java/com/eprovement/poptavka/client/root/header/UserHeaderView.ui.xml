<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:h="urn:import:com.eprovement.poptavka.client.root.header">

    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .important {
        font-weight: bold;
        }

        .helpButton {
        float: right;
        margin: 0 10px;
        }

        .helpButton {
        cursor: pointer;
        }

        .username {
        float: right;
        margin: 0 10px;
        color: #000000;
        }

        .newMessageCount {
        float: right;
        margin: 0;
        }

        .pushButton {
        float: right;
        margin: 0 5px 0 10px;
        }

        .pushButton:hover {
        cursor: pointer;
        }
        .login {
        position: absolute;
        right: 20px;
        top: 28px;
        z-index: 150;
        }
    </ui:style>

    <g:HTMLPanel ui:field='headerHolder' styleName='{res.layout.headerContent}'>
        <!-- <div id="loginArea" class='{res.layout.loginArea}'> -->

        <!-- new type -->
        <!-- Logo -->
        <!-- <div style="position: absolute; background: url(images/logo.png) no-repeat
     			scroll 0% 0% transparent; left: 10px; width: 368px; height: 64px; top: 24px;">
     			</div> -->
        <!-- end Logo -->

        <!-- Login Button -->
        <!--<div class='{style.login}'>-->
            <g:MenuBar vertical="false" styleName='{style.login}'>
                <h:MyMenuItem styleName='{res.layout.logoutButton}'>
                    <g:MenuBar vertical="true" styleName='{res.layout.logoutMenuBar}'>
                        <g:MenuItem ui:field="menuLogOut">
                            <ui:msg key="logOut">Log Out</ui:msg>
                        </g:MenuItem>
                        <g:MenuItem ui:field="menuMyProfile">
                            <ui:msg key="myProfile">My profile</ui:msg>
                        </g:MenuItem>
                        <g:MenuItem ui:field="menuHelp">
                            <ui:msg key="subjectHelp">Help</ui:msg>
                        </g:MenuItem>
                        <g:MenuItem ui:field="menuCustomerService">
                            <ui:msg key="customerService">Customer Service</ui:msg>
                        </g:MenuItem>
                    </g:MenuBar>
                </h:MyMenuItem>
            </g:MenuBar>
<!--            <div id="loginAnchor"
                 style="position: absolute; width: 150px; right: 0px; z-index: 151;">
            </div>-->
        <!--</div>-->

        <div
            style="position: absolute; top: 30px; right: 146px; color: #ffffff; width: 356px;">
            <g:Button ui:field="help" styleName='{style.helpButton}'>
                <ui:msg key="subjectHelp">Help</ui:msg>
            </g:Button>
            <g:Label ui:field="username" styleName='{style.username}'></g:Label>
            <g:Label ui:field="newMessagesCount" styleName='{style.newMessageCount}'></g:Label>
            <g:PushButton ui:field='pushButton' enabled='true'
                          styleName='{style.pushButton}'>
                <g:upFace image='{res.images.envelopeImage}' />
                <g:upHoveringFace image='{res.images.envelopeHoverImage}' />
                <g:downFace image='{res.images.envelopeImage}' />
                <g:downHoveringFace image='{res.images.envelopeImage}' />
            </g:PushButton>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>