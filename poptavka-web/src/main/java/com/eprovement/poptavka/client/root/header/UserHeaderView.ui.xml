<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>

	<g:HTMLPanel ui:field='headerHolder' styleName='{res.layout.headerContent}'>
		<!-- <div id="loginArea" class='{res.layout.loginArea}'> -->

		<!-- new type -->

		<div style="margin: auto; width: 1075px; position: relative; height: 110px;">
			<!-- Logo -->
			<div
				style="position: absolute; background: url(images/logo.png) no-repeat scroll 0% 0% transparent; left: 10px; width: 368px; height: 64px; top: 24px;">
			</div>
			<!-- end Logo -->

			<!-- Login Button -->
			<div style="position: absolute; right: 20px; top: 0px; z-index: 150;">
				<div class='{res.layout.loginButton}'>
					<g:Anchor ui:field="logoutButton">
						<ui:msg key="logOut">Logout</ui:msg>
					</g:Anchor>
				</div>
				<div id="loginAnchor"
					style="position: absolute; width: 150px; right: 0px; z-index: 151;">
				</div>
			</div>

                        <div style="position: absolute; top: 10px; right: 300px; color: #ffffff;">
                        <g:Button ui:field="help"><ui:msg key="subjectHelp">Help</ui:msg></g:Button>
                        <g:Label ui:field="username"></g:Label>
                        <g:Label ui:field="newMessagesCount"></g:Label>

 <g:PushButton ui:field='pushButton' enabled='true'>
   <g:upFace image='{res.images.envelopeImage}'/>
   <g:upHoveringFace image='{res.images.envelopeHoverImage}'/>
   <g:downFace image='{res.images.envelopeImage}'/>
   <g:downHoveringFace image='{res.images.envelopeImage}'/>
 </g:PushButton>

                        </div>

		</div>
	</g:HTMLPanel>

</ui:UiBinder>