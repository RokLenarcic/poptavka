<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource' />

    <g:SplitLayoutPanel styleName='{res.layout.fullSize}'>
        <g:east size="500">
            <g:SimplePanel ui:field="wrapperPanel">
                <g:HTMLPanel>
                    <div>
                        <strong>Defail detail panel</strong>
                        <br />
                        <br />
                        <div>
                            Default content....can contain some advertisements.
                        </div>
                    </div>
                </g:HTMLPanel>
            </g:SimplePanel>
        </g:east>
        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="45">
                    <g:HorizontalPanel>
                        <g:VerticalPanel ui:field="contestantsHeader" styleName='{res.layout.demandTabContentHeader}'>
                            <g:Label ui:field="titlelabel">pridelene poptavky</g:Label>
                            <g:HorizontalPanel>
                                <g:Button ui:field="closeBtn">
                                    Close demand
                                </g:Button>
                                <g:Button ui:field="replyBtn">
                                    Answer
                                </g:Button>
                                <g:ListBox ui:field="actions"/>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>
                </g:north>
                <g:center>
                    <g:VerticalPanel>
                        <s:UniversalAsyncGrid ui:field="contestantsGrid" />
                    </g:VerticalPanel>
                </g:center>
                <g:south size="32">
                    <g:HTMLPanel styleName='{res.layout.pager}'>
                        <table style="width:100%">
                            <tr>
                                <td align='center'>
                                    <c:SimplePager ui:field='contestantsPager' />
                                    <g:ListBox ui:field='contestantsPageSize' />
                                </td>
                            </tr>
                        </table>
                    </g:HTMLPanel>
                </g:south>
            </g:DockLayoutPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>
