<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource'/>

    <g:HorizontalPanel width="100%">
        <g:HTML ui:field='message'>Title</g:HTML>
        <g:Cell horizontalAlligment="ALIGN_RIGHT" width="100px">
            <g:HorizontalPanel width="10%">
                <g:HTML ui:field='company'>Company</g:HTML>
                <g:Image ui:field='image' resource='{res.images.zoomIn}'></g:Image>
            </g:HorizontalPanel>
        </g:Cell>
    </g:HorizontalPanel>
</ui:UiBinder>
