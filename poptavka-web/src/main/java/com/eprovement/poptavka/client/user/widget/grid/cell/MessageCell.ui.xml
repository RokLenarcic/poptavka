<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">

    <ui:with field="res" type="com.eprovement.poptavka.resources.StyleResource" />

    <ui:with field="cssColor" type="java.lang.String" />
    <ui:with field="sender" type="java.lang.String" />
    <ui:with field="sent" type="java.lang.String" />
    <ui:with field="body" type="java.lang.String" />

    <div class='{res.detailViews.conversationDetail}'>
        <div class='{res.detailViews.conversationLeftBlock}'>
            <span class='{res.detailViews.conversationDetailHeader} {cssColor}'>
                <ui:text from='{sender}' />
            </span>
            <span class='{res.detailViews.conversationDetailTime}'>
                <ui:text from='{sent}' />
            </span>
        </div>
        <div ui:field='bodySpan' class='{res.detailViews.conversationDetailContent}'>
            <ui:text from='{body}' />
        </div>
    </div>
</ui:UiBinder>
