<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .tabIndex1 { z-index: 1;}
        .tabIndex2 { z-index: 2;}
        .tabIndex3 { z-index: 3;}
        .tabIndex4 { z-index: 4;}
        .tabIndex5 { z-index: 5; padding: 0 35px 0 25px;}

        .selectorLayout {width: 980px; height: 350px;}

        .header {
        font-size: 110%;
        font-weight: bold;
        color: #555;
        }

        .label {
        font-weight: bold;
        }

        .decorationPanel {
        width: 100%;
        }

        .titleBox {
        width: 100%;
        height: 55px;
        }

        .descriptionBox {
        width: 100%;
        height: 150px;
        }

        .priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
        {

        }
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <g:HorizontalPanel>
                <g:HTMLPanel>
                    <table style="width: 100%;">
                        <tr>
                            <td colspan='2'>
                                <g:DisclosurePanel ui:field="disclosureCommon">
                                    <g:header>
                                        <ui:msg key='commonInfo'>Common info:</ui:msg>
                                    </g:header>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='companyName'>Company Name:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='companyName' />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DisclosurePanel>
                            </td>
                        </tr>

                        <tr>
                            <td class='{style.label}'>
                                <g:DisclosurePanel ui:field="disclosureContact">
                                    <g:header>
                                        <ui:msg key='contactPerson'>Contact person:</ui:msg>
                                    </g:header>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='web'>Web site:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='web' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='email'>Email:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='email' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='phone'>Phone:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='phone' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='firstName'>First name:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='firstName' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='lastName'>Last name:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='lastName' />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DisclosurePanel>
                            </td>
                        </tr>
                        <tr>
                            <td class='{style.label}'>
                                <g:DisclosurePanel ui:field="disclosurePayment">
                                    <g:header>
                                        <ui:msg key='billingDetails'>Billing details:</ui:msg>
                                    </g:header>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='identificationNumber'>Identification number:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='identificationNumber' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='taxNumber'>Tax number:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox ui:field='taxNumber' />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DisclosurePanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>

                <g:HTMLPanel>
                    <table>
                        <tr>
                            <td class='{style.label}'>
                                <g:DisclosurePanel ui:field="disclosureNotification">
                                    <g:header>
                                        <ui:msg key='notifications'>Notifications:</ui:msg>
                                    </g:header>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='newMessage'>New messages:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:CheckBox ui:field='newMessageButton' />
                                                    <g:ListBox ui:field="newMessageOptions" visibleItemCount='1' >
                                                        <g:item>
                                                            <ui:msg key='notifyImmediately'>Address:</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyDaily'>Daily</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyWeekly'>Weekly</ui:msg>
                                                        </g:item>
                                                    </g:ListBox>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='newDemand'>New demand:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:CheckBox ui:field='newDemandButton' />
                                                    <g:ListBox ui:field="newDemandOptions" visibleItemCount='1' >
                                                        <g:item>
                                                            <ui:msg key='notifyImmediately'>Address:</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyDaily'>Daily</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyWeekly'>Weekly</ui:msg>
                                                        </g:item>
                                                    </g:ListBox>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='newSystemMessage'>New messages from system:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:CheckBox ui:field='newSystemMessageButton' />
                                                    <g:ListBox ui:field="newSystemMessageOptions" visibleItemCount='1' >
                                                        <g:item>
                                                            <ui:msg key='notifyImmediately'>Address:</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyDaily'>Daily</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyWeekly'>Weekly</ui:msg>
                                                        </g:item>
                                                    </g:ListBox>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='newOperatorMessage'>New messages from operator:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:CheckBox ui:field='newOperatorMessageButton' />
                                                    <g:ListBox ui:field="newOperatorMessageOptions" visibleItemCount='1' >
                                                        <g:item>
                                                            <ui:msg key='notifyImmediately'>Address:</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyDaily'>Daily</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyWeekly'>Weekly</ui:msg>
                                                        </g:item>
                                                    </g:ListBox>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='demandStateChange'>Demand state change:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:CheckBox ui:field='demandStateChangeButton' />
                                                    <g:ListBox ui:field="demandStateChangeOptions" visibleItemCount='1' >
                                                        <g:item>
                                                            <ui:msg key='notifyImmediately'>Address:</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyDaily'>Daily</ui:msg>
                                                        </g:item>
                                                        <g:item>
                                                            <ui:msg key='notifyWeekly'>Weekly</ui:msg>
                                                        </g:item>
                                                    </g:ListBox>
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DisclosurePanel>
                            </td>
                        </tr>
                        <tr>
                            <td class='{style.label}'>
                                <g:DisclosurePanel ui:field="disclosureAddress">
                                    <g:header>
                                        <ui:msg key='address'>Address:</ui:msg>
                                    </g:header>
                                    <g:SimplePanel />
                                </g:DisclosurePanel>
                            </td>
                        </tr>

                        <tr>
                            <td class='{style.label}'>
                                <g:DisclosurePanel ui:field="disclosureDescription">
                                    <g:header>
                                        <ui:msg key='description'>Description:</ui:msg>
                                    </g:header>
                                    <g:TextArea ui:field='descriptionBox' />
                                </g:DisclosurePanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:HorizontalPanel>
        </g:ScrollPanel>
    </g:DecoratorPanel>

</ui:UiBinder>
