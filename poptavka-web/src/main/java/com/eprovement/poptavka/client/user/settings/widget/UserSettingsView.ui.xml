<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .tabIndex1 { z-index: 1;}
        .tabIndex2 { z-index: 2;}
        .tabIndex3 { z-index: 3;}
        .tabIndex4 { z-index: 4;}
        .tabIndex5 { z-index: 5; padding: 0 35px 0 25px;}

        .selectorLayout {width: 980px; height: 350px;}

        .header {
        font-size: 110%;
        font-weight: bold;
        color: #555;
        }

        .label {
        font-weight: bold;
        }

        .decorationPanel {
        width: 100%;
        }

        .titleBox {
        width: 100%;
        height: 55px;
        }

        .descriptionBox {
        width: 100%;
        height: 150px;
        }

        .priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
        {

        }
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <g:HorizontalPanel>
                <g:HTMLPanel>
                    <table style="width: 100%;">
                        <tr>
                            <td colspan='2'>
                                <g:DecoratorPanel>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td colspan='2'>
                                                    <ui:msg key='formCommonInfo'>Common info:</ui:msg>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formCompanyName'>Company Name:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxCompanyName" ui:field='companyName' />
                                                </td>
                                            </tr>

                                            <tr>
                                                <td class='{style.label}' colspan='2'>
                                                    <ui:msg key='formDescription'>Description:</ui:msg>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan='2'>
                                                    <g:TextArea title="textAreaDescription" ui:field='descriptionBox'
                                                                width="450px" height="100px"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}' colspan='2'>
                                                    <ui:msg key='formAddress'>Address:</ui:msg>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan='2'>
                                                    <g:SimplePanel ui:field="addressHolder"/>
                                                    <g:TextBox ui:field="status" visible="false" />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DecoratorPanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>

                <g:HTMLPanel>
                    <table>
                        <tr>
                            <td class='{style.label}'>
                                <g:DecoratorPanel>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td colspan='2'>
                                                    <ui:msg key='formContactInfo'>Contact person:</ui:msg>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formWebsite'>Web site:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxWebsite" ui:field='web' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formEmail'>Email:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxEmail" ui:field='email' enabled='false'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formPhone'>Phone:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxPhone" ui:field='phone' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formFirstName'>First name:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxFirstName" ui:field='firstName' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formLastName'>Last name:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxLastName" ui:field='lastName' />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DecoratorPanel>
                            </td>
                        </tr>
                        <tr>
                            <td class='{style.label}'>
                                <g:DecoratorPanel>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td colspan='2'>
                                                    <ui:msg key='userSettingsBillingDetails'>Billing details:</ui:msg>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formIdentificationNumber'>Identification number:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxIdentificationNumber" ui:field='identificationNumber' />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class='{style.label}'>
                                                    <ui:msg key='formTaxNumber'>Tax number:</ui:msg>
                                                </td>
                                                <td>
                                                    <g:TextBox title="textBoxTaxNumber" ui:field='taxNumber' />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DecoratorPanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>

                <g:HTMLPanel>
                    <table>
                        <tr>
                            <td class='{style.label}'>
                                <g:DecoratorPanel>
                                    <g:HTMLPanel>
                                        <table style="width: 100%;">
                                            <tr>
                                                <td>
                                                    <ui:msg key='userSettingsNotifications'>Notifications:</ui:msg>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <g:VerticalPanel ui:field="notifications" />
                                                </td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:DecoratorPanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:HorizontalPanel>
        </g:ScrollPanel>
    </g:DecoratorPanel>

</ui:UiBinder>
