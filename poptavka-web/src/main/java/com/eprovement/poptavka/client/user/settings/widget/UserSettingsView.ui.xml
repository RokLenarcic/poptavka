<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .tabIndex1 { z-index: 1;}
        .tabIndex2 { z-index: 2;}
        .tabIndex3 { z-index: 3;}
        .tabIndex4 { z-index: 4;}
        .tabIndex5 { z-index: 5; padding: 0 35px 0 25px;}

        .selectorLayout {width: 980px; height: 350px;}

        .header {
        font-size: 110%;
        font-weight: bold;
        color: #555;
        }

        .label {
        font-weight: bold;
        }

        .decorationPanel {
        width: 100%;
        }

        .titleBox {
        width: 100%;
        height: 55px;
        }

        .descriptionBox {
        width: 100%;
        height: 150px;
        }

        .priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
        {

        }
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <b:FluidContainer>
                <b:FluidRow>
                    <b:Column size="6">
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='formCommonInfo'>Common info:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formCompanyName'>Company Name:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='companyName' />
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <g:Label>
                                    <ui:msg key='formDescription'>Description:</ui:msg>
                                </g:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <g:TextArea ui:field='descriptionBox' width="450px" height="100px"/>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='formAddress'>Address:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <g:SimplePanel ui:field="addressHolder"/>
                                <g:TextBox ui:field="status" visible="false" />
                            </b:Column>
                        </b:FluidRow>
                    </b:Column>
                    <b:Column size="6">
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='formContactInfo'>Contact person:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formWebsite'>Web site:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='web' />
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formEmail'>Email:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='email' enabled='false'/>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formPhone'>Phone:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='phone' />
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formFirstName'>First name:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='firstName' />
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formLastName'>Last name:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='lastName' />
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='userSettingsBillingDetails'>Billing details:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formIdentificationNumber'>Identification number:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='identificationNumber' />
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formTaxNumber'>Tax number:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <g:TextBox ui:field='taxNumber' />
                            </b:Column>
                        </b:FluidRow>
                    </b:Column>
                </b:FluidRow>
            </b:FluidContainer>
        </g:ScrollPanel>
    </g:DecoratorPanel>

</ui:UiBinder>
