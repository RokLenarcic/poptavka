<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .decorationPanel {
        width: 100%;
        }
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <b:FluidContainer>
                <b:FluidRow>
                    <b:Column size="6">
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='formCommonInfo'>Common info:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formCompanyName'>Company Name:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='companyNameMonitor'>
                                    <g:TextBox />
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <g:Label>
                                    <ui:msg key='formDescription'>Description:</ui:msg>
                                </g:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <cm:ChangeMonitor ui:field='descriptionMonitor'>
                                    <g:TextArea width="450px" height="100px"/>
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='formAddress'>Address:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <g:SimplePanel ui:field="addressHolder"/>
                            </b:Column>
                        </b:FluidRow>
                    </b:Column>
                    <b:Column size="6">
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='formContactInfo'>Contact person:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formWebsite'>Web site:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='websiteMonitor'>
                                    <g:TextBox />
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formEmail'>Email:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='emailMonitor'>
                                    <g:TextBox enabled='false'/>
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formPhone'>Phone:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='phoneMonitor'>
                                    <g:TextBox />
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formFirstName'>First name:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='firstNameMonitor'>
                                    <g:TextBox />
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formLastName'>Last name:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='lastNameMonitor'>
                                    <g:TextBox />
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="12">
                                <b:Label>
                                    <ui:msg key='userSettingsBillingDetails'>Billing details:</ui:msg>
                                </b:Label>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formVatNumber'>Vat number:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='identifNumberMonitor'>
                                    <g:TextBox />
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                            <b:Column size="6">
                                <g:Label>
                                    <ui:msg key='formTaxNumber'>Tax number:</ui:msg>
                                </g:Label>
                            </b:Column>
                            <b:Column size="6">
                                <cm:ChangeMonitor ui:field='taxNumberMonitor'>
                                    <g:TextBox/>
                                </cm:ChangeMonitor>
                            </b:Column>
                        </b:FluidRow>
                    </b:Column>
                </b:FluidRow>
            </b:FluidContainer>
        </g:ScrollPanel>
    </g:DecoratorPanel>

</ui:UiBinder>
