<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <g:DockLayoutPanel styleName='{res.layout.fullSize}'>
        <g:north size="65">
            <g:HorizontalPanel ui:field="toolBar" styleName='{res.layout.toolbarItemsBlock}'>
                <g:Label ui:field="tableNameLabel" />
                <b:DropdownButton ui:field="actionBox" visible="false"
                                  text="{msgs.commonListDefault}">
                    <b:NavLink ui:field="actionRead">
                        <ui:msg key="commonListRead">read</ui:msg>
                    </b:NavLink>
                    <b:NavLink ui:field="actionUnread">
                        <ui:msg key="commonListUnread">unread</ui:msg>
                    </b:NavLink>
                    <b:NavLink ui:field="actionStar">
                        <ui:msg key="commonListStarred">star</ui:msg>
                    </b:NavLink>
                    <b:NavLink ui:field="actionUnstar">
                        <ui:msg key="listUnstarred">unstar</ui:msg>
                    </b:NavLink>
                </b:DropdownButton>
                <s:UniversalPagerWidget ui:field='pager'/>
            </g:HorizontalPanel>
        </g:north>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:center>
            <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                <b:FluidRow>
                    <b:Column size="7">
                        <s:UniversalTableGrid ui:field="dataGrid" 
                        addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                    </b:Column>
                    <b:Column size="5">
                        <g:SimplePanel ui:field="detailPanel">
                            <g:HTMLPanel styleName='{res.layout.detailInfo}'>
                                <div>
                                    <strong>Defail detail panel</strong>
                                    <br />
                                    <br />
                                    <div>
                                        Default content....can contain some advertisements.
                                    </div>
                                </div>
                            </g:HTMLPanel>
                        </g:SimplePanel>
                    </b:Column>
                </b:FluidRow>
            </b:FluidContainer>            
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
