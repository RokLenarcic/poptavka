<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }
        .rangeBox {
        width: 30px;
        margin-right:10px;
        margin-left:10px;
        }
        .margin {
            
        }
        .searchMainContent {
        width: 200px;
        } 
    </ui:style>
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
        
    <g:HTMLPanel>
        <div>
            <ul>
                <li>
                    <ui:msg key="adminformOID">Offer ID</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="offerIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="offerIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformDID">Demand ID</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="demandIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="demandIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminadminFormSupplierID">Supplier ID</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="supplierIdFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="supplierIdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="formPrice">Price</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="priceFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="priceTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformState">State</ui:msg>
                </li>
                <li>
                    <g:ListBox ui:field="state"/>
                </li>
                <li>
                    <ui:msg key="formCreationDate">Created</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <p1:DateBox ui:field="createdFrom"/>
                                        to
                                        <p1:DateBox ui:field="createdTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="formFinnishDate"></ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <p1:DateBox ui:field="finnishFrom"/>
                                        to
                                        <p1:DateBox ui:field="finnishTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <g:Button ui:field="clearBtn">
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </g:Button>
                </li>                
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
