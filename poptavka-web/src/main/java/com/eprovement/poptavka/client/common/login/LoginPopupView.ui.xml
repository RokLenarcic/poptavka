<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:HTMLPanel>
        <b:Modal ui:field="modal" addStyleNames='{res.modal.loginModal}'>
            <b:Form type="HORIZONTAL">

                <g:ListBox ui:field="list"/>

                <g:Label styleName="modal-header">
                    Login
                </g:Label>

                <b:Fieldset>
                    <b:ControlGroup ui:field="emailControlGroup">
                        <b:ControlLabel>
                            <ui:msg key="formEmail">Email: </ui:msg>
                        </b:ControlLabel>
                        <b:Controls>
                            <b:TextBox ui:field="emailTextBox" placeholder="Email"/>
                        </b:Controls>
                    </b:ControlGroup>

                    <b:ControlGroup ui:field="passwordControlGroup">
                        <b:ControlLabel>
                            <ui:msg key="formPassword">Password:</ui:msg>
                        </b:ControlLabel>
                        <b:Controls>
                            <b:PasswordTextBox ui:field="passwordTextBox" placeholder="Password"/>
                        </b:Controls>
                    </b:ControlGroup>

                    <b:Alert ui:field='status' type="INFO" close="false" animation="true" addStyleNames='info-block'>
                        <b:ProgressBar ui:field="progressBar" color="SUCCESS" type="ANIMATED" percent="100"/>
                        <g:Label ui:field='infoLabel'>
                            Enter email and password to login.
                        </g:Label>
                    </b:Alert>
                    <g:DisclosurePanel ui:field="forgotPassword" animationEnabled="true" title="Forgot Your Password" width="100%">
                        <g:header>Forgot Your Password?</g:header>
                        <g:VerticalPanel>
                            <b:TextBox ui:field="forgotPasswordEmail" placeholder="Enter Your Email:"/>
                            <b:Button ui:field="resetPasswordButton" type="PRIMARY" styleName='login-button'>
                                Reset Password
                            </b:Button>
                        </g:VerticalPanel>
                    </g:DisclosurePanel>
                </b:Fieldset>
                <b:Controls>
                    <b:Button ui:field="submitBtn" type="PRIMARY" styleName='login-button'>
                        Login
                    </b:Button>
                    <b:Button ui:field="cancelBtn" styleName='cancel-button'>
                        Cancel
                    </b:Button>
                </b:Controls>
            </b:Form>
        </b:Modal>
    </g:HTMLPanel>
</ui:UiBinder>
