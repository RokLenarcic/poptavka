<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateLocales='default'>

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .tabIndex1 { z-index: 1;}
        .tabIndex2 { z-index: 2;}
        .tabIndex3 { z-index: 3;}
        .tabIndex4 { z-index: 4;}
        .tabIndex5 { z-index: 5; padding: 0 35px 0 25px;}

        .selectorLayout {width: 980px; height: 350px;}

        .header {
        font-size: 110%;
        font-weight: bold;
        color: #555;
        }

        .label {
        font-weight: bold;
        }

        .decorationPanel {
        width: 100%;
        }

        .titleBox {
        width: 100%;
        height: 55px;
        }

        .descriptionBox {
        width: 100%;
        height: 150px;
        }

        .priceBox,.categoryBox,.expirationBox,.endDateBox,.clientID,.maxOffers,.minRating,.demandType,.demandStatus
        {

        }
    </ui:style>

    <g:DecoratorPanel addStyleNames='{style.decorationPanel}'>
        <g:ScrollPanel>
            <g:HTMLPanel>
                <table style="width: 100%;">
                    <tr>
                        <td class='{style.label}'>
                            <ui:msg key='formRating'>Rating:</ui:msg>
                        </td>
                        <td>
                            <g:TextBox ui:field='supplierRating' />
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}' colspan='2'>
                            <g:DisclosurePanel ui:field="categories">
                                <g:header>
                                    <ui:msg key='supplierSettingsCategories'>Categories(only suppliers):</ui:msg>
                                </g:header>
                                <g:PopupPanel ui:field="categorySelectorPopup"/>
                            </g:DisclosurePanel>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}' colspan='2'>
                            <g:DisclosurePanel ui:field="localities">
                                <g:header>
                                    <ui:msg key='supplierSettingsLocalities'>Localities(only suppliers):</ui:msg>
                                </g:header>
                                <g:PopupPanel ui:field="localitySelectorPopup"/>
                            </g:DisclosurePanel>
                        </td>
                    </tr>
                    <tr>
                        <td class='{style.label}' colspan='2'>
                            <g:DisclosurePanel ui:field="services">
                                <g:header>
                                    <ui:msg key='supplierServices'>Services:</ui:msg>
                                </g:header>
                                <g:SimplePanel />
                            </g:DisclosurePanel>
                        </td>
                    </tr>
                    <tr>
                        <td colspan='2'>
                            <g:TextBox ui:field='status' visible='false' />
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:ScrollPanel>
    </g:DecoratorPanel>

</ui:UiBinder>
