<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <!-- injecting style resources -->
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
		
    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }
		
        .rangeBox {
        width: 30px;
        margin-right: 10px;
        margin-left: 10px;
        }
		
        .searchMainContent {
        width: 200px;
        }
		
        .margin {
			
        }
    </ui:style>

    <g:HTMLPanel>
        <!-- menu -->
        <div>
            <ul>
                <li>
                    <ui:msg key="formCompanyName">Company name:</ui:msg>
                </li>
                <li>
                    <g:TextBox ui:field="companyName" />
                </li>
                <li>
                    <ui:msg key="formRating">Rating:</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <!--TODO RELEASE - Not working my way like elsewhere-->
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="ratingFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="ratingTo"/>
<!--                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="ratingFrom" />
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="ratingTo" />
                                    </ui:msg>-->
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="formDescription">Supplier description:</ui:msg>
                </li>
                <li>
                    <g:TextBox ui:field="supplierDescription" />
                </li>
                <li>
                    <g:Button ui:field="clearBtn">
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </g:Button>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
