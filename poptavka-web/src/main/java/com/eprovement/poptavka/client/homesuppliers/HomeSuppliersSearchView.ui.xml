<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
		
    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }
		
        .rangeBox {
        width: 70px;
        margin-right: 10px;
        margin-left: 10px;
        }
		
        .searchMainContent {
        width: 200px;
        }
		
        .margin {
			
        }
    </ui:style>

    <g:HTMLPanel>
        <b:FluidContainer>
            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formCompanyName">Company name:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <b:TextBox ui:field="companyName" />
                </b:Column>
            </b:FluidRow>
            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formRating">Rating:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <g:HTMLPanel>
                        <ui:msg key="formFromTo2">
                            from
                            <b:IntegerBox styleName="{style.rangeBox}" placeholder="0" ui:field="ratingFrom"/>
                            to
                            <b:IntegerBox styleName="{style.rangeBox}" placeholder="100" ui:field="ratingTo"/>
                        </ui:msg>
                    </g:HTMLPanel>
                </b:Column>
            </b:FluidRow>
            <b:FluidRow>
                <b:Column size="2">
                    <g:Label>
                        <ui:msg key="formDescription">Supplier description:</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="10">
                    <b:TextBox ui:field="supplierDescription" />
                </b:Column>
            </b:FluidRow>
            <b:FluidRow>
                <b:Column size="2">
                    <g:HTMLPanel></g:HTMLPanel>
                </b:Column>
                <b:Column size="10">
                    <b:Button ui:field="clearBtn" type="WARNING">
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </b:Button>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>
    </g:HTMLPanel>
</ui:UiBinder>
