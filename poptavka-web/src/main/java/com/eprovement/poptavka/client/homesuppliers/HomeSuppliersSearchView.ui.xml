<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

        <!-- injecting style resources -->
        <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
		
        <ui:style>
                .important {
                font-weight: bold;
                font-style: italic;
                }
		
                .rangeBox {
                width: 30px;
                margin-right: 10px;
                margin-left: 10px;
                }
		
                .searchMainContent {
                width: 200px;
                }
		
                .margin {
			
                }
        </ui:style>

        <g:HTMLPanel>
                <b:FluidContainer>
                        <b:FluidRow>
                                <b:Column size="2">
                                        <g:Label>
                                                <ui:msg key="formCompanyName">Company name:</ui:msg>
                                        </g:Label>
                                </b:Column>
                                <b:Column size="10">
                                        <g:TextBox ui:field="companyName" />
                                </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                                <b:Column size="2">
                                        <g:Label>
                                                <ui:msg key="formRating">Rating:</ui:msg>
                                        </g:Label>
                                </b:Column>
                                <b:Column size="10">
                                        <g:HTMLPanel>
                                                <!--TODO RELEASE - Not working my way like elsewhere-->
                                                from
                                                <g:TextBox styleName="{style.rangeBox}" ui:field="ratingFrom"/>
                                                to
                                                <g:TextBox styleName="{style.rangeBox}" ui:field="ratingTo"/>
                                                <!--                                    <ui:msg key="formFromTo">
                                                    from
                                                    <g:TextBox styleName="{style.rangeBox}" ui:field="ratingFrom" />
                                                    to
                                                    <g:TextBox styleName="{style.rangeBox}" ui:field="ratingTo" />
                                                </ui:msg>-->
                                        </g:HTMLPanel>
                                </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                                <b:Column size="2">
                                        <g:Label>
                                                <ui:msg key="formDescription">Supplier description:</ui:msg>
                                        </g:Label>
                                </b:Column>
                                <b:Column size="10">
                                        <g:TextBox ui:field="supplierDescription" />
                                </b:Column>
                        </b:FluidRow>
                        <b:FluidRow>
                                <b:Column size="2">
                                        <g:HTMLPanel></g:HTMLPanel>
                                </b:Column>
                                <b:Column size="10">
                                        <g:Button ui:field="clearBtn" styleName='btn btn-warning'>
                                                <ui:msg key="commonBtnClear">Clear</ui:msg>
                                        </g:Button>
                                </b:Column>
                        </b:FluidRow>
                </b:FluidContainer>
        </g:HTMLPanel>
</ui:UiBinder>
