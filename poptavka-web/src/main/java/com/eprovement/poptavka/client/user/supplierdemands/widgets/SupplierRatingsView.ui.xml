<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <g:DockLayoutPanel styleName='{res.layout.layoutUser}'>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:north size="65">
            <g:HorizontalPanel ui:field="toolBar" styleName="{res.layout.toolbarItemsBlock}">
                <g:Label ui:field="tableNameLabel" />
                <s:UniversalPagerWidget ui:field='pager'/>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                <b:FluidRow>
                    <b:Column size="7">
                        <s:UniversalAsyncGrid ui:field="dataGrid" 
                                              addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                    </b:Column>
                    <b:Column size="5">
                        <g:SimplePanel ui:field="detailPanel">
                            <g:HTMLPanel styleName='{res.detailViews.emptyView}' />
                        </g:SimplePanel>
                        <d:RatingDetailView ui:field="ratingDetail" visible="false" />
                    </b:Column>
                </b:FluidRow>
            </b:FluidContainer>                                
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
