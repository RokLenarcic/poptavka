<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <g:ScrollPanel styleName='{res.initial.scrollContainer}'>
        <b:FluidContainer addStyleNames='{res.initial.homepage}'>
            <b:FluidRow>
                <b:Column size="12">
                    <!-- Suppliers -->
                    <b:Column size="6" styleName="banner1">
                        <b:Heading size="4" styleName="header">
                            <ui:msg key="iamProfessional">I'm Professional</ui:msg>
                        </b:Heading>
                        <g:Label styleName="subheader">
                            <ui:msg key="iamProfessionalNext">looking for new business!</ui:msg>
                        </g:Label>
                        <g:HTMLPanel styleName="banner-content">
                            <g:Label styleName="home-list">
                                <ui:msg key="iamProfessionalDesc1">
                                    No wasted advertising
                                </ui:msg>
                            </g:Label>
                            <g:Label styleName="home-list">
                                <ui:msg key="iamProfessionalDesc2">
                                    Pick only the jobs you want
                                </ui:msg>
                            </g:Label>
                            <g:Label styleName="home-list">
                                <ui:msg key="iamProfessionalDesc3">
                                    Jobs in your area at one place
                                </ui:msg>
                            </g:Label>
                        </g:HTMLPanel>
                        <g:Button ui:field="suppliersBtn"
                                  addStyleNames="banner-link banner-link1-position">
                            <ui:msg key="allProfessionals">All Professionals</ui:msg>
                        </g:Button>
                        <g:Button ui:field="howItWorksSupplierBtn"
                                  addStyleNames="banner-link banner-link2-position">
                            <ui:msg key="howItWorks">How it works?</ui:msg>
                        </g:Button>
                        <g:Button ui:field="registerSupplierBtn"
                                  addStyleNames="banner-button">
                            <ui:msg key="signUpAsPro">Sign up as Professional</ui:msg>
                        </g:Button>
                    </b:Column>

                    <!-- Demands -->
                    <b:Column size="6" styleName="banner2">
                        <b:Heading size="4" styleName="header">
                            <ui:msg key="placeProject">Post a Project</ui:msg>
                        </b:Heading>
                        <g:Label styleName="subheader">
                            <ui:msg key="placeProjectNext">and find Professionals now</ui:msg>
                        </g:Label>
                        <g:HTMLPanel styleName="banner-content">
                            <g:Label styleName="home-list">
                                <ui:msg key="placeProjectDesc1">
                                    Find suitable Professionals faster
                                </ui:msg>
                            </g:Label>
                            <g:Label styleName="home-list">
                                <ui:msg key="placeProjectDesc2">
                                    Better control over the sales process
                                </ui:msg>
                            </g:Label>
                            <g:Label styleName="home-list">
                                <ui:msg key="placeProjectDesc3">
                                    US Professinals only
                                </ui:msg>
                            </g:Label>
                        </g:HTMLPanel>
                        <g:Button ui:field="demandsBtn"
                                  addStyleNames="banner-link banner-link1-position">
                            <ui:msg key="allProjects">All Projects</ui:msg>
                        </g:Button>
                        <g:Button ui:field="howItWorksDemandBtn"
                                  addStyleNames="banner-link banner-link2-position">
                            <ui:msg key="howItWorks">How it works?</ui:msg>
                        </g:Button>
                        <g:Button ui:field="registerDemandBtn"
                                  addStyleNames="banner-button">
                            <ui:msg key="placeProjects">Post a Project</ui:msg>
                        </g:Button>
                    </b:Column>
                </b:Column>
            </b:FluidRow>

            <!-- Categories -->
            <b:FluidRow>
                <b:Column size="12" styleName="category-list">
                    <c:CellList ui:field="categoryList" />
                </b:Column>
            </b:FluidRow>

            <!-- Footer -->
            <b:FluidRow>
                <b:Column size="12">
                    <g:SimplePanel ui:field="footerContainer"/>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>
    </g:ScrollPanel>

</ui:UiBinder>
