<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:custom="urn:import:com.eprovement.poptavka.client.common.login">
	<ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyContainer}'>
		<g:north size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:north>
		<g:center>
			<g:HTMLPanel styleName='{res.layout.bodyContainer}'>
                    <g:SimplePanel ui:field="servicesPanel"/>
				<g:HorizontalPanel ui:field="categorySection" />
				<h1>secured button calling secured RPC</h1>
				<g:Button ui:field="demandCreateBtn">Call Simple Service with Default
					LoginPopupPresenter</g:Button>
				<g:Button ui:field="securedButton">securedButton to invoke Acccess Denied
					403 error</g:Button>
				<g:Button ui:field="sendUsEmailButton">Send us an email</g:Button>

				<g:Button styleName="{style.important}" ui:field="button" />
			</g:HTMLPanel>
		</g:center>
		<g:south size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>
