<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:custom="urn:import:com.eprovement.poptavka.client.common.login"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:style>
        .important {
        font-weight: bold;
        }

        .hidden {
        visibility:
        hidden;
        display: none;
        }

        .homepage-container {
        padding: 0;
        width:980px;
        }

        .banner1 {
        background:url(images/homepage/banner1_bg.png)
        no-repeat;
        display: block;
        float: left;
        height: 315px;
        margin: -13px 18px 0 19px;
        width: 462px;
        position: relative;
        }
        .banner2 {
        background:url(images/homepage/banner2_bg.png) no-repeat;
        display: block;
        float: left;
        height: 315px;
        margin:-13px 0 0;
        width: 462px;
        position: relative;
        }

        .banner3 {
        background: url(images/homepage/banner3.png) no-repeat;
        display: block;
        float: left;
        height: 252px;
        margin: 19px 0 0;
        width: 980px;
        }

        .header {
        color: #6F6B59;
        font-family: "Open Sans";
        font-size:35px;
        font-weight:lighter;
        left:26px;
        position:absolute;
        top:45px;
        }

        .subheader {
        color: #6F6B59;
        font-family: "Open Sans";
        font-size:14px;
        font-weight:normal;
        left:26px;
        position:absolute;
        top:88px;
        }

        .banner-content {
        font-size: 12px;
        left: 26px;
        line-height: 16px;
        position: absolute;
        top: 141px;
        width: 270px;
        }

        .banner-link {
        background: url(images/homepage/banner-link-arrow.png) no-repeat 0 10px;
        border: medium none;
        color: #6F6B59;
        font-size: 12px;
        padding-left: 13px;
        }

        .banner-link:hover {
        background: url(images/homepage/banner-link-arrow_hover.png) no-repeat 0 10px;
        color: #309b08;
        border:none;
        }

        .banner-link1-position {
        position: absolute;
        top:203px;
        left:26px;
        }
        .banner-link2-position {
        left: 163px;
        position: absolute;
        top: 203px;
        }
        .banner-button {
        background:url(images/homepage/green-banner-button.png)
        no-repeat;
        border: medium none;
        color: #FFFFFF;
        font-family:inherit;
        font-size: 19px;
        font-weight: lighter;
        height:49px;
        left:26px;
        line-height: 42px;
        padding:0 0 3px;
        position:absolute;
        text-align:center;
        top: 243px;
        width: 256px;
        cursor:pointer;
        }

        .banner-button:focus {
        border:none;
        }

        .category-list {
        float: left;
        width: 100%;
        padding: 20px 0;
        background: #d9cda1;
        border-radius: 0 0 5px 5px;
        }
    </ui:style>

    <g:ScrollPanel styleName='{res.layout.bodyFullContainer}'>
        <g:HTMLPanel addStyleNames='{res.layout.bodyContent} {style.homepage-container}'>
            <g:HTMLPanel styleName="{style.banner1}">
                <b:Heading size="4" styleName="{style.header}">
                    <ui:msg key="iamProfessional">I''m Professional</ui:msg>
                </b:Heading>
                <g:Label styleName="{style.subheader}">
                    <ui:msg key="iamProfessionalNext">looking for new business!</ui:msg>
                </g:Label>
                <g:Label styleName="{style.banner-content}">
                    <ui:msg key="iamProfessionalDesc">
                        Are you looking for new business opportunities?
                        We are providing hundreds of projects on one site.
                        Let the Clients contact you easily.
                    </ui:msg>
                </g:Label>
                <g:Button ui:field="suppliersBtn"
                          addStyleNames="{style.banner-link} {style.banner-link1-position}">
                    <ui:msg key="allProfessionals">All Professionals</ui:msg>
                </g:Button>
                <g:Button ui:field="howItWorksSupplierBtn"
                          addStyleNames="{style.banner-link} {style.banner-link2-position}">
                    <ui:msg key="howItWorks">How it works?</ui:msg>
                </g:Button>
                <g:Button ui:field="registerSupplierBtn"
                          addStyleNames="{style.banner-button}">
                    <ui:msg key="signUpAsPro">Sign up as Professional</ui:msg>
                </g:Button>
            </g:HTMLPanel>
            <g:HTMLPanel styleName="{style.banner2}">
                <b:Heading size="4" styleName="{style.header}">
                    <ui:msg key="placeProject">Place Project</ui:msg>
                </b:Heading>
                <g:Label styleName="{style.subheader}">
                    <ui:msg key="placeProjectNext">and find Professionals now</ui:msg>
                </g:Label>
                <g:Label styleName="{style.banner-content}">
                    <ui:msg key="placeProjectDesc">
                        Is there anything you need to get done?
                        Find suitable Professionals online and save your time and money.
                    </ui:msg>
                </g:Label>
                <g:Button ui:field="demandsBtn"
                          addStyleNames="{style.banner-link} {style.banner-link1-position}">
                    <ui:msg key="allProjects">All Projects</ui:msg>
                </g:Button>
                <g:Button ui:field="howItWorksDemandBtn"
                          addStyleNames="{style.banner-link} {style.banner-link2-position}">
                    <ui:msg key="howItWorks">How it works?</ui:msg>
                </g:Button>
                <g:Button ui:field="registerDemandBtn"
                          addStyleNames="{style.banner-button}">
                    <ui:msg key="placeProjects">Place Project</ui:msg>
                </g:Button>
            </g:HTMLPanel>
            <g:HTMLPanel styleName="{style.banner3}"></g:HTMLPanel>
            <g:FlowPanel ui:field="categorySection" styleName="{style.category-list}" >
                <c:CellList ui:field="categoryList" />
            </g:FlowPanel>
            <g:Widget ui:field="footer"/>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>
