<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:custom="urn:import:com.eprovement.poptavka.client.common.login"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:with field='res'
        type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:style>
        .important {
        font-weight: bold;
        }

        .hidden {
        visibility:
        hidden;
        display: none;
        }

        .homepage-container {
        postion:relative;
        height: 800px;
        color: #6F6B59;
        }

        .banner1 {
        background:
        url(images/homepage/banner1_bg.png) no-repeat;
        display: block;
        float: left;
        height: 315px;
        margin: -28px 18px 0 4px;
        width: 462px;
        position: relative;
        }
        .banner2 {
        background:
        url(images/homepage/banner2_bg.png) no-repeat;
        display: block;
        float: left;
        height: 315px;
        margin:-28px 0 0;
        width: 462px;
        position: relative;
        }
        .banner3 {
        background:
        url(images/homepage/banner3.png) no-repeat;
        display: block;
        float: left;
        height: 252px;
        margin: 19px 0 0 -15px;
        width: 980px;
        }

        .header {
        color: #6F6B59;
        font-family: "Open Sans";
        font-size:35px;
        font-weight:lighter;
        left:26px;
        position:absolute;
        top:45px;
        }

        .subheader {
        color: #6F6B59;
        font-family: "Open Sans";
        font-size:14px;
        font-weight:normal;
        left:26px;
        position:absolute;
        top:88px;
        }

        .banner-content {
        font-size: 12px;
        left: 26px;
        line-height: 16px;
        position: absolute;
        top: 141px;
        width: 266px;
        }

        .banner-link {
        background:
        url(images/homepage/banner-link-arrow.png) no-repeat 0 10px;
        border: medium none;
        color: #6F6B59;
        font-size: 12px;
        padding-left: 13px;
        }

        .banner-link:hover {
        background:
        url(images/homepage/banner-link-arrow_hover.png) no-repeat 0
        10px;
        color: #309b08;
        }

        .banner-link1-position {
        position: absolute;
        top: 203px;
        left:26px;
        }
        .banner-link2-position {
        left: 163px;
        position: absolute;
        top: 203px;
        }
        .banner-button {
        background:url(images/homepage/green-banner-button.png)
        no-repeat;
        border: medium none;
        color: #FFFFFF;
        font-family:inherit;
        font-size: 19px;
        font-weight: lighter;
        height:49px;
        left:26px;
        line-height: 42px;
        padding:0 0 3px;
        position:absolute;
        text-align:center;
        top: 243px;
        width: 256px;
        cursor:pointer;
        }

        .banner-button:focus {
        border:none;
        }
    </ui:style>

    <g:ScrollPanel styleName='{res.layout.bodyFullContainer}'>
        <g:HTMLPanel addStyleNames='{res.layout.bodyContent}'>
            <g:HTMLPanel addStyleNames='{style.hidden}'>
                <g:HorizontalPanel ui:field="categorySection" />
                <h1>secured button calling secured RPC</h1>
                <g:Button ui:field="demandCreateBtn">Call Simple Service with
                    Default
                    LoginPopupPresenter</g:Button>
                <g:Button ui:field="securedButton">securedButton to invoke
                    Acccess
                    Denied
                    403 error</g:Button>
                <g:Button ui:field="sendUsEmailButton">Send us an email</g:Button>

                <g:Button styleName="{style.important}"
                    ui:field="button" />
            </g:HTMLPanel>

            <g:HTMLPanel addStyleNames='{style.homepage-container}'>
                <g:HTMLPanel styleName="{style.banner1}">
                    <b:Heading size="4" styleName="{style.header}">Jsem
                        Dodavatel</b:Heading>
                    <g:Label styleName="{style.subheader}">a hledám nové zákazky!</g:Label>
                    <g:Label styleName="{style.banner-content}">
                        Je težké hledat nové
                        zakázky. U nás jsou stovky poptávek na jednom
                        místě. Nechte zákazníky, aby vás oslovily.
                    </g:Label>
                    <g:Button
                        addStyleNames="{style.banner-link} {style.banner-link1-position}">
                        Katalog dodavatelů</g:Button>
                    <g:Button
                        addStyleNames="{style.banner-link} {style.banner-link2-position}">
                        Jak to funguje?</g:Button>
                    <g:Button addStyleNames="{style.banner-button}">Registrovat
                        dodavatele</g:Button>
                </g:HTMLPanel>
                <g:HTMLPanel styleName="{style.banner2}">
                    <b:Heading size="4" styleName="{style.header}">Zadat
                        Poptávku</b:Heading>
                    <g:Label styleName="{style.subheader}">a oslovit profíky v
                        oboru!</g:Label>
                    <g:Label styleName="{style.banner-content}">
                        Najděte vhodného
                        dodavatele pro Vaši poptávku ZDARMA. Máme více
                        jak:
                        169 087 prověřených dodavatelů
                    </g:Label>
                    <g:Button
                        addStyleNames="{style.banner-link} {style.banner-link1-position}">
                        Katalog poptávek</g:Button>
                    <g:Button
                        addStyleNames="{style.banner-link} {style.banner-link2-position}">
                        Jak to funguje?</g:Button>
                    <g:Button addStyleNames="{style.banner-button}">Registrovat
                        poptávku</g:Button>
                </g:HTMLPanel>
                <g:HTMLPanel styleName="{style.banner3}"></g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>

    </g:ScrollPanel>
</ui:UiBinder>
