<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:style>
        .form {
        padding-top: 20px;
        }
    </ui:style>

    <b:FluidContainer>
        <b:FluidRow>
            <b:Column size="12">
                <b:WellForm addStyleNames='{style.form}'>
                    <b:FluidRow>
                        <b:Column size="6">
                            <b:FluidRow>
                                <b:Column size="6">
                                    <g:Label>
                                        <ui:msg key="formMaxOffers">Max offers Count</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="6">
                                    <g:IntegerBox ui:field="maxOffersBox">10</g:IntegerBox>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                        <b:Column size="6">
                            <b:FluidRow>
                                <b:Column size="4">
                                    <g:Label>
                                        <ui:msg key="formDemandAdvDemandType">Demand Type</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="4">
                                    <g:RadioButton name="demandType" ui:field="classicRadio" checked="true">
                                        <ui:msg key="formDemandAdvDemandClassic">Normal Demand</ui:msg>
                                    </g:RadioButton>
                                </b:Column>
                                <b:Column size="4">
                                    <g:RadioButton name="demandType" ui:field="attractiveRadio">
                                        <ui:msg key="formDemandAdvDemandAttractive">Attractive Demand</ui:msg>
                                    </g:RadioButton>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
