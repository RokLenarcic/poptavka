<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:co="urn:import:com.eprovement.poptavka.client.common"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .form {
        padding-top: 20px;
        }
    </ui:style>

    <b:FluidContainer>
        <b:FluidRow>
            <b:Column size="12">
                <b:WellForm addStyleNames='{style.form}'>
                    <b:FluidRow>
                        <b:Column size="6">
                            <b:FluidRow>
                                <b:Column size="6">
                                    <g:Label>
                                        <ui:msg key="formMaxOffers">Max offers Count</ui:msg>
                                    </g:Label>
                                </b:Column>
                                <b:Column size="6">
                                    <g:IntegerBox ui:field="maxOffersBox">10</g:IntegerBox>
                                </b:Column>
                            </b:FluidRow>
                        </b:Column>
                        <b:Column size="6">
                            <b:WellForm>
                                <b:FluidRow>
                                    <b:Column size="2">
                                        <g:Label>
                                            <ui:msg key="formDemandAdvDemandType">Demand Type</ui:msg>
                                        </g:Label>
                                    </b:Column>
                                    <b:Column size="2">
                                        <g:Label>
                                            <ui:msg key="formDemandAdvDemandNormal">Normal</ui:msg>
                                        </g:Label>
                                    </b:Column>
                                    <b:Column size="6">
                                        <g:HTMLPanel ui:field="demandTypeChoicePanel" addStyleNames='{res.common.switchLeft}'>
                                            <g:Button ui:field="normalBtn"></g:Button>
                                            <g:Button ui:field="attractiveBtn"></g:Button>
                                        </g:HTMLPanel>
                                    </b:Column>
                                    <b:Column size="2">
                                        <g:Label>
                                            <ui:msg key="formDemandAdvDemandAttractive">Attractive</ui:msg>
                                        </g:Label>
                                    </b:Column>
                                </b:FluidRow>
                            </b:WellForm>
                        </b:Column>
                    </b:FluidRow>
                    <!-- *************************** URGENCY *************************** -->
                    <b:FluidRow>
                        <b:Column size="6">
                            <co:UrgencySelectorView ui:field="urgencySelector" />
                        </b:Column>                    
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
