<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:custom="urn:import:com.eprovement.poptavka.client.common.login"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:style>
        .important {
            font-weight: bold;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
        <g:north size="49">
            <g:HTMLPanel>
                <h2 class='{res.layout.toolbarHeader}'>
                    <ui:msg key="errorToolbarLabel">Error</ui:msg>
                </h2>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel styleName='{res.layout.bodyFullContainer} {res.layout.bodyFullContainerBg}'>
                <g:HTMLPanel styleName='{res.common.howItWorksContainer}'>
                    <b:Heading size="1" ui:field="errorTitle"></b:Heading>
                    <br />
                    <strong>
                        <g:Label ui:field="errorDescription"></g:Label>
                    </strong>
                    <br />
                    <g:VerticalPanel ui:field="messagesList" addStyleNames='list-style'></g:VerticalPanel>
                    <br />
                    <g:Button ui:field="reportButton" styleName='{res.common.buttonRightSmall}'>
                        <ui:msg key="commonBtnReport">Report</ui:msg>
                    </g:Button>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>