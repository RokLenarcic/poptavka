<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cl="urn:import:com.eprovement.poptavka.client.common.locality"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

        <!-- injecting style resources -->
        <ui:with field='res'
                 type='com.eprovement.poptavka.resources.StyleResource' />
        <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

        <ui:style>
                .tabIndex1 { z-index: 1; width: 240px;}
                .tabIndex2 { z-index: 2; width: 230px;}
                .tabIndex3 { z-index: 3; width: 230px;}
                .tabIndex4 { z-index: 4; width: 250px;}
                .tabIndex5 { z-index: 5; width: 220px;}

                .selectorLayout {width: 980px; height: 350px;}
        </ui:style>

        <g:HTMLPanel styleName='{res.layout.bodyContainer}'>
                <g:TabLayoutPanel ui:field='mainPanel'
                                  styleName='{res.createTabPanel.createTabPanel}' barUnit='PX'
                                  barHeight='50'>
                        <g:tab>
                                <g:customHeader size="30">
                                        <g:HTML stylePrimaryName="{style.tabIndex5}">
                                                1.
                                                <ui:msg key="supplierCreationTab1">Supplier Registration</ui:msg>
                                        </g:HTML>
                                </g:customHeader>
                                <g:DockLayoutPanel unit="EM" height="100%">
                                        <g:south size="4">
                                                <b:Tooltip text="{text.supplierCreationBasicDescription}" placement="BOTTOM">
                                                        <b:Alert ui:field='basicStatus' type="DEFAULT" close="false" animation="true">
                                                                <b:Icon ui:field='basicIcon' type="INFO_SIGN" iconSize="LARGE" />
                                                                <ui:msg key="supplierCreationProvidePersonalInfoLabel">
                                                                        Provide personal information.
                                                                </ui:msg>
                                                        </b:Alert>
                                                </b:Tooltip>
                                        </g:south>
                                        <g:center>
                                                <g:VerticalPanel>
                                                        <g:SimplePanel ui:field="supplierInfoHolder" />
                                                        <g:Button ui:field="nextButtonTab1">
                                                                <ui:msg key="commonBtnNext">Next</ui:msg>
                                                        </g:Button>
                                                </g:VerticalPanel>
                                        </g:center>
                                </g:DockLayoutPanel>
                        </g:tab>
                        <g:tab>
                                <g:customHeader size="30">
                                        <g:HTML stylePrimaryName="{style.tabIndex4}">
                                                2.
                                                <ui:msg key="supplierCreationTab2">Category selection</ui:msg>
                                        </g:HTML>
                                </g:customHeader>
                                <g:DockLayoutPanel unit="EM" height="100%">
                                        <g:south size="4">
                                                <b:Tooltip text="{text.supplierCreationCatDescription}" placement="BOTTOM">
                                                        <b:Alert ui:field='categoryStatus' type="DEFAULT" close="false" animation="true">
                                                                <b:Icon ui:field='categoryIcon' type="INFO_SIGN" iconSize="LARGE" />
                                                                <ui:msg key="supplierCreationCategorySelectorInfoLabel">
                                                                        Select the most suitable category.
                                                                </ui:msg>
                                                        </b:Alert>
                                                </b:Tooltip>
                                        </g:south>
                                        <g:center>
                                                <g:VerticalPanel>
                                                        <g:SimplePanel ui:field="categoryHolder" />
                                                        <g:HorizontalPanel>
                                                                <g:Button ui:field="backButtonTab2">
                                                                        <ui:msg key="commonBtnBack">Back</ui:msg>
                                                                </g:Button>
                                                                <g:Button ui:field="nextButtonTab2">
                                                                        <ui:msg key="commonBtnNext">Next</ui:msg>
                                                                </g:Button>
                                                        </g:HorizontalPanel>
                                                </g:VerticalPanel>
                                        </g:center>
                                </g:DockLayoutPanel>
                        </g:tab>
                        <g:tab>
                                <g:customHeader size="30">
                                        <g:HTML stylePrimaryName="{style.tabIndex3}">
                                                3.
                                                <ui:msg key="supplierCreationTab3">Locality selection</ui:msg>
                                        </g:HTML>
                                </g:customHeader>
                                <g:DockLayoutPanel unit="EM" height="100%">
                                        <g:south size="4">
                                                <b:Tooltip text="{text.supplierCreationLocDescription}" placement="BOTTOM">
                                                        <b:Alert ui:field='localityStatus' type="DEFAULT" close="false" animation="true">
                                                                <b:Icon ui:field='localityIcon' type="INFO_SIGN" iconSize="LARGE" />
                                                                <ui:msg key="{text.supplierCreationLocalitySelectorInfoLabel}">
                                                                        Select your Locality.
                                                                </ui:msg>
                                                        </b:Alert>
                                                </b:Tooltip>
                                        </g:south>
                                        <g:center>
                                                <g:VerticalPanel>
                                                        <g:SimplePanel ui:field="localityHolder" />
                                                        <g:HorizontalPanel>
                                                                <g:Button ui:field="backButtonTab3">
                                                                        <ui:msg key="commonBtnBack">Back</ui:msg>
                                                                </g:Button>
                                                                <g:Button ui:field="nextButtonTab3">
                                                                        <ui:msg key="commonBtnNext">Next</ui:msg>
                                                                </g:Button>
                                                        </g:HorizontalPanel>
                                                </g:VerticalPanel>
                                        </g:center>
                                </g:DockLayoutPanel>
                        </g:tab>
                        <g:tab>
                                <g:customHeader size="30">
                                        <g:HTML stylePrimaryName="{style.tabIndex2}">
                                                4.
                                                <ui:msg key="supplierCreationTab4">Service Selection</ui:msg>
                                        </g:HTML>
                                </g:customHeader>
                                <g:DockLayoutPanel unit="EM" height="100%">
                                        <g:south size="4">
                                                <b:Tooltip text="{text.supplierCreationAdvDescription}" placement="BOTTOM">
                                                        <b:Alert ui:field='serviceStatus' type="DEFAULT" close="false" animation="true">
                                                                <b:Icon ui:field='serviceIcon' type="INFO_SIGN" iconSize="LARGE" />
                                                                <ui:msg key="{text.supplierCreationServiceSelectorInfoLabel}">
                                                                        Select service you are interested in.
                                                                </ui:msg>
                                                        </b:Alert>
                                                </b:Tooltip>
                                        </g:south>
                                        <g:center>
                                                <g:HTMLPanel>
                                                        <g:SimplePanel ui:field="serviceHolder" />
                                                        <g:HorizontalPanel ui:field="agreementPanel">
                                                                <g:CheckBox ui:field="agreedCheck" />
                                                                <g:Anchor ui:field="conditionLink">
                                                                        <ui:msg key="supplierCreationAgreementConditions">Agreement</ui:msg>
                                                                </g:Anchor>
                                                        </g:HorizontalPanel>
                                                        <br />
                                                        <g:HorizontalPanel>
                                                                <g:Button ui:field="backButtonTab4">
                                                                        <ui:msg key="commonBtnBack">Back</ui:msg>
                                                                </g:Button>
                                                                <g:Button ui:field="registerBtn">
                                                                        <ui:msg key="supplierCreationRegisterBtn">Register Supplier</ui:msg>
                                                                </g:Button>
                                                        </g:HorizontalPanel>
                                                        <hr />
                                                </g:HTMLPanel>
                                        </g:center>
                                </g:DockLayoutPanel>
                        </g:tab>
                </g:TabLayoutPanel>
        </g:HTMLPanel>
</ui:UiBinder>
