<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cl="urn:import:com.eprovement.poptavka.client.common.locality"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">

    <!-- injecting style resources -->
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
    <ui:with field='text' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <ui:style>
        .tabIndex1 { z-index: 1;}
        .tabIndex2 { z-index: 2;}
        .tabIndex3 { z-index: 3;}
        .tabIndex4 { z-index: 4;}
        .tabIndex5 { z-index: 5; padding: 0 35px 0 25px;}

        .selectorLayout {width: 980px; height: 350px;}
    </ui:style>

    <g:HTMLPanel styleName='{res.layout.bodyContainer}'>
        <g:TabLayoutPanel ui:field='mainPanel'
                          styleName='{res.createTabPanel.createTabPanel}' barUnit='PX' barHeight='50'>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{style.tabIndex5}">
                        1.
                        <ui:msg key="supplierRegistrationInfo">Supplier Registration</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='basicStatus'
                                            style='{res.common.infoMessage}' message='{text.providePersonalInfoLabel}'
                                            description='{text.basicDescription}' />
                    </g:south>
                    <g:center>
                        <g:VerticalPanel>
                            <g:SimplePanel ui:field="supplierInfoHolder" />
                            <g:Button ui:field="nextButtonTab1" >
                                <ui:msg key="nextButton">Next</ui:msg>
                            </g:Button>
                        </g:VerticalPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{style.tabIndex4}">
                        2.
                        <ui:msg key="catsSelection">Category selection</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='categoryStatus'
                                            style='{res.common.infoMessage}' message='{text.categorySelectorInfoLabel}'
                                            description='{text.catDescription}' />
                    </g:south>
                    <g:center>
                        <g:VerticalPanel>
                            <g:SimplePanel ui:field="categoryHolder" />
                            <g:HorizontalPanel>
                                <g:Button ui:field="backButtonTab2" >
                                    <ui:msg key="backButton">Back</ui:msg>
                                </g:Button>
                                <g:Button ui:field="nextButtonTab2" >
                                    <ui:msg key="nextButton">Next</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{style.tabIndex3}">
                        3.
                        <ui:msg key="locsSelection">Locality selection</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='localityStatus'
                                            style='{res.common.infoMessage}' message='{text.localitySelectorInfoLabel}'
                                            description='{text.locDescription}' />
                    </g:south>
                    <g:center>
                        <g:VerticalPanel>
                            <g:SimplePanel ui:field="localityHolder" />
                            <g:HorizontalPanel>
                                <g:Button ui:field="backButtonTab3" >
                                    <ui:msg key="backButton">Back</ui:msg>
                                </g:Button>
                                <g:Button ui:field="nextButtonTab3" >
                                    <ui:msg key="nextButton">Next</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
            <g:tab>
                <g:customHeader size="30">
                    <g:HTML stylePrimaryName="{style.tabIndex2}">
                        4.
                        <ui:msg key="serviceSelection">Service Selection</ui:msg>
                    </g:HTML>
                </g:customHeader>
                <g:DockLayoutPanel unit="EM" height="100%">
                    <g:south size="4">
                        <cm:StatusIconLabel ui:field='serviceStatus'
                                            style='{res.common.infoMessage}' message='{text.serviceSelectorInfoLabel}'
                                            description='{text.advDescription}' />
                    </g:south>
                    <g:center>
                        <g:HTMLPanel>
                            <g:SimplePanel ui:field="serviceHolder" />
                            <g:HorizontalPanel ui:field="agreementPanel">
                                <g:CheckBox ui:field="agreedCheck" />
                                <g:Label>
                                    <ui:msg key="agreement">Agreement</ui:msg>
                                </g:Label>
                                <g:Anchor ui:field="conditionLink">
                                    <ui:msg key="conditions">Conditions</ui:msg>
                                </g:Anchor>
                            </g:HorizontalPanel>
                            <br />
                            <g:HorizontalPanel>
                                <g:Button ui:field="backButtonTab4" >
                                    <ui:msg key="backButton">Back</ui:msg>
                                </g:Button>
                                <g:Button ui:field="registerBtn">
                                    <ui:msg key="registerSupplier">Register Supplier</ui:msg>
                                </g:Button>
                            </g:HorizontalPanel>
                            <hr />
                        </g:HTMLPanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:tab>
        </g:TabLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>
