<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />

    <b:FluidContainer ui:field="fluidContainer">
        <b:FluidRow>
            <b:Column size="6">
                <b:FluidRow>
                    <b:Column size="3">
                        <g:Label>
                            Urgency level:
                        </g:Label>
                        <b:Tooltip text='{msgs.urgencyDesc}'>
                            <g:Image resource='{res.images.urgencyHeader}'/>
                        </b:Tooltip>
                    </b:Column>
                    <b:Column size="3">
                        <g:Label>
                            Normal
                        </g:Label>
                        <b:Tooltip text='{msgs.urgencyNormalDesc}'>
                            <g:Image resource='{res.images.urgencyGreen}'/>
                        </b:Tooltip>
                    </b:Column>
                    <b:Column size="3">
                        <g:Label>
                            Higher
                        </g:Label>
                        <b:Tooltip text='{msgs.urgencyHigherDesc}'>
                            <g:Image resource='{res.images.urgencyOrange}'/>
                        </b:Tooltip>
                    </b:Column>
                    <b:Column size="3">
                        <g:Label>
                            HIGHT
                        </g:Label>
                        <b:Tooltip text='{msgs.urgencyHighDesc}'>
                            <g:Image resource='{res.images.urgencyRed}'/>
                        </b:Tooltip>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="3">
                        <g:Label>
                            Selected:
                        </g:Label>
                    </b:Column>
                    <b:Column size="3">
                        <g:RadioButton name="urgency" ui:field="urgency1" checked="true" />
                    </b:Column>
                    <b:Column size="3">
                        <g:RadioButton name="urgency" ui:field="urgency2" />
                    </b:Column>
                    <b:Column size="3">
                        <g:RadioButton name="urgency" ui:field="urgency3" />
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="3">
                        <g:Label>
                            Cost creadits:
                        </g:Label>
                    </b:Column>
                    <b:Column size="3">
                        <g:Label>
                            5
                        </g:Label>
                    </b:Column>
                    <b:Column size="3">
                        <g:Label>
                            10
                        </g:Label>
                    </b:Column>
                    <b:Column size="3">
                        <g:Label>
                            15
                        </g:Label>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="12">
                        <g:Anchor ui:field="revert" visible="false">
                            <ui:msg key="commonBtnRevert">Revert</ui:msg>
                        </g:Anchor>
                    </b:Column>
                </b:FluidRow>
            </b:Column>                    
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
