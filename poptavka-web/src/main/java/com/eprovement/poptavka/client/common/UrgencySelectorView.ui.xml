<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:with field='msgs' type='com.google.gwt.i18n.client.LocalizableMessages' />
    
    <ui:style>
        .urgency-container {
        padding: 0px;
        }
        
        .urgency-container img {
        margin: 0 auto;
        display: block;
        }
        
        .urgency-container input[type="radio"] {
        margin: 6px auto;
        display: block;
        }       
        
        .label {
        color: #237E00;
        font-size: 14px;
        line-height: 40px;
        text-align: center;
        width: 100%;
        padding: 0 !important;
        }
    </ui:style>

    <b:FluidContainer ui:field="fluidContainer" addStyleNames='{style.urgency-container}'>
        <b:FluidRow>
            <b:Column size="12">
                <b:FluidRow>
                    <b:Column size="3">
                        <g:Label>
                            Urgency level:
                        </g:Label>
                    </b:Column>
                    <b:Column size="2">
                        <g:Label addStyleNames='{style.label}'>
                            Normal
                        </g:Label>
                        <g:Image resource='{res.images.urgencyGreen}' title='{msgs.urgencyNormalDesc}' />
                    </b:Column>
                    <b:Column size="2">
                        <g:Label addStyleNames='{style.label}'>
                            Higher
                        </g:Label>
                        <g:Image resource='{res.images.urgencyOrange}' title='{msgs.urgencyHigherDesc}'/>
                    </b:Column>
                    <b:Column size="2">
                        <g:Label addStyleNames='{style.label}'>
                            High
                        </g:Label>
                        <g:Image resource='{res.images.urgencyRed}' title='{msgs.urgencyHighDesc}'/>
                    </b:Column>
                    <b:Column size="2" ui:field="labelColumn4">
                        <g:Label addStyleNames='{style.label}'>
                            Expired
                        </g:Label>
                        <g:Image resource='{res.images.urgencyHeader}' title='{msgs.urgencyExpiredDesc}'/>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="3">
                    </b:Column>
                    <b:Column size="2">
                        <g:RadioButton name="urgency" ui:field="urgency1" checked="true" />
                    </b:Column>
                    <b:Column size="2">
                        <g:RadioButton name="urgency" ui:field="urgency2" />
                    </b:Column>
                    <b:Column size="2">
                        <g:RadioButton name="urgency" ui:field="urgency3" />
                    </b:Column>
                    <b:Column size="2" ui:field="buttonColumn4">
                        <g:RadioButton name="urgency" ui:field="urgency4" />
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow styleName='hide'>
                    <b:Column size="4">
                        <g:Label>
                            Cost creadits:
                        </g:Label>
                    </b:Column>
                    <b:Column size="2">
                        <g:Label>
                            5
                        </g:Label>
                    </b:Column>
                    <b:Column size="2">
                        <g:Label>
                            10
                        </g:Label>
                    </b:Column>
                    <b:Column size="2">
                        <g:Label>
                            15
                        </g:Label>
                    </b:Column>
                    <b:Column size="2" ui:field="creditsColumn4"/>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="12">
                        <g:Anchor ui:field="revert" visible="false">
                            <ui:msg key="commonBtnRevert">Revert</ui:msg>
                        </g:Anchor>
                    </b:Column>
                </b:FluidRow>
            </b:Column>                    
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
