<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res'
                 type='com.eprovement.poptavka.client.resources.StyleResource' />

    <g:DockLayoutPanel unit="PX"
                           styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
        <g:west size="180">
            <g:DockLayoutPanel unit="PX">
                <g:north size="65">
                    <g:HTMLPanel>
                        <h2 class='{res.layout.toolbarHeader}'>
                            <ui:msg key="clientDemandsToolbarLabel">Menu Client</ui:msg>
                        </h2>
                    </g:HTMLPanel>
                </g:north>
                <g:center>
                    <g:HTMLPanel>
                        <!-- Client submenu -->
                        <div ui:field="supMenu" style="display: block;">
                            <ul class='{res.layout.submenuList}'>
                                <li>
                                    <g:Button ui:field="clientNewDemands">
                                        <ui:msg key="menuClientDemands">My demands</ui:msg>
                                    </g:Button>
                                </li>
                                <li>
                                    <g:Button ui:field="clientOffers">
                                        <ui:msg key="menuClientOffers">Offered demands</ui:msg>
                                    </g:Button>
                                </li>
                                <li>
                                    <g:Button ui:field="clientAssignedDemands">
                                        <ui:msg key="menuClientssignedDemands">Assigned demands</ui:msg>
                                    </g:Button>
                                </li>
                            </ul>
                        </div>
                    </g:HTMLPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <g:SimplePanel ui:field="contentPanel" />
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
