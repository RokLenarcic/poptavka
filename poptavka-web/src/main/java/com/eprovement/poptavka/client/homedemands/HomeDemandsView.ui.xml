<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:style>
		.name {
			font-weight: bold;
			width: auto;
		}
		
		.panel {
			width: 400px;
			spacing: 5;
		}
		
		.list {
			width: 100px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX"
		styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
		<g:west size="320">
			<g:DockLayoutPanel unit="PX">
				<g:north size="75">
					<g:HTMLPanel></g:HTMLPanel>
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<c:CellTree ui:field="cellTree" />
					</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:west>
		<g:west size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:west>
		<g:center>
			<g:DockLayoutPanel unit="PX">
				<g:north size="75">
					<g:VerticalPanel>
						<g:DecoratorPanel ui:field="filterLabelPanel">
							<g:Label ui:field="filterLabel" />
						</g:DecoratorPanel>
						<g:HorizontalPanel>
							<g:Button ui:field="offerBtn1">Send Offer</g:Button>
							<c:SimplePager styleName="float:right" ui:field='pager' />
							<g:ListBox styleName="float:right" ui:field='pageSize' />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:north>
				<g:center>
					<c:DataGrid ui:field="dataGrid" />
				</g:center>
				<g:south size="30">
					<g:HTMLPanel></g:HTMLPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
		<g:east size="350">
			<g:DockLayoutPanel unit="PX">
				<g:north size="75">
					<g:HTMLPanel></g:HTMLPanel>
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<g:HTMLPanel styleName='{res.layout.detailInfo}'>
							<g:Label ui:field="bannerLabel">Tu bude banner :)</g:Label>
							<g:SimplePanel ui:field="demandDetailPanel">
								<d:DemandDetailView ui:field="demandDetail" />
							</g:SimplePanel>
							<g:Button ui:field="offerBtn2">Send Offer</g:Button>
						</g:HTMLPanel>
					</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:east>
		<g:east size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder>
