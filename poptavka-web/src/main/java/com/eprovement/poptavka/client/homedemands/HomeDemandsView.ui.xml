<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail"
             xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />

    <ui:style>
        .filterLabel {
            color: #6F6B59;
            font-size: 18px;
            font-weight: lighter;
            line-height: 30px;
            padding: 0px 10px 10px;
        }
    </ui:style>
    
    <g:DockLayoutPanel unit="PX"
                       styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
        <g:west size="330">
            <g:DockLayoutPanel unit="PX">
                <g:north size="49">
                    <g:HTMLPanel>
                        <h2 class='{res.layout.toolbarHeader}'>
                            <ui:msg key="homeDemandsToolbarLabel">Category</ui:msg>
                        </h2>
                    </g:HTMLPanel>
                </g:north>
                <g:center>
                    <g:HTMLPanel styleName='{res.layout.submenuContainer}'>
                        <g:ScrollPanel>
                            <c:CellTree ui:field="cellTree" />
                        </g:ScrollPanel>
                    </g:HTMLPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:west size="20">
            <g:HTMLPanel></g:HTMLPanel>
        </g:west>
        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="65">
                    <g:HTMLPanel styleName='{res.layout.toolbarItemsBlock}'>
                        <g:Button ui:field="offerBtn"
                                  styleName='{res.layout.toolbarButtonBlue} {res.layout.toolbarItem}'>
                            <ui:msg key="homeDemandsOfferBtn">Send Offer</ui:msg>
                        </g:Button>
                        <s:UniversalPagerWidget
                            ui:field='pager' />
                    </g:HTMLPanel>
                </g:north>
                <g:center>
                    <b:FluidContainer addStyleNames='{res.layout.fluidMainGrid}'>
                        <b:FluidRow>
                            <b:Column size="7">
                                <g:Label ui:field="filterLabel" styleName="{style.filterLabel}"/>
                                <g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyFullContainer}'>                            
                                    <g:center>
                                        <c:DataGrid ui:field="dataGrid"
                                                    addStyleNames='{res.layout.layoutUser}  {res.layout.dataGridContainer}'/>
                                    </g:center>                                    
                                </g:DockLayoutPanel>
                            </b:Column>
                            <b:Column size="5">
                                <g:HTMLPanel styleName='{res.layout.detailInfo}'>
                                    <g:Label ui:field="bannerLabel">Tu bude
                                        banner :)
                                    </g:Label>
                                    <d:DemandDetailView
                                        ui:field="demandDetail" />
                                </g:HTMLPanel>
                            </b:Column>
                        </b:FluidRow>
                    </b:FluidContainer>
                </g:center>
                <g:south size="36">
                    <g:SimplePanel ui:field="footerHolder" styleName='{res.layout.footerDatagridContainer}' />
                </g:south>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
