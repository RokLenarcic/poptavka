<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:style>
		.name {
			font-weight: bold;
			width: auto;
		}

		.panel {
			width: 400px;
			spacing: 5;
		}

		.list {
			width: 100px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX"
		styleName='{res.layout.bodyFullContainer}'>
		<g:west size="320">
			<g:ScrollPanel>
				<c:CellTree ui:field="cellTree" />
			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:DockLayoutPanel unit="PX">
				<g:north size="40">
                                        <g:VerticalPanel>
                                            <g:Label ui:field="filterLabel"/>
                                            <g:HorizontalPanel>
                                                    <c:SimplePager ui:field='pager' />
                                                    <g:ListBox ui:field='pageSize' />
                                            </g:HorizontalPanel>
                                        </g:VerticalPanel>
				</g:north>
				<g:center>
                                        <c:DataGrid ui:field="dataGrid" />
				</g:center>
			</g:DockLayoutPanel>
		</g:center>
		<g:east size="300">
			<g:ScrollPanel>
				<g:HTMLPanel>
					<g:VerticalPanel>
						<g:Label ui:field="bannerLabel">Tu bude banner :)</g:Label>
						<g:SimplePanel ui:field="demandDetailPanel">
							<d:DemandDetailView ui:field="demandDetail" />
						</g:SimplePanel>
						<g:Button ui:field="offerBtn">Send Offer</g:Button>
					</g:VerticalPanel>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:east>
	</g:DockLayoutPanel>

</ui:UiBinder>
