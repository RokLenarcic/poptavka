<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail"
	xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

	<ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />
	<ui:style>
		.name {
		font-weight: bold;
		width: auto;
		}

		.panel {
		width: 400px;
		spacing: 5;
		}

		.list {
		width: 100px;
		}

		.gridMenu {
		margin: 7px 0 0;
		float:left;
		}

		.paginator {
		margin: 0px 10px;
		float: left;
		}

		.pageSize {
		float: left;
		height: 31px;
		padding: 6px;
		border-radius: 3px 3px 3px 3px;
		}

		.button {
		background: url(images/new-offer-green.png) no-repeat;
		padding: 0 0 1px 23px;
		border: none;
		color: #FFFFFF;
		font-weight: bold;
		height: 31px;
		width: 119px;
		float: left;
		}

	</ui:style>

	<g:DockLayoutPanel unit="PX"
		styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
		<g:west size="320">
			<g:DockLayoutPanel unit="PX">
				<g:north size="65">
					<g:HTMLPanel>
						<h2 class='{res.layout.toolbarHeader}'>
                                                    <ui:msg key="homeDemandsToolbarLabel">Category</ui:msg>
                                                </h2>
					</g:HTMLPanel>
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<c:CellTree ui:field="cellTree" />
					</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:west>
		<g:west size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:west>
		<g:center>
			<g:DockLayoutPanel unit="PX">
				<g:north size="65">
					<g:HTMLPanel styleName='{style.gridMenu}'>
						<g:DecoratorPanel ui:field="filterLabelPanel">
							<g:Label ui:field="filterLabel" />
						</g:DecoratorPanel>
						<g:Button ui:field="offerBtn" styleName='{style.button}'>
                                                    <ui:msg key="homeDemandsOfferBtn">Send Offer</ui:msg>
						</g:Button>
						<s:UniversalPagerWidget ui:field='pager'
							styleName='{style.paginator}' />
					</g:HTMLPanel>
				</g:north>
				<g:center>
					<c:DataGrid ui:field="dataGrid" />
				</g:center>
				<g:south size="30">
					<g:HTMLPanel></g:HTMLPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
		<g:east size="430">
			<g:DockLayoutPanel unit="PX">
				<g:north size="65">
					<g:HTMLPanel></g:HTMLPanel>
				</g:north>
				<g:center>
					<g:ScrollPanel>
						<g:HTMLPanel styleName='{res.layout.detailInfo}'>
							<g:Label ui:field="bannerLabel">Tu bude banner :)</g:Label>
							<g:SimplePanel ui:field="demandDetailPanel">
								<d:DemandDetailView ui:field="demandDetail" />
							</g:SimplePanel>
						</g:HTMLPanel>
					</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:east>
		<g:east size="20">
			<g:HTMLPanel></g:HTMLPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder>
