<!-- Uncomment this for XHTML entities <!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"> -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:ug="urn:import:com.eprovement.poptavka.client.user.widget.grid"
	xmlns:d="urn:import:com.eprovement.poptavka.client.user.widget.detail">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />
	<ui:style>
		.name {
			font-weight: bold;
			width: auto;
		}
		
		.panel {
			width: 400px;
			spacing: 5;
		}
		
		.list {
			width: 100px;
		}
		
	</ui:style>

	<g:HTMLPanel styleName='{res.layout.bodyFullContainer}'>
		<g:SplitLayoutPanel height="100%">

			<g:east size="400">
				<g:ScrollPanel>
					<g:HTMLPanel>
						<g:VerticalPanel>
							<g:Label ui:field="bannerLabel">Tu bude banner :)</g:Label>
							<g:SimplePanel ui:field="demandDetailPanel">
								<d:DemandDetailView ui:field="demandDetail" />
							</g:SimplePanel>
							<g:Button ui:field="offerBtn">Send Offer</g:Button>
						</g:VerticalPanel>
					</g:HTMLPanel>
				</g:ScrollPanel>
			</g:east>

			<g:center>
				<g:DockLayoutPanel unit="PX">
					<g:south size="50">
						<g:HTMLPanel>
							<c:SimplePager ui:field='pager' />
							<g:ListBox ui:field='pageSize' />
						</g:HTMLPanel>
					</g:south>

					<g:center>
						<ug:UniversalAsyncGrid ui:field='dataGrid' />
					</g:center>
				</g:DockLayoutPanel>

				<!-- <g:ScrollPanel> <g:HTMLPanel> <table width="100%"> <tr> <td> <g:ScrollPanel> 
					<ug:UniversalAsyncGrid ui:field='dataGrid' /> </g:ScrollPanel> </td> </tr> 
					<tr> <td align="center"> <c:SimplePager ui:field='pager' /> <g:ListBox ui:field='pageSize' 
					/> </td> </tr> </table> </g:HTMLPanel> </g:ScrollPanel> -->
			</g:center>

		</g:SplitLayoutPanel>
	</g:HTMLPanel>

</ui:UiBinder>
