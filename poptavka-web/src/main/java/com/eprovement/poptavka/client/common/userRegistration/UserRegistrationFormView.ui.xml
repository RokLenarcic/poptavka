<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:vm="urn:import:com.eprovement.poptavka.client.common" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    <ui:style>
        .error {
        font-size:10px;
        color: red;
        }
        
        .form-indent {
        margin-left: 321px !important;
        }
        
        .left-label {
        text-align: right;
        }
        
        .right-label {
        text-align: left;
        margin-left: -72px;
        }
    </ui:style>
    
    <b:FluidContainer>
        <b:FluidRow>
            <b:Column size="6">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="formAccountInfo">Account Info</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formEmail">E-mail</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="email">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formPassword">Password</ui:msg>*:
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="password">
                                <g:PasswordTextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formPasswordConfirm">Password Again</ui:msg>*:
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="passwordConfirm">
                                <g:PasswordTextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>

            <b:Column size="6">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="regSupFormContactPerson">Contact Person</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formFirstName">Name</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="firstName">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formLastName">Last Name</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="lastName">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>

                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formPhone">Phone</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="phone">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>

        <b:WellForm addStyleNames='no-header-form'> 
            <b:FluidRow>
                <b:Column size="2" addStyleNames='{style.form-indent}'>
                    <g:Label addStyleNames='{style.left-label}'>
                        <ui:msg key="formUserRegPrivatePerson">Private Person</ui:msg>
                    </g:Label>
                </b:Column>
                <b:Column size="2">
                    <g:HTMLPanel ui:field="companyChoicePanel" addStyleNames='{res.common.switchLeft}'>
                        <g:Button ui:field="personBtn"></g:Button>
                        <g:Button ui:field="companyBtn"></g:Button>
                    </g:HTMLPanel>
                </b:Column>
                <b:Column size="2">
                    <g:Label addStyleNames='{style.right-label}'>
                        <ui:msg key="formUserRegCompany">Company</ui:msg>
                    </g:Label>
                </b:Column>
            </b:FluidRow>
        </b:WellForm>

        <b:FluidRow ui:field="companyInfoPanel">
            <b:Column size="6">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="formCompanyInfo">Company Info</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formCompanyName">Company Name</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="companyName">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formTaxNumber">Tax Number</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="taxId">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formVatNumner">Vat Number</ui:msg>
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="identificationNumber">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>

        <b:FluidRow>
            <b:Column size="6">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="formAddress">Address</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>

                    <g:SimplePanel ui:field="addressHolder" />
                </b:WellForm>
            </b:Column>
            <b:Column size="6">
                <b:WellForm>
                    <b:FluidRow>
                        <b:Column size="12">
                            <b:Heading size="4">
                                <ui:msg key="formAditionalInfo">Aditional info</ui:msg>
                            </b:Heading>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formWebsite">Your Website</ui:msg>
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="website">
                                <g:TextBox />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                    <b:FluidRow>
                        <b:Column size="4">
                            <g:Label>
                                <ui:msg key="formDescription">Description:</ui:msg>*
                            </g:Label>
                        </b:Column>
                        <b:Column size="8">
                            <vm:ValidationMonitor ui:field="description">
                                <g:TextArea height="110px" width="92%" />
                            </vm:ValidationMonitor>
                        </b:Column>
                    </b:FluidRow>
                </b:WellForm>
            </b:Column>
        </b:FluidRow>
    </b:FluidContainer>
</ui:UiBinder>
