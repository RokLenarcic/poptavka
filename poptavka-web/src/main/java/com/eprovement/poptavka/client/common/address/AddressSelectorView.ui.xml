<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:v='urn:import:com.eprovement.poptavka.client.common.address'>

    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource'/>
<!--    TODO Martin - vhodit do StyleResource a vsade kde je validacia pouzit z resource-->
    <ui:style>
        .error {
        font-size:10px;
        color: red;
        }
        .listBoxWidth {
        width:200px;
        }
    </ui:style>

    <g:HTMLPanel>
        <table>
            <thead>
                <tr>
                    <th colspan="3">
                        <ui:msg key="address">Address</ui:msg>
                    </th>
                </tr>
            </thead>
            <tbody>
                <!--Temporary disabled-->
<!--                <tr>
                    <td>
                        <ui:msg key="addressCountry">Country</ui:msg>
                    </td>
                    <td>
                        <g:SuggestBox styleName="{style.listBoxWidth}" ui:field="country"/>
                        <g:Label styleName="{style.error}" ui:field="countryErrorLabel"/>
                    </td>
                </tr>-->
                <tr>
                    <td>
                        <ui:msg key="addressState">State</ui:msg>
                    </td>
                    <td>
                        <g:SuggestBox styleName="{style.listBoxWidth}" ui:field="region" limit="7"/>
                        <g:Label styleName="{style.error}" ui:field="regionErrorLabel"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <ui:msg key="addressCity">City</ui:msg>
                    </td>
                    <td>
                        <g:SuggestBox styleName="{style.listBoxWidth}" ui:field="city" limit="7"/>
                        <g:Label styleName="{style.error}" ui:field="cityErrorLabel"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <ui:msg key="addressZipCode">Zip Code</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field="zipCode"/>
                        <g:Label styleName="{style.error}" ui:field="zipErrorLabel"/>
                    </td>
                </tr>
<!--                <tr>
                    <td>
                        <ui:msg key="addressDistrict">District</ui:msg>
                    </td>
                    <td>
                        <g:ListBox styleName="{style.listBoxWidth}" ui:field="district"/>
                        <g:Label styleName="{style.error}" ui:field="districtErrorLabel"/>
                    </td>
                </tr>-->
                <tr>
                    <td>
                        <ui:msg key="addressStreet">Street</ui:msg>
                    </td>
                    <td>
                        <g:TextBox ui:field="street"/>
                        <g:Label styleName="{style.error}" ui:field="streetErrorLabel"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
