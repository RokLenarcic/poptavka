<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
                 
    <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource' />

    <g:DockLayoutPanel unit="EM" styleName='{res.layout.fullSize}'>
        <g:west size="15">
            <g:HTMLPanel>
                <!-- Supplier submenu -->
                <div ui:field="supMenu" style="display: block;">
                    <div class='{res.layout.submenuHeader}'>
                        Menu Supplier
                    </div>
                    <ul class='{res.layout.submenuList}'>
                        <li>
                            <g:Button ui:field="supNewDemands">
                                <ui:msg key="potentialDemands">Open projects</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supOffers">
                                ** INACTIVE **
                                <ui:msg key="offers">Active Contests</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supAssignedDemands">
                                ** INACTIVE **
                                <ui:msg key="assignedDemands">Current Work</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supCreateDemand">
                                <ui:msg key="createDemandLink">Create Demand</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="supCreateSupplier">
                                <ui:msg key="createSupplierLink">Create supplier</ui:msg>
                            </g:Button>
                        </li>

                        <li>
                            <g:Button ui:field="allDemands">
                                <ui:msg key="allDemandsLink">All Demands</ui:msg>
                            </g:Button>
                        </li>
                        <li>
                            <g:Button ui:field="allSuppliers">
                                <ui:msg key="allSuppliersLink">All Suppliers</ui:msg>
                            </g:Button>
                        </li>
                    </ul>
                </div>
            </g:HTMLPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel styleName='{res.layout.demandTabContent}'>
                <g:SimplePanel ui:field="contentPanel"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
