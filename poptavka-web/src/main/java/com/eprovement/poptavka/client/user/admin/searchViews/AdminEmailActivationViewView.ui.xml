<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .important {
        font-weight: bold;
        font-style: italic;
        }
        .rangeBox {
        width: 30px;
        margin-right:10px;
        margin-left:10px;
        }
        .margin {
            
        }
        .searchMainContent {
        width: 200px;
        } 
    </ui:style>
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />
        
    <g:HTMLPanel>
        <div>
            <ul>
                <li>
                    <ui:msg key="adminformId">Id</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">
                                        from
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="idFrom"/>
                                        to
                                        <g:TextBox styleName="{style.rangeBox}" ui:field="idTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <ui:msg key="adminformActivationLink">Activation link</ui:msg>
                </li>
                <li>
                    <g:TextBox ui:field="activationCode"/>
                </li>
                <li>
                    <ui:msg key="adminformTimeout">Timeout</ui:msg>
                </li>
                <li>
                    <table>
                        <tr>
                            <td width="200">
                                <g:HTMLPanel>
                                    <ui:msg key="formFromTo">from
                                        <p1:DateBox ui:field="timeoutFrom"/>
                                        to
                                        <p1:DateBox ui:field="timeoutTo"/>
                                    </ui:msg>
                                </g:HTMLPanel>
                            </td>
                        </tr>
                    </table>
                </li>
                <li>
                    <g:Button ui:field="clearBtn">
                        <ui:msg key="commonBtnClear">Clear</ui:msg>
                    </g:Button>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
