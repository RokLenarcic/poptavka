<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.eprovement.poptavka.client.user.widget.grid">

	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<g:DockLayoutPanel styleName='{res.layout.fullSize}'>
		<g:north size="65">
			<g:HorizontalPanel ui:field="toolBar"
				styleName='{res.layout.toolbarItemsBlock}'>
				<g:Label ui:field="tableNameLabel" />
				<g:ListBox ui:field="actionBox" selectedIndex="0">
					<g:item>
						<ui:msg key="commonListDefault">action</ui:msg>
					</g:item>
					<g:item>
						<ui:msg key="commonListRead">read</ui:msg>
					</g:item>
					<g:item>
						<ui:msg key="commonListUnread">unread</ui:msg>
					</g:item>
					<g:item>
						<ui:msg key="commonListStarred">star</ui:msg>
					</g:item>
					<g:item>
						<ui:msg key="listUnstarred">unstar</ui:msg>
					</g:item>
				</g:ListBox>
				<s:UniversalPagerWidget ui:field='pager' />
			</g:HorizontalPanel>
		</g:north>
		<g:east size="430">
			<g:SimplePanel ui:field="detailPanel">
				<g:HTMLPanel>
					<div>
						<strong>Defail detail panel</strong>
						<br />
						<br />
						<div>
							Default content....can contain some advertisements.
						</div>
					</div>
				</g:HTMLPanel>
			</g:SimplePanel>
		</g:east>
		<g:east size="25">
			<g:HTMLPanel></g:HTMLPanel>
		</g:east>
		<g:center>
			<s:UniversalTableGrid ui:field="dataGrid" />
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
