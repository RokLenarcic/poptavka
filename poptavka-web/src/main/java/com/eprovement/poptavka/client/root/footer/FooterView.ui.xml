<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res'
             type='com.eprovement.poptavka.resources.StyleResource' />

    <ui:style>
        .footer-block {
        display: block;
        padding: 4px 8px;
        color: #443b19;
        font-size: 12px;
        }

        .footerButton {
        background: none;
        border: none;
        float: right;
        color: #827a5e;
        padding: 2px 8px;
        font-size: 12px;
        }

        .footerButton:hover {
        text-decoration: underline;
        cursor: pointer;
        color: #237e00;
        }

        .separator {
        background: none;
        border: none;
        float: right;
        color: #827a5e;
        padding: 2px 0;
        font-size: 12px;
        }
    </ui:style>

    <!--Jaro please provide default style-->
    <g:HTMLPanel styleName='{res.layout.footerContainer}'>
        <g:HTMLPanel styleName=''>
            <g:Label styleName='pull-left {style.footer-block}'>
                <ui:msg key="footerCompanyName">2013 Â© eProvement s.r.o.</ui:msg>
            </g:Label>
        </g:HTMLPanel>
        <g:HTMLPanel styleName=''>
            <g:Button ui:field="termsAndConditions" styleName='{style.footerButton}'>
                <ui:msg key='footerTermsConditions'>Terms &amp; Conditions</ui:msg>
            </g:Button>
            <div class='{style.separator}'>|</div>
            <g:Button ui:field="contactUs" styleName='{style.footerButton}'>
                <ui:msg key='footerContactUs'>Contact us</ui:msg>
            </g:Button>
            <div class='{style.separator}'>|</div>
            <g:Button ui:field="aboutUs" styleName='{style.footerButton}'>
                <ui:msg key='footerAboutUs'>About us</ui:msg>
            </g:Button>
            <div class='{style.separator}'>|</div>
            <g:Button ui:field="faq" styleName='{style.footerButton}'>
                <ui:msg key='faq'>FAQ</ui:msg>
            </g:Button>
            <div class='{style.separator}'>|</div>
            <g:Button ui:field="privacyPolicy" styleName='{style.footerButton}'>
                <ui:msg key='privacyPolicy'>Privacy Policy</ui:msg>
            </g:Button>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
