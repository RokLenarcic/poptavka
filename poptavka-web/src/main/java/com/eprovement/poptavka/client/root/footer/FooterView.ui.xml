<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res'
		type='com.eprovement.poptavka.client.resources.StyleResource' />

	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.footer-block {
			display: block;
			padding: 10px;
			color: #000000;
		}
		
		.footer-block a {
			color: #000000;
		}
		
		.fl {
			float: left;
		}
		
		.fr {
			float: right;
		}
		
		.footerButton {
			background: none;
			border: none;
			float: right;
			color: #000000;
			padding: 10px;
			text-shadow: 0 0 1px #bbbbbb;
		}
		
		.footerButton:hover {
			text-decoration: underline;
			cursor: pointer;
		}
		
		.separator {
			background: none;
			border: none;
			float: right;
			color: #000000;
			padding: 10px 0;
			text-shadow: 0 0 1px #bbbbbb;
		}
	</ui:style>

	<g:HTMLPanel styleName='{res.layout.fullSize} {res.layout.footerContainer}'>
		<div
			style="margin: 0 auto; width: 472px; position: relative; padding: 0 10px;">
                        <g:Label styleName='{style.fl} {style.footer-block}'>
                                <ui:msg key="footerCompanyName">2012 Â© eProvement s.r.o.</ui:msg>
                        </g:Label>
			<div style="float: right; color: #000000; padding: 10px; text-shadow: 0 0 1px #bbbbbb;">
                                <ui:msg key='footerTermsConditions'>Terms &amp; Conditions</ui:msg>
			</div>
			<div class='{style.separator}'>|</div>
			<g:Button ui:field="contactUs" styleName='{style.footerButton}'>
                                <ui:msg key='footerContactUs'>Contact us</ui:msg>
                        </g:Button>
			<div class='{style.separator}'>|</div>
			<div style="float: right; color: #000000; padding: 10px; text-shadow: 0 0 1px #bbbbbb;">
                                <ui:msg key='footerAboutUs'>About us</ui:msg>
			</div>

		</div>
	</g:HTMLPanel>

</ui:UiBinder>
