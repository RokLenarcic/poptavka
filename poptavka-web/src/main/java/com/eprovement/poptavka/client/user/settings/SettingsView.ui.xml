<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DockLayoutPanel unit="EM" height="490px">
        <g:north size="2">
            <g:Label>
                <ui:msg key='contactInfoFormTitle'>My Profile</ui:msg>
            </g:Label>
        </g:north>
        <g:center>
            <g:StackLayoutPanel ui:field="stackPanel" unit='PX' height="440px">
                <g:stack>
                    <g:header size='30'>
                        User information
                    </g:header>
                    <g:SimplePanel ui:field="userSettingsPanel" />
                </g:stack>
                <g:stack>
                    <g:header size='30'>
                        Client information
                    </g:header>
                    <g:SimplePanel ui:field="clientSettingsPanel" />
                </g:stack>
                <g:stack>
                    <g:header size='30'>
                        Supplier information
                    </g:header>
                    <g:SimplePanel ui:field="supplierSettingsPanel" />
                </g:stack>
            </g:StackLayoutPanel>
        </g:center>
        <g:south size="2">
            <g:Button ui:field='updateButton'>
                <ui:msg key='demandDetailFormUpdateButton'>Update Profile</ui:msg>
            </g:Button>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>
