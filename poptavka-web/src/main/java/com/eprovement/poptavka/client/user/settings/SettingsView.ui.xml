<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

        <ui:with field='res' type='com.eprovement.poptavka.client.resources.StyleResource' />

	<ui:style>
		.left {
			float: left;
		}

		.header-image {
			margin: 5px 0 0 7px;
		}

		.button {
		background: url(images/new-offer-green.png) no-repeat;
		padding: 0 0 1px 23px;
		border: none;
		color: #FFFFFF;
		font-weight: bold;
		height: 31px;
		width: 119px;
		float: left;
		}

	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
		<g:west size="180">
			<g:DockLayoutPanel unit="PX">
				<g:north size="65" class='{res.layout.toolbarHeader}'>
					<g:HTMLPanel>
						<h2 class='{res.layout.toolbarHeader}'>
                                                    <ui:msg key="settingsMyProfile">My Profile</ui:msg>
                                                </h2>
					</g:HTMLPanel>
				</g:north>
				<g:center>
					<g:HTMLPanel></g:HTMLPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:west>
		<g:north size="65" class='{res.layout.toolbarHeader}'>
			<g:Button ui:field='updateButton' styleName='{style.button}'>
				<ui:msg key='settingsUpdateButton'>Update Profile</ui:msg>
			</g:Button>
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:StackLayoutPanel ui:field="stackPanel" unit='PX'
					height="440px" width="1040px">
					<g:stack>
						<g:customHeader size='30'>
							<g:HTMLPanel>
                                                            <g:Label styleName='{style.left}'>
                                                                <ui:msg key="settingsUserInformation">User information</ui:msg>
                                                            </g:Label>
								<cm:StatusIconLabel styleName='{style.left} {style.header-image}'
									ui:field='userInfoStatus' />
							</g:HTMLPanel>
						</g:customHeader>
						<g:SimplePanel ui:field="userSettingsPanel" />
					</g:stack>
					<g:stack>
						<g:customHeader size='30'>
							<g:HTMLPanel>
                                                            <g:Label styleName='{style.left}'>
                                                                <ui:msg key="settingsClientInformation">Client information</ui:msg>
                                                            </g:Label>
								<cm:StatusIconLabel styleName='{style.left} {style.header-image}'
									ui:field='clientInfoStatus' />
							</g:HTMLPanel>
						</g:customHeader>
						<g:SimplePanel ui:field="clientSettingsPanel" />
					</g:stack>
					<g:stack>
						<g:customHeader size='30'>
							<g:HTMLPanel>
								<g:Label styleName='{style.left}'>
                                                                    <ui:msg key="settingsSupplierInformation">Supplier information</ui:msg>
                                                                </g:Label>
								<cm:StatusIconLabel styleName='{style.left} {style.header-image}'
									ui:field='supplierInfoStatus' />
							</g:HTMLPanel>
						</g:customHeader>
						<g:SimplePanel ui:field="supplierSettingsPanel" />
					</g:stack>
				</g:StackLayoutPanel>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
