<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />

    <ui:style>
        .left {
        float: left;
        }

        .header-image {
        margin: 5px 0 0 7px;
        }

        .button {
        background: url(images/new-offer-green.png) no-repeat;
        padding: 0 0 1px 23px;
        border: none;
        color: #FFFFFF;
        font-weight: bold;
        height: 31px;
        width: 119px;
        float: left;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX"
                       styleName='{res.layout.bodyFullContainer} {res.layout.bodyNavbar}'>
        <g:west size="180">
            <g:DockLayoutPanel unit="PX">
                <g:north size="65">
                    <g:HTMLPanel>
                        <h2 class='{res.layout.toolbarHeader}'>
                            <ui:msg key="clientDemandsToolbarLabel">Settings</ui:msg>
                        </h2>
                    </g:HTMLPanel>
                </g:north>
                <g:center>
                    <g:HTMLPanel>
                        <!-- Client submenu -->
                        <div ui:field="supMenu" style="display: block;">
                            <ul class='{res.layout.submenuList}'>
                                <li>
                                    <g:HTMLPanel>
                                        <g:Button ui:field="menuUserBtn">
                                            <ui:msg key="menuSettingsUser">User information</ui:msg>
                                        </g:Button>
                                        <cm:StatusIconLabel styleName='{style.left} {style.header-image}'
                                                            ui:field='infoStatus1' />
                                    </g:HTMLPanel>
                                </li>
                                <li>
                                    <g:HTMLPanel>
                                        <g:Button ui:field="menuClientBtn">
                                            <ui:msg key="menuSettingsClient">Client information</ui:msg>
                                        </g:Button>
                                        <cm:StatusIconLabel styleName='{style.left} {style.header-image}'
                                                            ui:field='infoStatus2' />
                                    </g:HTMLPanel>
                                </li>
                                <li>
                                    <g:HTMLPanel>
                                        <g:Button ui:field="menuSupplierBtn">
                                            <ui:msg key="menuSettingsClient">Client information</ui:msg>
                                        </g:Button>
                                        <cm:StatusIconLabel styleName='{style.left} {style.header-image}'
                                                            ui:field='infoStatus3' />
                                    </g:HTMLPanel>
                                </li>
                                <li>
                                    <g:HTMLPanel>
                                        <g:Button ui:field="menuSystemBtn">
                                            <ui:msg key="menuSettingsSystem">System information</ui:msg>
                                        </g:Button>
                                        <cm:StatusIconLabel styleName='{style.left} {style.header-image}'
                                                            ui:field='infoStatus4' />
                                    </g:HTMLPanel>
                                </li>
                            </ul>
                        </div>
                    </g:HTMLPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="65" class='{res.layout.toolbarHeader}'>
                    <g:Button ui:field='updateButton' styleName='{style.button}'>
                        <ui:msg key='settingsUpdateButton'>Update Profile</ui:msg>
                    </g:Button>
                </g:north>
                <g:center>
                    <g:ScrollPanel>
                        <g:SimplePanel ui:field="contentPanel" />
                    </g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
