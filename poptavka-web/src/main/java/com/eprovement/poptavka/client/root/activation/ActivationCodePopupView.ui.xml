<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

    <!-- injecting style resources -->
    <ui:with field='res'
             type='com.eprovement.poptavka.client.resources.StyleResource' />

    <g:VerticalPanel>
        <cm:StatusIconLabel ui:field='statusLabel' style='{res.common.infoMessage}'/>
        <g:Label>
            <ui:msg key="enterActivationCode">Please enter the activation code below:</ui:msg>
        </g:Label>
        <g:TextBox ui:field="activationCodeBox" />
        <g:HorizontalPanel>
            <g:Button ui:field="activateButton">
                <ui:msg key="activateButton">Activate</ui:msg>
            </g:Button>
            <g:Button ui:field="sendAgainButton">
                <ui:msg key="sendAgainButton">Send again</ui:msg>
            </g:Button>
            <g:Button ui:field="reportButton" visible="false">
                <ui:msg key="report">Report problem</ui:msg>
            </g:Button>
            <g:Button ui:field="closeButton">
                <ui:msg key="close">Close</ui:msg>
            </g:Button>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
