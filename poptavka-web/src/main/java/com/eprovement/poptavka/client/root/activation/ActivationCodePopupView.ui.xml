<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:cm="urn:import:com.eprovement.poptavka.client.common">

    <!-- injecting style resources -->
    <ui:with field='res' type='com.eprovement.poptavka.resources.StyleResource' />
    
    <ui:style>
        .info-block {
        background: url(images/login-popup/info-icon.gif) no-repeat 15px 8px #DDD8C5;
        border: medium none;
        border-radius: 5px 5px 5px 5px;
        color: #000000;
        min-height: 27px;
        margin: 0;
        padding: 17px 35px 8px 60px;
        }
        
        .input-position {
        margin-top: 10px;
        }
    </ui:style>

    <g:VerticalPanel styleName='{res.common.validationContainer}'>
        <g:HTMLPanel styleName='{style.info-block}'>
            <cm:StatusIconLabel ui:field='statusLabel'/>
            <g:HTMLPanel>
                <ui:msg key="activationEnterActivationCode">Please enter the activation code below:</ui:msg>
            </g:HTMLPanel>
        </g:HTMLPanel>
        <g:TextBox ui:field="activationCodeBox" addStyleNames='{style.input-position}'/>
        <g:HTMLPanel>
            <hr />
        </g:HTMLPanel>
        <g:HorizontalPanel>
            <g:Button ui:field="sendAgainButton" styleName='{res.common.buttonLongGrey}'>
                <ui:msg key="activationBtnSendAgain">Send again</ui:msg>
            </g:Button>
            <g:Button ui:field="reportButton" visible="false" styleName='{res.common.buttonLongGrey}'>
                <ui:msg key="commonBtnReport">Report problem</ui:msg>
            </g:Button>
            <g:Button ui:field="closeButton" styleName='{res.common.buttonGrey}'>
                <ui:msg key="commonBtnClose">Close</ui:msg>
            </g:Button>
            <g:Button ui:field="activateButton" styleName='{res.common.buttonGreen}'>
                <ui:msg key="activationBtnActivate">Activate</ui:msg>
            </g:Button>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
