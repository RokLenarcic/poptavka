<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:vm="urn:import:com.eprovement.poptavka.client.common"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<!-- injecting style resources -->
	<ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />
	<ui:style>
		.error {
		font-size:10px;
		color: red;
		}
		.tab-panel-inputs {
		padding-top: 20px;
		width:940px;
		}
		.text-left {
		text-align: right;
		}
	</ui:style>
	<g:HTMLPanel styleName='{style.tab-panel-inputs}'>
		<b:FluidContainer>
			<b:FluidRow>
				<b:Column size="12">
					<b:FluidRow>
						<b:Column size="2">
							<g:HTMLPanel></g:HTMLPanel>
						</b:Column>
						<b:Column size="7">
							<b:Heading size="4">
								<ui:msg key="formCompanyInfo">Company Info</ui:msg>
							</b:Heading>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formCompanyName">Company Name</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="companyName">
								<g:TextBox title="companyName" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formIdentificationNumber">Identification Number</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="identificationNumber">
								<g:TextBox title="identificationNumber" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formTaxNumber">Tax Number</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="taxId">
								<g:TextBox title="taxId" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formWebsite">Your Website</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="website">
								<g:TextBox title="website" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="2">
							<g:HTMLPanel></g:HTMLPanel>
						</b:Column>
						<b:Column size="7">
							<b:Heading size="4">
								<ui:msg key="formAddress">Address</ui:msg>
							</b:Heading>
						</b:Column>
					</b:FluidRow>

					<g:SimplePanel ui:field="addressHolder" />

					<b:FluidRow>
						<b:Column size="2">
							<g:HTMLPanel></g:HTMLPanel>
						</b:Column>
						<b:Column size="7">
							<b:Heading size="4">
								<ui:msg key="formDescription">Company Description</ui:msg>
							</b:Heading>
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="2">
							<g:HTMLPanel></g:HTMLPanel>
						</b:Column>
						<b:Column size="8">
							<vm:ValidationMonitor ui:field="description">
								<g:TextArea title="description" height="200px" width="300px" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>
				</b:Column>
			</b:FluidRow>
		</b:FluidContainer>
	</g:HTMLPanel>
</ui:UiBinder>
