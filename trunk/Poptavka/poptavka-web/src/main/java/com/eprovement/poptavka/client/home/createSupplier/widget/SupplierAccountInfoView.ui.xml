<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cm="urn:import:com.eprovement.poptavka.client.common"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:vm="urn:import:com.eprovement.poptavka.client.common"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<!-- injecting style resources -->
	<ui:with field='res'
		type='com.eprovement.poptavka.resources.StyleResource' />
	<ui:style>
		.error {
		font-size:10px;
		color: red;
		}
		.tab-panel-inputs {
		padding-top: 20px;
		width:940px;
		}
		.text-left {
		text-align: right;
		}
	</ui:style>
	<g:HTMLPanel styleName='{style.tab-panel-inputs}'>
		<b:FluidContainer>
			<b:FluidRow>
				<b:Column size="12">
					<b:FluidRow>
						<b:Column size="12">
							<b:Heading size="4">
								<ui:msg key="formAccountInfo">Account Info</ui:msg>
							</b:Heading>
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formEmail">E-mail</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="email">
								<g:TextBox title="email" />
							</vm:ValidationMonitor>
						</b:Column>
						<b:Column size="1">
							<cm:StatusIconLabel ui:field="mailStatus"
								visible="false" state="LOAD_24" description="Checking email availability" />
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formPassword">Password</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="password">
								<g:PasswordTextBox title="password" />
							</vm:ValidationMonitor>
						</b:Column>
						<b:Column size="1">
							<cm:StatusIconLabel ui:field="passwordStatus"
								visible="false" state="ERROR_24" description="Short password" />
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formPasswordConfirm">Password Again</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="passwordConfirm">
								<g:PasswordTextBox title="password" />
							</vm:ValidationMonitor>
						</b:Column>
						<b:Column size="1">
							<cm:StatusIconLabel ui:field="passwordCheckStatus"
								visible="false" state="ERROR_24" description="Passwords don't match" />
						</b:Column>
					</b:FluidRow>
					<b:FluidRow>
						<b:Column size="12">
							<b:Heading size="4">
								<ui:msg key="regSupFormContactPerson">Contact Person</ui:msg>
							</b:Heading>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formFirstName">Name</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="firstName">
								<g:TextBox title="firstName" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formLastName">Last Name</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="lastName">
								<g:TextBox title="lastName" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>

					<b:FluidRow>
						<b:Column size="2">
							<g:Label styleName='pull-right'>
								<ui:msg key="formPhone">Phone</ui:msg>
							</g:Label>
						</b:Column>
						<b:Column size="7">
							<vm:ValidationMonitor ui:field="phone">
								<g:TextBox title="phone" />
							</vm:ValidationMonitor>
						</b:Column>
					</b:FluidRow>
				</b:Column>
			</b:FluidRow>
		</b:FluidContainer>
	</g:HTMLPanel>
</ui:UiBinder>
